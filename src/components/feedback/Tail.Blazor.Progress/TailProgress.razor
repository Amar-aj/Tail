@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.Progress

<div class="@GetWrapperClasses()">
    @if (ShowLabel && LabelPosition == ProgressLabelPosition.Outside)
    {
        <div class="flex justify-between mb-1">
            <span class="text-sm font-medium" style="color: var(--color-text-primary);">@Label</span>
            <span class="text-sm" style="color: var(--color-text-secondary);">@Value%</span>
        </div>
    }
    <div class="@GetProgressBarClasses()" style="@GetProgressBarStyles()">
        <div 
            class="@GetProgressFillClasses()"
            style="@GetProgressFillStyles()"
            role="progressbar"
            aria-valuenow="@Value"
            aria-valuemin="0"
            aria-valuemax="100">
            @if (ShowLabel && LabelPosition == ProgressLabelPosition.Inside)
            {
                <span class="text-xs font-medium text-white">@Value%</span>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Value { get; set; }
    [Parameter] public ProgressVariant Variant { get; set; } = ProgressVariant.Primary;
    [Parameter] public ProgressSize Size { get; set; } = ProgressSize.Md;
    [Parameter] public bool ShowLabel { get; set; }
    [Parameter] public ProgressLabelPosition LabelPosition { get; set; } = ProgressLabelPosition.Outside;
    [Parameter] public string? Label { get; set; }
    [Parameter] public bool Animated { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetProgressBarClasses()
    {
        var classes = new List<string> { "w-full", "rounded-full", "overflow-hidden" };

        classes.Add(Size switch
        {
            ProgressSize.Sm => "h-1",
            ProgressSize.Md => "h-2",
            ProgressSize.Lg => "h-3",
            ProgressSize.Xl => "h-4",
            _ => "h-2"
        });

        return string.Join(" ", classes);
    }

    private string GetProgressBarStyles()
    {
        var styles = new List<string>();
        styles.Add($"background-color: var(--color-surface-secondary, #e5e7eb)");
        return string.Join("; ", styles);
    }

    private string GetProgressFillClasses()
    {
        var classes = new List<string> { "h-full", "rounded-full", "transition-all", "duration-300", "flex", "items-center", "justify-center" };

        if (Animated)
        {
            classes.Add("animate-pulse");
        }

        return string.Join(" ", classes);
    }

    private string GetProgressFillStyles()
    {
        var styles = new List<string>();
        styles.Add($"width: {Value}%");

        if (Variant == ProgressVariant.Primary)
        {
            styles.Add($"background-color: var(--color-primary)");
        }
        else if (Variant == ProgressVariant.Success)
        {
            styles.Add($"background-color: var(--color-success)");
        }
        else if (Variant == ProgressVariant.Warning)
        {
            styles.Add($"background-color: var(--color-warning)");
        }
        else if (Variant == ProgressVariant.Danger)
        {
            styles.Add($"background-color: var(--color-danger)");
        }
        else
        {
            styles.Add($"background-color: var(--color-info)");
        }

        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }

        return string.Join("; ", styles);
    }
}

