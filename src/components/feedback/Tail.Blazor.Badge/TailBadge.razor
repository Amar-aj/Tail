@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.Badge

<span class="@GetBadgeClasses()" style="@GetBadgeStyles()">
    @if (ShowDot)
    {
        <span class="inline-block w-2 h-2 rounded-full mr-1" style="background-color: currentColor;"></span>
    }
    @ChildContent
</span>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public BadgeVariant Variant { get; set; } = BadgeVariant.Primary;
    [Parameter] public BadgeSize Size { get; set; } = BadgeSize.Md;
    [Parameter] public bool ShowDot { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetBadgeClasses()
    {
        var classes = new List<string> { "inline-flex", "items-center", "font-medium", "rounded-full" };

        classes.Add(Size switch
        {
            BadgeSize.Sm => "px-2 py-0.5 text-xs",
            BadgeSize.Md => "px-2.5 py-1 text-sm",
            BadgeSize.Lg => "px-3 py-1.5 text-base",
            _ => "px-2.5 py-1 text-sm"
        });

        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }

        return string.Join(" ", classes);
    }

    private string GetBadgeStyles()
    {
        var styles = new List<string>();

        if (Variant == BadgeVariant.Primary)
        {
            styles.Add($"background-color: var(--color-primary)");
            styles.Add($"color: var(--color-text-on-primary, white)");
        }
        else if (Variant == BadgeVariant.Success)
        {
            styles.Add($"background-color: var(--color-success)");
            styles.Add($"color: var(--color-text-on-success, white)");
        }
        else if (Variant == BadgeVariant.Warning)
        {
            styles.Add($"background-color: var(--color-warning)");
            styles.Add($"color: var(--color-text-on-warning, white)");
        }
        else if (Variant == BadgeVariant.Danger)
        {
            styles.Add($"background-color: var(--color-danger)");
            styles.Add($"color: var(--color-text-on-danger, white)");
        }
        else if (Variant == BadgeVariant.Info)
        {
            styles.Add($"background-color: var(--color-info)");
            styles.Add($"color: var(--color-text-on-info, white)");
        }
        else
        {
            styles.Add($"background-color: var(--color-gray, #6b7280)");
            styles.Add($"color: white");
        }

        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }

        return string.Join("; ", styles);
    }
}

