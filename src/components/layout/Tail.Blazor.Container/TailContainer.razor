@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.Container

<div class="@GetContainerClasses()" style="@GetContainerStyles()">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public ContainerSize Size { get; set; } = ContainerSize.Md;
    [Parameter] public string? Style { get; set; }
    [Parameter] public bool HideScrollbars { get; set; } = true;

    private string GetContainerClasses()
    {
        var classes = new List<string> { "mx-auto", "px-2" };

        classes.Add(Size switch
        {
            ContainerSize.Sm => "max-w-sm",
            ContainerSize.Md => "max-w-md",
            ContainerSize.Lg => "max-w-lg",
            ContainerSize.Xl => "max-w-xl",
            ContainerSize.Xxl => "max-w-2xl",
            ContainerSize.Full => "max-w-full",
            _ => "max-w-md"
        });

        // Keep container responsive padding and ensure smooth scrolling when content overflows
        // Use Tailwind-only utilities to visually hide scrollbars while preserving scrolling.
        if (HideScrollbars)
        {
            // overflow-auto allows scrolling; scroll-smooth enables smooth behavior.
            // pr-4 and -mr-4 push the scrollbar outside the visible content area in WebKit browsers.
            // [scrollbar-width:none] hides scrollbar in Firefox; [-ms-overflow-style:none] hides IE/Edge legacy scrollbar.
            classes.AddRange(new[] { "overflow-auto", "scroll-smooth", "pr-4", "-mr-4", "[scrollbar-width:none]", "[-ms-overflow-style:none]" });
        }
        else
        {
            classes.Add("overflow-visible");
        }

        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }

        return string.Join(" ", classes);
    }

    private string GetContainerStyles()
    {
        var styles = new List<string>();
        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }
        return string.Join("; ", styles);
    }
}

