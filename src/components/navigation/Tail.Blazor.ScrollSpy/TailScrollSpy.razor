@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.ScrollSpy

<div class="@GetScrollSpyClasses()">
    @foreach (var item in Items)
    {
        <a
            href="@item.Href"
            class="@GetItemClasses(item)"
            @onclick="() => HandleClick(item)"
            style="@GetItemStyles(item)">
            @item.Label
        </a>
    }
</div>

@code {
    [Parameter] public List<ScrollSpyItem> Items { get; set; } = new();
    [Parameter] public string? ActiveId { get; set; }
    [Parameter] public ScrollSpyPosition Position { get; set; } = ScrollSpyPosition.Left;
    [Parameter] public EventCallback<ScrollSpyItem> OnItemClick { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetScrollSpyClasses()
    {
        var classes = new List<string> { "flex", "flex-col", "space-y-2" };

        classes.Add(Position switch
        {
            ScrollSpyPosition.Left => "sticky top-4",
            ScrollSpyPosition.Right => "sticky top-4",
            _ => "sticky top-4"
        });

        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }

        return string.Join(" ", classes);
    }

    private string GetItemClasses(ScrollSpyItem item)
    {
        var classes = new List<string> { "px-4", "py-2", "rounded-lg", "transition-colors" };

        if (item.Id == ActiveId)
        {
            classes.Add("bg-primary text-white");
        }
        else
        {
            classes.Add("hover:bg-gray-100");
        }

        return string.Join(" ", classes);
    }

    private string GetItemStyles(ScrollSpyItem item)
    {
        var styles = new List<string>();

        if (item.Id == ActiveId)
        {
            styles.Add($"background-color: var(--color-primary)");
            styles.Add($"color: var(--color-text-on-primary, white)");
        }
        else
        {
            styles.Add($"color: var(--color-text-primary, black)");
        }

        return string.Join("; ", styles);
    }

    private async Task HandleClick(ScrollSpyItem item)
    {
        await OnItemClick.InvokeAsync(item);
    }
}

@code {
    public class ScrollSpyItem
    {
        public string Id { get; set; } = string.Empty;
        public string Label { get; set; } = string.Empty;
        public string? Href { get; set; }
    }

    public enum ScrollSpyPosition
    {
        Left,
        Right
    }
}

