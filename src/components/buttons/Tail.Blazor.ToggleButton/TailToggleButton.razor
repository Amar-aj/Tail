@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.ToggleButton

<button 
    type="@Type"
    class="@GetButtonClasses()"
    disabled="@Disabled"
    @onclick="HandleToggle"
    @attributes="GetCombinedAttributes()"
    aria-pressed="@IsToggled.ToString().ToLower()"
    aria-label="@AriaLabel"
    title="@Tooltip">
    @if (IsToggled)
    {
        @if (ToggledContent != null)
        {
            @ToggledContent
        }
        else
        {
            @ChildContent
        }
    }
    else
    {
        @ChildContent
    }
</button>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public RenderFragment? ToggledContent { get; set; }
    [Parameter] public ButtonVariant Variant { get; set; } = ButtonVariant.Primary;
    [Parameter] public ButtonSize Size { get; set; } = ButtonSize.Md;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool IsToggled { get; set; }
    [Parameter] public EventCallback<bool> IsToggledChanged { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public string? AriaLabel { get; set; }
    [Parameter] public string? Tooltip { get; set; }
    [Parameter] public string Type { get; set; } = "button";
    [Parameter] public bool AutoFocus { get; set; } = false;

    private string GetButtonClasses()
    {
        var classes = new List<string> { "inline-flex", "items-center", "justify-center", "font-medium", "rounded-lg", "transition-all", "duration-200", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2" };

        // Size classes
        classes.Add(Size switch
        {
            ButtonSize.Xs => "px-2 py-1 text-xs",
            ButtonSize.Sm => "px-3 py-1.5 text-sm",
            ButtonSize.Md => "px-4 py-2 text-base",
            ButtonSize.Lg => "px-5 py-2.5 text-lg",
            ButtonSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        // Toggled state
        if (IsToggled)
        {
            classes.Add("ring-2 ring-offset-2 scale-105");
            classes.Add(Variant switch
            {
                ButtonVariant.Primary => "bg-primary text-on-primary ring-primary hover:bg-primary/90",
                ButtonVariant.Success => "bg-success text-on-success ring-success hover:bg-success/90",
                ButtonVariant.Warning => "bg-warning text-on-warning ring-warning hover:bg-warning/90",
                ButtonVariant.Danger => "bg-danger text-on-danger ring-danger hover:bg-danger/90",
                ButtonVariant.Info => "bg-info text-on-info ring-info hover:bg-info/90",
                ButtonVariant.Outline => "bg-primary text-on-primary ring-primary hover:bg-primary/90",
                ButtonVariant.Soft => "bg-primary text-on-primary ring-primary hover:bg-primary/90",
                ButtonVariant.Ghost => "bg-primary text-on-primary ring-primary hover:bg-primary/90",
                ButtonVariant.Link => "bg-primary text-on-primary ring-primary hover:bg-primary/90",
                _ => "bg-primary text-on-primary ring-primary hover:bg-primary/90"
            });
        }
        else
        {
            classes.Add(Variant switch
            {
                ButtonVariant.Primary => "text-primary hover:bg-primary/10 hover:text-primary",
                ButtonVariant.Success => "text-success hover:bg-success/10 hover:text-success",
                ButtonVariant.Warning => "text-warning hover:bg-warning/10 hover:text-warning",
                ButtonVariant.Danger => "text-danger hover:bg-danger/10 hover:text-danger",
                ButtonVariant.Info => "text-info hover:bg-info/10 hover:text-info",
                ButtonVariant.Outline => "border border-primary text-primary hover:bg-primary/10",
                ButtonVariant.Soft => "bg-primary/20 text-primary hover:bg-primary/30",
                ButtonVariant.Ghost => "text-primary hover:bg-primary/10",
                ButtonVariant.Link => "text-primary underline hover:bg-primary/10",
                _ => "text-primary hover:bg-primary/10"
            });
        }

        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }

        return string.Join(" ", classes);
    }

    private async Task HandleToggle(MouseEventArgs e)
    {
        if (!Disabled)
        {
            IsToggled = !IsToggled;
            await IsToggledChanged.InvokeAsync(IsToggled);
            if (OnClick.HasDelegate)
            {
                await OnClick.InvokeAsync(e);
            }
        }
    }

    private Dictionary<string, object> GetCombinedAttributes()
    {
        var attributes = new Dictionary<string, object>();
        
        // Copy AdditionalAttributes if they exist
        if (AdditionalAttributes != null)
        {
            foreach (var attr in AdditionalAttributes)
            {
                attributes[attr.Key] = attr.Value;
            }
        }
        
        // Only add autofocus if explicitly requested and not already in AdditionalAttributes
        if (AutoFocus && !attributes.ContainsKey("autofocus"))
        {
            attributes["autofocus"] = true;
        }
        
        return attributes;
    }
}

