@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.PasswordStrengthMeter

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@PasswordInputId">
            @Label
            @if (Required)
            {
                <span class="text-red-500">*</span>
            }
        </label>
    }
    <div class="relative">
        <input 
            id="@PasswordInputId"
            type="@(ShowPassword ? "text" : "password")"
            class="@GetInputClasses()"
            value="@Value"
            @oninput="HandleInput"
            placeholder="@Placeholder"
            disabled="@Disabled"
            required="@Required"
            @attributes="AdditionalAttributes"
            style="@GetInputStyles()" />
        <button 
            type="button"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700"
            @onclick="TogglePasswordVisibility">
            @if (ShowPassword)
            {
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
            }
            else
            {
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
            }
        </button>
    </div>
    @if (ShowStrengthMeter && !string.IsNullOrEmpty(Value))
    {
        <div class="mt-2">
            <div class="flex gap-1 h-2">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="flex-1 rounded @GetStrengthBarClass(i)" style="@GetStrengthBarStyle(i)"></div>
                }
            </div>
            <p class="text-xs mt-1 @GetStrengthTextClass()">@GetStrengthText()</p>
        </div>
    }
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-sm text-red-600 mt-1">
            @ErrorMessage
        </div>
    }
</div>

@code {
    private string PasswordInputId { get; set; } = Guid.NewGuid().ToString();
    private bool ShowPassword { get; set; }

    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public PasswordStrengthMeterSize Size { get; set; } = PasswordStrengthMeterSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ShowStrengthMeter { get; set; } = true;
    [Parameter] public string? Style { get; set; }

    private PasswordStrength GetStrength()
    {
        if (string.IsNullOrEmpty(Value)) return PasswordStrength.VeryWeak;

        var score = 0;
        if (Value.Length >= 8) score++;
        if (Value.Length >= 12) score++;
        if (Value.Any(char.IsUpper)) score++;
        if (Value.Any(char.IsLower)) score++;
        if (Value.Any(char.IsDigit)) score++;
        if (Value.Any(c => !char.IsLetterOrDigit(c))) score++;

        return score switch
        {
            <= 1 => PasswordStrength.VeryWeak,
            2 => PasswordStrength.Weak,
            3 => PasswordStrength.Fair,
            4 => PasswordStrength.Good,
            _ => PasswordStrength.Strong
        };
    }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "block", "w-full", "rounded-lg", "border", "transition-colors", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2", "pr-10" };

        classes.Add(Size switch
        {
            PasswordStrengthMeterSize.Xs => "px-2 py-1 text-xs",
            PasswordStrengthMeterSize.Sm => "px-3 py-1.5 text-sm",
            PasswordStrengthMeterSize.Md => "px-4 py-2 text-base",
            PasswordStrengthMeterSize.Lg => "px-5 py-2.5 text-lg",
            PasswordStrengthMeterSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        classes.Add("border-gray-300");

        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed bg-gray-50");
        }

        return string.Join(" ", classes);
    }

    private string GetInputStyles()
    {
        var styles = new List<string>();
        styles.Add($"background-color: var(--color-surface, white)");
        styles.Add($"color: var(--color-text-primary, black)");
        styles.Add($"border-color: var(--color-border, #d1d5db)");
        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }
        return string.Join("; ", styles);
    }

    private string GetStrengthBarClass(int index)
    {
        var strength = GetStrength();
        var strengthLevel = (int)strength;
        return index < strengthLevel ? "" : "bg-gray-200";
    }

    private string GetStrengthBarStyle(int index)
    {
        var strength = GetStrength();
        var strengthLevel = (int)strength;
        if (index >= strengthLevel) return "";

        var color = strength switch
        {
            PasswordStrength.VeryWeak => "#ef4444",
            PasswordStrength.Weak => "#f97316",
            PasswordStrength.Fair => "#eab308",
            PasswordStrength.Good => "#22c55e",
            PasswordStrength.Strong => "#10b981",
            _ => "#d1d5db"
        };

        return $"background-color: {color}";
    }

    private string GetStrengthTextClass()
    {
        var strength = GetStrength();
        return strength switch
        {
            PasswordStrength.VeryWeak => "text-red-600",
            PasswordStrength.Weak => "text-orange-600",
            PasswordStrength.Fair => "text-yellow-600",
            PasswordStrength.Good => "text-green-600",
            PasswordStrength.Strong => "text-green-700",
            _ => "text-gray-500"
        };
    }

    private string GetStrengthText()
    {
        return GetStrength() switch
        {
            PasswordStrength.VeryWeak => "Very Weak",
            PasswordStrength.Weak => "Weak",
            PasswordStrength.Fair => "Fair",
            PasswordStrength.Good => "Good",
            PasswordStrength.Strong => "Strong",
            _ => ""
        };
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        Value = e.Value?.ToString();
        await ValueChanged.InvokeAsync(Value);
    }

    private void TogglePasswordVisibility()
    {
        ShowPassword = !ShowPassword;
    }
}

