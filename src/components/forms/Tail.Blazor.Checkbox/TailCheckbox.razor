@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.Checkbox

<label class="@GetLabelClasses()" @attributes="AdditionalAttributes">
    <input 
        type="checkbox"
        class="@GetCheckboxClasses()"
        checked="@IsChecked"
        indeterminate="@IsIndeterminate"
        @onchange="HandleChange"
        disabled="@Disabled"
        aria-label="@AriaLabel"
        title="@Tooltip"
        style="@GetCheckboxStyles()" />
    @if (CustomCheckIcon != null && IsChecked)
    {
        <span class="absolute inset-0 flex items-center justify-center pointer-events-none">
            @CustomCheckIcon
        </span>
    }
    @if (!string.IsNullOrEmpty(Label))
    {
        <span class="@GetTextClasses()">@Label</span>
    }
    @if (ChildContent != null)
    {
        <span class="@GetTextClasses()">@ChildContent</span>
    }
</label>
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="text-sm text-red-600 mt-1" style="color: var(--color-error, #dc2626);">
        @ErrorMessage
    </div>
}

@code {
    [Parameter] public bool IsChecked { get; set; }
    [Parameter] public EventCallback<bool> IsCheckedChanged { get; set; }
    [Parameter] public CheckboxSize Size { get; set; } = CheckboxSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool IsIndeterminate { get; set; }
    [Parameter] public RenderFragment? CustomCheckIcon { get; set; }
    [Parameter] public string? AriaLabel { get; set; }
    [Parameter] public string? Tooltip { get; set; }
    [Parameter] public EventCallback<bool> OnCheckedChanged { get; set; }

    private string GetLabelClasses()
    {
        var classes = new List<string> { "inline-flex", "items-center", "cursor-pointer", "relative" };
        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed");
        }
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetCheckboxClasses()
    {
        var classes = new List<string> { "rounded", "border-2", "transition-all", "duration-200", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2", "appearance-none" };

        classes.Add(Size switch
        {
            CheckboxSize.Xs => "w-3 h-3",
            CheckboxSize.Sm => "w-4 h-4",
            CheckboxSize.Md => "w-5 h-5",
            CheckboxSize.Lg => "w-6 h-6",
            CheckboxSize.Xl => "w-7 h-7",
            _ => "w-5 h-5"
        });

        if (IsChecked || IsIndeterminate)
        {
            classes.Add("bg-primary border-primary");
        }
        else
        {
            classes.Add("border-gray-300 hover:border-primary");
        }

        if (!Disabled)
        {
            classes.Add("focus:ring-primary");
        }

        return string.Join(" ", classes);
    }

    private string GetTextClasses()
    {
        var classes = new List<string> { "transition-colors", "duration-200" };

        classes.Add(Size switch
        {
            CheckboxSize.Xs => "ml-2 text-xs",
            CheckboxSize.Sm => "ml-2 text-sm",
            CheckboxSize.Md => "ml-2 text-base",
            CheckboxSize.Lg => "ml-2 text-lg",
            CheckboxSize.Xl => "ml-2 text-xl",
            _ => "ml-2 text-base"
        });

        if (Disabled)
        {
            classes.Add("text-gray-400");
        }
        else
        {
            classes.Add("text-gray-700 hover:text-primary");
        }

        return string.Join(" ", classes);
    }

    private string GetCheckboxStyles()
    {
        var styles = new List<string>();

        if (IsChecked)
        {
            styles.Add($"background-color: var(--color-primary)");
            styles.Add($"border-color: var(--color-primary)");
        }
        else if (IsIndeterminate)
        {
            styles.Add($"background-color: var(--color-primary)");
            styles.Add($"border-color: var(--color-primary)");
            styles.Add($"background-image: linear-gradient(45deg, transparent 0%, transparent 50%, white 50%, white 100%)");
        }
        else
        {
            styles.Add($"border-color: var(--color-border, #d1d5db)");
        }
        return string.Join("; ", styles);
    }

    private async Task HandleChange(ChangeEventArgs e)
    {
        IsChecked = (bool)(e.Value ?? false);
        if (IsIndeterminate && IsChecked)
        {
            IsIndeterminate = false;
        }
        await IsCheckedChanged.InvokeAsync(IsChecked);
        await OnCheckedChanged.InvokeAsync(IsChecked);
    }
}

