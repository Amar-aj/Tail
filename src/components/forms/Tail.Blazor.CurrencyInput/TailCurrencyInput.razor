@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.CurrencyInput

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@CurrencyInputId">
            @Label
        </label>
    }
    <div class="relative flex items-center">
        @if (SymbolPosition == CurrencySymbolPosition.Left)
        {
            <span class="absolute left-3 text-gray-500">@CurrencySymbol</span>
        }
        <input 
            id="@CurrencyInputId"
            type="text"
            class="@GetInputClasses()"
            value="@GetFormattedValue()"
            @oninput="HandleInput"
            placeholder="@Placeholder"
            disabled="@Disabled"
            @attributes="AdditionalAttributes"
            style="@GetInputStyles()" />
        @if (SymbolPosition == CurrencySymbolPosition.Right)
        {
            <span class="absolute right-3 text-gray-500">@CurrencySymbol</span>
        }
    </div>
</div>

@code {
    private string CurrencyInputId { get; set; } = Guid.NewGuid().ToString();

    [Parameter] public decimal? Value { get; set; }
    [Parameter] public EventCallback<decimal?> ValueChanged { get; set; }
    [Parameter] public string CurrencySymbol { get; set; } = "$";
    [Parameter] public CurrencySymbolPosition SymbolPosition { get; set; } = CurrencySymbolPosition.Left;
    [Parameter] public CurrencyInputSize Size { get; set; } = CurrencyInputSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "block", "w-full", "rounded-lg", "border", "border-gray-300", "transition-colors", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2" };

        classes.Add(Size switch
        {
            CurrencyInputSize.Xs => "px-2 py-1 text-xs",
            CurrencyInputSize.Sm => "px-3 py-1.5 text-sm",
            CurrencyInputSize.Md => "px-4 py-2 text-base",
            CurrencyInputSize.Lg => "px-5 py-2.5 text-lg",
            CurrencyInputSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        if (SymbolPosition == CurrencySymbolPosition.Left)
        {
            classes.Add("pl-8");
        }
        else
        {
            classes.Add("pr-8");
        }

        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed bg-gray-50");
        }

        return string.Join(" ", classes);
    }

    private string GetInputStyles()
    {
        var styles = new List<string>();
        styles.Add($"background-color: var(--color-surface, white)");
        styles.Add($"color: var(--color-text-primary, black)");
        styles.Add($"border-color: var(--color-border, #d1d5db)");
        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }
        return string.Join("; ", styles);
    }

    private string GetFormattedValue()
    {
        return Value?.ToString("F2") ?? "";
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? "";
        // Remove currency symbol and parse
        input = input.Replace(CurrencySymbol, "").Trim();
        if (decimal.TryParse(input, out var value))
        {
            Value = value;
            await ValueChanged.InvokeAsync(Value);
        }
    }
}

