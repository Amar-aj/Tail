@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.PhoneNumberInput

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@PhoneInputId">
            @Label
        </label>
    }
    <div class="flex items-center gap-2">
        <select 
            class="@GetSelectClasses()"
            @bind="SelectedCountryCode"
            disabled="@Disabled"
            style="@GetSelectStyles()">
            @foreach (var country in CountryCodes)
            {
                <option value="@country.Code">@country.Flag @country.Code</option>
            }
        </select>
        <input 
            id="@PhoneInputId"
            type="tel"
            class="@GetInputClasses()"
            value="@PhoneNumber"
            @oninput="HandleInput"
            placeholder="@Placeholder"
            disabled="@Disabled"
            @attributes="AdditionalAttributes"
            style="@GetInputStyles()" />
    </div>
</div>

