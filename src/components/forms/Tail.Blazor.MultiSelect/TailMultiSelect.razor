@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.MultiSelect

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@MultiSelectId">
            @Label
            @if (Required)
            {
                <span class="text-red-500">*</span>
            }
        </label>
    }
    <div class="relative">
        <div 
            class="@GetSelectClasses()"
            @onclick="ToggleDropdown"
            @onblur="HandleBlur"
            tabindex="0">
            @if (SelectedItems != null && SelectedItems.Any())
            {
                <div class="flex flex-wrap gap-1">
                    @foreach (var item in SelectedItems)
                    {
                        <span class="inline-flex items-center px-2 py-1 rounded bg-primary text-white text-sm">
                            @item.Text
                            <button 
                                type="button"
                                class="ml-1 hover:bg-opacity-80 rounded"
                                @onclick:stopPropagation="true"
                                @onclick="() => RemoveItem(item)">
                                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </span>
                    }
                </div>
            }
            else
            {
                <span class="text-gray-400">@Placeholder</span>
            }
            <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </div>
        @if (ShowDropdown && Items != null)
        {
            <div class="absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-auto" style="background-color: var(--color-surface); border-color: var(--color-border);">
                @foreach (var item in Items)
                {
                    <div 
                        class="@GetItemClasses(item)"
                        @onclick="() => ToggleItem(item)">
                        <input 
                            type="checkbox"
                            checked="@IsItemSelected(item)"
                            class="mr-2"
                            @onchange="() => ToggleItem(item)" />
                        <span>@item.Text</span>
                    </div>
                }
            </div>
        }
    </div>
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-sm text-red-600 mt-1">
            @ErrorMessage
        </div>
    }
</div>

@code {
    private string MultiSelectId { get; set; } = Guid.NewGuid().ToString();
    private bool ShowDropdown { get; set; }
    private List<MultiSelectItem> SelectedItems { get; set; } = new();

    [Parameter] public List<string>? SelectedValues { get; set; }
    [Parameter] public EventCallback<List<string>> SelectedValuesChanged { get; set; }
    [Parameter] public List<MultiSelectItem>? Items { get; set; }
    [Parameter] public MultiSelectSize Size { get; set; } = MultiSelectSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? Style { get; set; }

    protected override void OnParametersSet()
    {
        if (SelectedValues != null && Items != null)
        {
            SelectedItems = Items.Where(i => SelectedValues.Contains(i.Value)).ToList();
        }
    }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetSelectClasses()
    {
        var classes = new List<string> { "block", "w-full", "rounded-lg", "border", "transition-colors", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2", "cursor-pointer", "min-h-10" };

        classes.Add(Size switch
        {
            MultiSelectSize.Xs => "px-2 py-1 text-xs",
            MultiSelectSize.Sm => "px-3 py-1.5 text-sm",
            MultiSelectSize.Md => "px-4 py-2 text-base",
            MultiSelectSize.Lg => "px-5 py-2.5 text-lg",
            MultiSelectSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            classes.Add("border-red-500");
        }
        else
        {
            classes.Add("border-gray-300");
        }

        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed bg-gray-50");
        }

        return string.Join(" ", classes);
    }

    private string GetItemClasses(MultiSelectItem item)
    {
        var classes = new List<string> { "flex", "items-center", "px-4", "py-2", "hover:bg-gray-100", "cursor-pointer" };
        if (item.Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed");
        }
        return string.Join(" ", classes);
    }

    private bool IsItemSelected(MultiSelectItem item)
    {
        return SelectedItems.Contains(item);
    }

    private void ToggleDropdown()
    {
        if (!Disabled)
        {
            ShowDropdown = !ShowDropdown;
        }
    }

    private async Task ToggleItem(MultiSelectItem item)
    {
        if (item.Disabled || Disabled) return;

        if (SelectedItems.Contains(item))
        {
            SelectedItems.Remove(item);
        }
        else
        {
            SelectedItems.Add(item);
        }

        SelectedValues = SelectedItems.Select(i => i.Value).ToList();
        await SelectedValuesChanged.InvokeAsync(SelectedValues);
    }

    private async Task RemoveItem(MultiSelectItem item)
    {
        SelectedItems.Remove(item);
        SelectedValues = SelectedItems.Select(i => i.Value).ToList();
        await SelectedValuesChanged.InvokeAsync(SelectedValues);
    }

    private void HandleBlur()
    {
        // Delay to allow click events to fire
        Task.Delay(200).ContinueWith(_ => ShowDropdown = false);
    }
}

