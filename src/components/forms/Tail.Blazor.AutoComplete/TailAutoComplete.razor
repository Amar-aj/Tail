@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.AutoComplete

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@AutoCompleteId">
            @Label
        </label>
    }
    <div class="relative">
        <input 
            id="@AutoCompleteId"
            type="text"
            class="@GetInputClasses()"
            value="@Value"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            placeholder="@Placeholder"
            disabled="@Disabled"
            @attributes="AdditionalAttributes"
            style="@GetInputStyles()" />
        @if (ShowDropdown && FilteredItems != null && FilteredItems.Any())
        {
            <div class="absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-auto" style="background-color: var(--color-surface); border-color: var(--color-border);">
                @foreach (var item in FilteredItems)
                {
                    <div 
                        class="px-4 py-2 hover:bg-gray-100 cursor-pointer"
                        @onclick="() => SelectItem(item)">
                        @item
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private string AutoCompleteId { get; set; } = Guid.NewGuid().ToString();
    private bool ShowDropdown { get; set; }
    private List<string> FilteredItems { get; set; } = new();

    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public List<string>? Items { get; set; }
    [Parameter] public AutoCompleteSize Size { get; set; } = AutoCompleteSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "block", "w-full", "rounded-lg", "border", "border-gray-300", "transition-colors", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2" };

        classes.Add(Size switch
        {
            AutoCompleteSize.Xs => "px-2 py-1 text-xs",
            AutoCompleteSize.Sm => "px-3 py-1.5 text-sm",
            AutoCompleteSize.Md => "px-4 py-2 text-base",
            AutoCompleteSize.Lg => "px-5 py-2.5 text-lg",
            AutoCompleteSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed bg-gray-50");
        }

        return string.Join(" ", classes);
    }

    private string GetInputStyles()
    {
        var styles = new List<string>();
        styles.Add($"background-color: var(--color-surface, white)");
        styles.Add($"color: var(--color-text-primary, black)");
        styles.Add($"border-color: var(--color-border, #d1d5db)");
        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }
        return string.Join("; ", styles);
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        Value = e.Value?.ToString();
        await ValueChanged.InvokeAsync(Value);

        if (Items != null && !string.IsNullOrEmpty(Value))
        {
            FilteredItems = Items.Where(i => i.Contains(Value, StringComparison.OrdinalIgnoreCase)).Take(10).ToList();
            ShowDropdown = FilteredItems.Any();
        }
        else
        {
            ShowDropdown = false;
        }
    }

    private void HandleFocus()
    {
        if (Items != null && !string.IsNullOrEmpty(Value))
        {
            FilteredItems = Items.Where(i => i.Contains(Value, StringComparison.OrdinalIgnoreCase)).Take(10).ToList();
            ShowDropdown = FilteredItems.Any();
        }
    }

    private void HandleBlur()
    {
        Task.Delay(200).ContinueWith(_ => ShowDropdown = false);
    }

    private async Task SelectItem(string item)
    {
        Value = item;
        await ValueChanged.InvokeAsync(Value);
        ShowDropdown = false;
    }
}

