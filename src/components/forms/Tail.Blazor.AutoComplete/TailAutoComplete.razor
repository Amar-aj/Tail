@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.AutoComplete

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@AutoCompleteId" style="color: var(--color-text-primary);">
            @Label
        </label>
    }
    <div class="relative">
        <input 
            id="@AutoCompleteId"
            type="text"
            class="@GetInputClasses()"
            value="@Value"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            @onkeydown="HandleKeyDown"
            placeholder="@Placeholder"
            disabled="@Disabled"
            aria-label="@AriaLabel"
            title="@Tooltip"
            @attributes="AdditionalAttributes"
            style="@GetInputStyles()" />
        @if (IsLoading)
        {
            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
                <div class="animate-spin rounded-full h-4 w-4 border-2 border-primary border-t-transparent"></div>
            </div>
        }
        @if (ShowDropdown && FilteredItems != null && FilteredItems.Any())
        {
            <div class="absolute z-50 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-auto transition-all duration-200 ease-in-out" style="background-color: var(--color-surface); border-color: var(--color-border);">
                @foreach (var (item, index) in FilteredItems.Select((item, index) => (item, index)))
                {
                    <div 
                        class="@GetItemClasses(index == HighlightedIndex)"
                        @onclick="() => SelectItem(item)"
                        @onmouseover="() => HighlightedIndex = index">
                        @if (ItemTemplate != null)
                        {
                            @ItemTemplate(item)
                        }
                        else
                        {
                            @item
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private string AutoCompleteId { get; set; } = Guid.NewGuid().ToString();
    private bool ShowDropdown { get; set; }
    private List<string> FilteredItems { get; set; } = new();
    private int HighlightedIndex { get; set; } = -1;
    private System.Threading.CancellationTokenSource? searchCts;

    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public List<string>? Items { get; set; }
    [Parameter] public AutoCompleteSize Size { get; set; } = AutoCompleteSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public int MinChars { get; set; } = 1;
    [Parameter] public int MaxItems { get; set; } = 10;
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public RenderFragment<string>? ItemTemplate { get; set; }
    [Parameter] public string? AriaLabel { get; set; }
    [Parameter] public string? Tooltip { get; set; }
    [Parameter] public EventCallback<string> OnItemSelected { get; set; }
    [Parameter] public EventCallback<string> OnSearch { get; set; }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "block", "w-full", "rounded-lg", "border", "transition-all", "duration-200", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2" };

        classes.Add(Size switch
        {
            AutoCompleteSize.Xs => "px-2 py-1 text-xs",
            AutoCompleteSize.Sm => "px-3 py-1.5 text-sm",
            AutoCompleteSize.Md => "px-4 py-2 text-base",
            AutoCompleteSize.Lg => "px-5 py-2.5 text-lg",
            AutoCompleteSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed bg-gray-50");
        }
        else
        {
            classes.Add("focus:ring-primary");
        }

        return string.Join(" ", classes);
    }

    private string GetInputStyles()
    {
        var styles = new List<string>();
        styles.Add($"background-color: var(--color-surface, white)");
        styles.Add($"color: var(--color-text-primary, black)");
        styles.Add($"border-color: var(--color-border, #d1d5db)");
       
        return string.Join("; ", styles);
    }

    private string GetItemClasses(bool isHighlighted)
    {
        var classes = new List<string> { "px-4", "py-2", "cursor-pointer", "transition-colors", "duration-150" };
        if (isHighlighted)
        {
            classes.Add("bg-primary text-on-primary");
        }
        else
        {
            classes.Add("hover:bg-gray-100");
            classes.Add("dark:hover:bg-gray-700");
        }
        return string.Join(" ", classes);
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        Value = e.Value?.ToString();
        await ValueChanged.InvokeAsync(Value);
        HighlightedIndex = -1;

        if (Items != null && !string.IsNullOrEmpty(Value) && Value.Length >= MinChars)
        {
            searchCts?.Cancel();
            searchCts = new System.Threading.CancellationTokenSource();
            var token = searchCts.Token;

            try
            {
                await Task.Delay(300, token); // Debounce
                if (!token.IsCancellationRequested)
                {
                    FilteredItems = Items.Where(i => i.Contains(Value, StringComparison.OrdinalIgnoreCase)).Take(MaxItems).ToList();
                    ShowDropdown = FilteredItems.Any();
                    await OnSearch.InvokeAsync(Value);
                }
            }
            catch (TaskCanceledException) { }
        }
        else
        {
            ShowDropdown = false;
        }
    }

    private void HandleFocus()
    {
        if (Items != null && !string.IsNullOrEmpty(Value) && Value.Length >= MinChars)
        {
            FilteredItems = Items.Where(i => i.Contains(Value, StringComparison.OrdinalIgnoreCase)).Take(MaxItems).ToList();
            ShowDropdown = FilteredItems.Any();
        }
    }

    private void HandleBlur()
    {
        Task.Delay(200).ContinueWith(_ => 
        {
            ShowDropdown = false;
            HighlightedIndex = -1;
            InvokeAsync(StateHasChanged);
        });
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (!ShowDropdown || !FilteredItems.Any()) return;

        switch (e.Key)
        {
            case "ArrowDown":
                HighlightedIndex = Math.Min(HighlightedIndex + 1, FilteredItems.Count - 1);
                break;
            case "ArrowUp":
                HighlightedIndex = Math.Max(HighlightedIndex - 1, 0);
                break;
            case "Enter":
                if (HighlightedIndex >= 0 && HighlightedIndex < FilteredItems.Count)
                {
                    await SelectItem(FilteredItems[HighlightedIndex]);
                }
                break;
            case "Escape":
                ShowDropdown = false;
                HighlightedIndex = -1;
                break;
        }
    }

    private async Task SelectItem(string item)
    {
        Value = item;
        await ValueChanged.InvokeAsync(Value);
        ShowDropdown = false;
        HighlightedIndex = -1;
        await OnItemSelected.InvokeAsync(item);
    }
}

