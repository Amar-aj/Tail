@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.Mask

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium mb-1" for="@MaskId">
            @Label
            @if (Required)
            {
                <span class="text-red-500">*</span>
            }
        </label>
    }
    <input 
        id="@MaskId"
        type="text"
        class="@GetInputClasses()"
        value="@Value"
        @oninput="HandleInput"
        placeholder="@Placeholder ?? Mask"
        disabled="@Disabled"
        required="@Required"
        maxlength="@Mask.Length"
        @attributes="AdditionalAttributes"
        style="@GetInputStyles()" />
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-sm text-red-600 mt-1">
            @ErrorMessage
        </div>
    }
</div>

@code {
    private string MaskId { get; set; } = Guid.NewGuid().ToString();

    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public string Mask { get; set; } = "(###) ###-####";
    [Parameter] public MaskSize Size { get; set; } = MaskSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "block", "w-full", "rounded-lg", "border", "transition-colors", "focus:outline-none", "focus:ring-2", "focus:ring-offset-2" };

        classes.Add(Size switch
        {
            MaskSize.Xs => "px-2 py-1 text-xs",
            MaskSize.Sm => "px-3 py-1.5 text-sm",
            MaskSize.Md => "px-4 py-2 text-base",
            MaskSize.Lg => "px-5 py-2.5 text-lg",
            MaskSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            classes.Add("border-red-500");
        }
        else
        {
            classes.Add("border-gray-300");
        }

        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed bg-gray-50");
        }

        return string.Join(" ", classes);
    }

    private string GetInputStyles()
    {
        var styles = new List<string>();
        styles.Add($"background-color: var(--color-surface, white)");
        styles.Add($"color: var(--color-text-primary, black)");
        styles.Add($"border-color: var(--color-border, #d1d5db)");
        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }
        return string.Join("; ", styles);
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? "";
        // Basic masking - would need JavaScript for full implementation
        Value = ApplyMask(input);
        await ValueChanged.InvokeAsync(Value);
    }

    private string ApplyMask(string input)
    {
        // Simplified masking - full implementation would require JS interop
        var digits = new string(input.Where(char.IsDigit).ToArray());
        var result = new System.Text.StringBuilder();
        var digitIndex = 0;

        foreach (var maskChar in Mask)
        {
            if (maskChar == '#' && digitIndex < digits.Length)
            {
                result.Append(digits[digitIndex++]);
            }
            else if (maskChar != '#')
            {
                result.Append(maskChar);
            }
        }

        return result.ToString();
    }
}

