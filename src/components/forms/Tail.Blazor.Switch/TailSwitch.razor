@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Tail.Blazor.Switch

<label class="@GetLabelClasses()" @attributes="AdditionalAttributes">
    <input 
        type="checkbox"
        role="switch"
        aria-checked="@IsChecked"
        aria-disabled="@Disabled"
        class="tail-switch-input"
        checked="@IsChecked"
        @onchange="HandleChange"
        disabled="@Disabled"
        style="@GetSwitchStyles()" />
    <span class="@GetSliderClasses()"></span>
    @if (!string.IsNullOrEmpty(Label))
    {
        <span class="@GetTextClasses()">@Label</span>
    }
    @if (ChildContent != null)
    {
        <span class="@GetTextClasses()">@ChildContent</span>
    }
</label>
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="tail-switch-error">
        @ErrorMessage
    </div>
}

@code {
    [Parameter] public bool IsChecked { get; set; }
    [Parameter] public EventCallback<bool> IsCheckedChanged { get; set; }
    [Parameter] public SwitchSize Size { get; set; } = SwitchSize.Md;
    [Parameter] public string? Label { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? Style { get; set; }

    private string GetLabelClasses()
    {
        var classes = new List<string> { "tail-switch-label" };
        if (Disabled)
        {
            classes.Add("disabled");
        }
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetSliderClasses()
    {
        var classes = new List<string> { "tail-switch-slider" };

        // Size classes
        classes.Add(Size switch
        {
            SwitchSize.Xs => "size-xs",
            SwitchSize.Sm => "size-sm",
            SwitchSize.Md => "size-md",
            SwitchSize.Lg => "size-lg",
            SwitchSize.Xl => "size-xl",
            _ => "size-md"
        });

        return string.Join(" ", classes);
    }

    private string GetTextClasses()
    {
        var classes = new List<string> { "tail-switch-text" };

        // Size classes
        classes.Add(Size switch
        {
            SwitchSize.Xs => "size-xs",
            SwitchSize.Sm => "size-sm",
            SwitchSize.Md => "size-md",
            SwitchSize.Lg => "size-lg",
            SwitchSize.Xl => "size-xl",
            _ => "size-md"
        });

        return string.Join(" ", classes);
    }

    private string GetSwitchStyles()
    {
        var styles = new List<string>();

        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }

        return string.Join("; ", styles);
    }

    private async Task HandleChange(ChangeEventArgs e)
    {
        IsChecked = (bool)(e.Value ?? false);
        await IsCheckedChanged.InvokeAsync(IsChecked);
    }
}

