@inherits TailComponentBase
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Forms
@using Tail.Blazor.Input

<div class="@GetWrapperClasses()" style="@GetWrapperStyles()">
    @if (!string.IsNullOrEmpty(Label) && !FloatingLabel)
    {
        <label class="@GetLabelClasses()" for="@InputId" style="@GetLabelStyles()">
            @Label
            @if (Required)
            {
                <span style="color: var(--color-danger, #ef4444);">*</span>
            }
        </label>
    }
    <div class="relative" style="@GetInputContainerStyles()">
        @if (Variant == InputVariant.Outlined && FloatingLabel)
        {
            <label class="@GetFloatingLabelClasses()" for="@InputId" style="@GetFloatingLabelStyles()">
                @Label
                @if (Required)
                {
                    <span style="color: var(--color-danger, #ef4444);">*</span>
                }
            </label>
        }
        @if (Variant == InputVariant.Filled && FloatingLabel)
        {
            <label class="@GetFloatingLabelClasses()" for="@InputId" style="@GetFloatingLabelStyles()">
                @Label
                @if (Required)
                {
                    <span style="color: var(--color-danger, #ef4444);">*</span>
                }
            </label>
        }
        @if (!string.IsNullOrEmpty(AdornmentStart))
        {
            <div class="absolute inset-y-0 left-0 flex items-center pointer-events-none" style="@GetAdornmentStartStyles()">
                <span class="text-sm" style="color: var(--color-text-secondary, #6b7280);">@AdornmentStart</span>
            </div>
        }
        @if (IconStart != null)
        {
            <div class="absolute inset-y-0 left-0 flex items-center pointer-events-none" style="@GetIconStartStyles()">
                @IconStart
            </div>
        }
        <input 
            id="@InputId"
            type="@GetInputType()"
            class="@GetInputClasses()"
            placeholder="@(FloatingLabel ? string.Empty : Placeholder)"
            value="@Value"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            @onkeydown="HandleKeyDown"
            disabled="@Disabled"
            readonly="@ReadOnly"
            required="@Required"
            maxlength="@MaxLength"
            min="@Min"
            max="@Max"
            step="@Step"
            pattern="@Pattern"
            autocomplete="@AutoComplete"
            autofocus="@AutoFocus"
            aria-label="@AriaLabel"
            aria-describedby="@GetAriaDescribedBy()"
            aria-invalid="@(!string.IsNullOrEmpty(ErrorMessage))"
            aria-required="@Required"
            @attributes="AdditionalAttributes"
            style="@GetInputStyles()" />
        @if (ShowClearButton && !string.IsNullOrEmpty(Value) && !Disabled && !ReadOnly)
        {
            <button 
                type="button"
                class="@GetClearButtonClasses()"
                style="@GetClearButtonStyles()"
                @onclick="ClearValue"
                @onclick:stopPropagation="true"
                tabindex="-1"
                aria-label="Clear input">
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        }
        @if (IconEnd != null && !ShowClearButton)
        {
            <div class="absolute inset-y-0 right-0 flex items-center pointer-events-none" style="@GetIconEndStyles()">
                @IconEnd
            </div>
        }
        @if (!string.IsNullOrEmpty(AdornmentEnd))
        {
            <div class="absolute inset-y-0 right-0 flex items-center pointer-events-none" style="@GetAdornmentEndStyles()">
                <span class="text-sm" style="color: var(--color-text-secondary, #6b7280);">@AdornmentEnd</span>
            </div>
        }
        @if (Variant == InputVariant.Outlined || Variant == InputVariant.Standard)
        {
            <div class="@GetUnderlineClasses()" style="@GetUnderlineStyles()"></div>
        }
    </div>
    @if (ShowCharacterCount && MaxLength > 0)
    {
        <div class="text-xs mt-1 flex justify-end" style="color: var(--color-text-muted, #9ca3af);">
            @(Value?.Length ?? 0) / @MaxLength
        </div>
    }
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-sm mt-1 flex items-center gap-1" style="color: var(--color-danger, #ef4444);">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@ErrorMessage</span>
        </div>
    }
    @if (!string.IsNullOrEmpty(HelpText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-sm mt-1" style="color: var(--color-text-secondary, #6b7280);">
            @HelpText
        </div>
    }
</div>

@code {
    private string InputId { get; set; } = Guid.NewGuid().ToString();
    private bool _isFocused = false;
    private bool _hasValue = false;

    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public InputType Type { get; set; } = InputType.Text;
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public InputVariant Variant { get; set; } = InputVariant.Standard;
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? HelpText { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public int? MaxLength { get; set; }
    [Parameter] public bool ShowClearButton { get; set; }
    [Parameter] public bool ShowCharacterCount { get; set; }
    [Parameter] public bool FloatingLabel { get; set; }
    [Parameter] public RenderFragment? IconStart { get; set; }
    [Parameter] public RenderFragment? IconEnd { get; set; }
    [Parameter] public string? AdornmentStart { get; set; }
    [Parameter] public string? AdornmentEnd { get; set; }
    [Parameter] public EventCallback<FocusEventArgs> OnFocus { get; set; }
    [Parameter] public EventCallback<FocusEventArgs> OnBlur { get; set; }
    [Parameter] public EventCallback<KeyboardEventArgs> OnKeyDown { get; set; }
    [Parameter] public string? Style { get; set; }
    [Parameter] public string? Min { get; set; }
    [Parameter] public string? Max { get; set; }
    [Parameter] public string? Step { get; set; }
    [Parameter] public string? Pattern { get; set; }
    [Parameter] public string? AutoComplete { get; set; }
    [Parameter] public bool AutoFocus { get; set; }
    [Parameter] public string? AriaLabel { get; set; }
    [Parameter] public bool EnableAnimation { get; set; } = true;
    [Parameter] public int AnimationDuration { get; set; } = 200;

    protected override void OnParametersSet()
    {
        _hasValue = !string.IsNullOrEmpty(Value);
    }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(Class))
        {
            classes.Add(Class);
        }
        return string.Join(" ", classes);
    }

    private string GetWrapperStyles()
    {
        return string.Empty;
    }

    private string GetLabelClasses()
    {
        var classes = new List<string> { "block", "text-sm", "font-medium", "mb-1" };
        if (EnableAnimation)
        {
            classes.Add("transition-colors");
        }
        return string.Join(" ", classes);
    }

    private string GetLabelStyles()
    {
        return $"color: var(--color-text-primary, #111827);";
    }

    private string GetFloatingLabelClasses()
    {
        var classes = new List<string> { "absolute", "left-0", "pointer-events-none", "font-medium", "origin-left" };
        
        if (_isFocused || _hasValue)
        {
            classes.Add("top-0");
            classes.Add(Size switch
            {
                InputSize.Xs => "text-xs",
                InputSize.Sm => "text-xs",
                InputSize.Md => "text-xs",
                InputSize.Lg => "text-sm",
                InputSize.Xl => "text-sm",
                _ => "text-xs"
            });
        }
        else
        {
            classes.Add("top-1/2");
            classes.Add("-translate-y-1/2");
            classes.Add(Size switch
            {
                InputSize.Xs => "text-xs",
                InputSize.Sm => "text-sm",
                InputSize.Md => "text-base",
                InputSize.Lg => "text-lg",
                InputSize.Xl => "text-xl",
                _ => "text-base"
            });
        }

        if (EnableAnimation)
        {
            classes.Add("transition-all");
            classes.Add("duration-200");
        }

        if (IconStart != null || !string.IsNullOrEmpty(AdornmentStart))
        {
            classes.Add(Size switch
            {
                InputSize.Xs => "left-2",
                InputSize.Sm => "left-3",
                InputSize.Md => "left-4",
                InputSize.Lg => "left-5",
                InputSize.Xl => "left-6",
                _ => "left-4"
            });
        }
        else
        {
            classes.Add(Size switch
            {
                InputSize.Xs => "left-2",
                InputSize.Sm => "left-3",
                InputSize.Md => "left-4",
                InputSize.Lg => "left-5",
                InputSize.Xl => "left-6",
                _ => "left-4"
            });
        }

        return string.Join(" ", classes);
    }

    private string GetFloatingLabelStyles()
    {
        var color = !string.IsNullOrEmpty(ErrorMessage) 
            ? "var(--color-danger, #ef4444)" 
            : (_isFocused ? "var(--color-primary, #3b82f6)" : "var(--color-text-secondary, #6b7280)");
        return $"color: {color};";
    }

    private string GetInputContainerStyles()
    {
        return string.Empty;
    }

    private string GetAdornmentStartStyles()
    {
        var padding = Size switch
        {
            InputSize.Xs => "pl-2",
            InputSize.Sm => "pl-3",
            InputSize.Md => "pl-4",
            InputSize.Lg => "pl-5",
            InputSize.Xl => "pl-6",
            _ => "pl-4"
        };
        return $"{padding}; z-index: 1;";
    }

    private string GetIconStartStyles()
    {
        var padding = Size switch
        {
            InputSize.Xs => "pl-2",
            InputSize.Sm => "pl-3",
            InputSize.Md => "pl-3",
            InputSize.Lg => "pl-4",
            InputSize.Xl => "pl-5",
            _ => "pl-3"
        };
        return $"{padding}; z-index: 1;";
    }

    private string GetIconEndStyles()
    {
        var padding = Size switch
        {
            InputSize.Xs => "pr-2",
            InputSize.Sm => "pr-3",
            InputSize.Md => "pr-3",
            InputSize.Lg => "pr-4",
            InputSize.Xl => "pr-5",
            _ => "pr-3"
        };
        return $"{padding}; z-index: 1;";
    }

    private string GetAdornmentEndStyles()
    {
        var padding = Size switch
        {
            InputSize.Xs => "pr-2",
            InputSize.Sm => "pr-3",
            InputSize.Md => "pr-4",
            InputSize.Lg => "pr-5",
            InputSize.Xl => "pr-6",
            _ => "pr-4"
        };
        return $"{padding}; z-index: 1;";
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "block", "w-full", "transition-all", "focus:outline-none" };

        // Variant-specific classes
        if (Variant == InputVariant.Outlined)
        {
            classes.Add("border-2");
            classes.Add("rounded-lg");
            classes.Add("bg-transparent");
        }
        else if (Variant == InputVariant.Filled)
        {
            classes.Add("border-0");
            classes.Add("border-b-2");
            classes.Add("rounded-t-lg");
            classes.Add("rounded-b-none");
        }
        else // Standard
        {
            classes.Add("border");
            classes.Add("rounded-lg");
        }

        // Size classes
        classes.Add(Size switch
        {
            InputSize.Xs => "px-2 py-1 text-xs",
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            InputSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });

        // Icon/Adornment padding
        if (IconStart != null || !string.IsNullOrEmpty(AdornmentStart))
        {
            classes.Add(Size switch
            {
                InputSize.Xs => "pl-7",
                InputSize.Sm => "pl-9",
                InputSize.Md => "pl-10",
                InputSize.Lg => "pl-12",
                InputSize.Xl => "pl-14",
                _ => "pl-10"
            });
        }
        if (ShowClearButton || IconEnd != null || !string.IsNullOrEmpty(AdornmentEnd))
        {
            classes.Add(Size switch
            {
                InputSize.Xs => "pr-7",
                InputSize.Sm => "pr-9",
                InputSize.Md => "pr-10",
                InputSize.Lg => "pr-12",
                InputSize.Xl => "pr-14",
                _ => "pr-10"
            });
        }

        // Floating label padding
        if (FloatingLabel && (_isFocused || _hasValue))
        {
            classes.Add(Size switch
            {
                InputSize.Xs => "pt-4",
                InputSize.Sm => "pt-5",
                InputSize.Md => "pt-6",
                InputSize.Lg => "pt-7",
                InputSize.Xl => "pt-8",
                _ => "pt-6"
            });
        }

        // Error state
        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            classes.Add("border-red-500");
        }

        // Focus state
        if (_isFocused && string.IsNullOrEmpty(ErrorMessage))
        {
            classes.Add("ring-2");
            classes.Add("ring-offset-1");
        }

        // Disabled state
        if (Disabled)
        {
            classes.Add("opacity-50");
            classes.Add("cursor-not-allowed");
        }

        // Animation
        if (EnableAnimation)
        {
            classes.Add($"duration-{AnimationDuration}");
        }

        return string.Join(" ", classes);
    }

    private string GetInputStyles()
    {
        var styles = new List<string>();

        // Background
        if (Variant == InputVariant.Filled)
        {
            styles.Add($"background-color: var(--color-surface-2, #f9fafb)");
        }
        else if (Variant == InputVariant.Outlined)
        {
            styles.Add($"background-color: transparent");
        }
        else
        {
            styles.Add($"background-color: var(--color-surface, white)");
        }

        // Text color
        styles.Add($"color: var(--color-text-primary, #111827)");

        // Border color
        if (string.IsNullOrEmpty(ErrorMessage))
        {
            if (_isFocused)
            {
                styles.Add($"border-color: var(--color-primary, #3b82f6)");
            }
            else
            {
                styles.Add($"border-color: var(--color-border, #d1d5db)");
            }
        }
        else
        {
            styles.Add($"border-color: var(--color-danger, #ef4444)");
        }

        // Focus ring color
        if (_isFocused && string.IsNullOrEmpty(ErrorMessage))
        {
            styles.Add($"--tw-ring-color: var(--color-primary, #3b82f6)");
        }

        // Hover effect
        if (!Disabled && !ReadOnly)
        {
            styles.Add($"transition: all {AnimationDuration}ms ease-in-out");
        }

        if (!string.IsNullOrEmpty(Style))
        {
            styles.Add(Style);
        }

        return string.Join("; ", styles);
    }

    private string GetUnderlineClasses()
    {
        var classes = new List<string> { "absolute", "bottom-0", "left-0", "right-0", "h-0.5", "origin-left" };
        
        if (EnableAnimation)
        {
            classes.Add("transition-all");
            classes.Add($"duration-{AnimationDuration}");
        }

        if (_isFocused)
        {
            classes.Add("scale-x-100");
        }
        else
        {
            classes.Add("scale-x-0");
        }

        return string.Join(" ", classes);
    }

    private string GetUnderlineStyles()
    {
        var color = !string.IsNullOrEmpty(ErrorMessage)
            ? "var(--color-danger, #ef4444)"
            : "var(--color-primary, #3b82f6)";
        return $"background-color: {color}; transform-origin: left;";
    }

    private string GetClearButtonClasses()
    {
        var classes = new List<string>
        {
            "absolute",
            "inset-y-0",
            "right-0",
            "flex",
            "items-center",
            "rounded-md",
            "transition-all"
        };

        var padding = Size switch
        {
            InputSize.Xs => "pr-2",
            InputSize.Sm => "pr-2.5",
            InputSize.Md => "pr-3",
            InputSize.Lg => "pr-3.5",
            InputSize.Xl => "pr-4",
            _ => "pr-3"
        };
        classes.Add(padding);

        if (EnableAnimation)
        {
            classes.Add($"duration-{AnimationDuration}");
        }

        return string.Join(" ", classes);
    }

    private string GetClearButtonStyles()
    {
        return "color: var(--color-text-secondary, #6b7280); z-index: 2;";
    }

    private string GetInputType()
    {
        return Type switch
        {
            InputType.Password => "password",
            InputType.Email => "email",
            InputType.Number => "number",
            InputType.Tel => "tel",
            InputType.Url => "url",
            InputType.Search => "search",
            InputType.Date => "date",
            InputType.DateTimeLocal => "datetime-local",
            InputType.Time => "time",
            InputType.Month => "month",
            InputType.Week => "week",
            _ => "text"
        };
    }

    private string GetAriaDescribedBy()
    {
        var ids = new List<string>();
        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            ids.Add($"{InputId}-error");
        }
        if (!string.IsNullOrEmpty(HelpText))
        {
            ids.Add($"{InputId}-help");
        }
        return ids.Any() ? string.Join(" ", ids) : null;
    }

    private async Task HandleInput(ChangeEventArgs e)
    {
        Value = e.Value?.ToString();
        _hasValue = !string.IsNullOrEmpty(Value);
        await ValueChanged.InvokeAsync(Value);
    }

    private async Task HandleFocus(FocusEventArgs e)
    {
        _isFocused = true;
        if (OnFocus.HasDelegate)
        {
            await OnFocus.InvokeAsync(e);
        }
        StateHasChanged();
    }

    private async Task HandleBlur(FocusEventArgs e)
    {
        _isFocused = false;
        if (OnBlur.HasDelegate)
        {
            await OnBlur.InvokeAsync(e);
        }
        StateHasChanged();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (OnKeyDown.HasDelegate)
        {
            await OnKeyDown.InvokeAsync(e);
        }
    }

    private async Task ClearValue()
    {
        Value = null;
        _hasValue = false;
        await ValueChanged.InvokeAsync(Value);
        StateHasChanged();
    }
}
