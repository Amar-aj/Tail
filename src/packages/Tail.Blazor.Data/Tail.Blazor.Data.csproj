<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>1.0.0</Version>
    <Authors>Tail.Blazor Core Team</Authors>
    <Company>Tail.Blazor</Company>
    <Product>Tail.Blazor Data</Product>
    <Description>Meta-package for all Tail.Blazor data components. Includes: DataGrid, ListView, Pager, Scheduler, Tree, PivotDataGrid, ResponsiveTable, VirtualScroll, KanbanBoard, AdvancedFilter. Ultra-lightweight (~50 KB total).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://tailblazor.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tailblazor/tailblazor</RepositoryUrl>
    <PackageTags>blazor;tailwind;ui;components;data;meta-package;lightweight;performance</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>latest</LangVersion>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\components\data\Tail.Blazor.DataGrid\Tail.Blazor.DataGrid.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.ListView\Tail.Blazor.ListView.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.Pager\Tail.Blazor.Pager.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.Scheduler\Tail.Blazor.Scheduler.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.Tree\Tail.Blazor.Tree.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.PivotDataGrid\Tail.Blazor.PivotDataGrid.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.ResponsiveTable\Tail.Blazor.ResponsiveTable.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.VirtualScroll\Tail.Blazor.VirtualScroll.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.KanbanBoard\Tail.Blazor.KanbanBoard.csproj" />
    <ProjectReference Include="..\..\components\data\Tail.Blazor.AdvancedFilter\Tail.Blazor.AdvancedFilter.csproj" />
  </ItemGroup>

</Project>
