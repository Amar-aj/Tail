<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>1.0.0</Version>
    <Authors>Tail.Blazor Core Team</Authors>
    <Company>Tail.Blazor</Company>
    <Product>Tail.Blazor Feedback</Product>
    <Description>Meta-package for all Tail.Blazor feedback components. Includes: Alert, Badge, Spinner, Progress, ProgressBarCircular, Skeleton, Dialog, Toast, ToastContainer, Popconfirm, EmptyState, Confetti, NotificationCenter, Tour. Ultra-lightweight (~42 KB total).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://tailblazor.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tailblazor/tailblazor</RepositoryUrl>
    <PackageTags>blazor;tailwind;ui;components;feedback;meta-package;lightweight;performance</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>latest</LangVersion>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Alert\Tail.Blazor.Alert.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Badge\Tail.Blazor.Badge.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Spinner\Tail.Blazor.Spinner.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Progress\Tail.Blazor.Progress.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.ProgressBarCircular\Tail.Blazor.ProgressBarCircular.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Skeleton\Tail.Blazor.Skeleton.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Dialog\Tail.Blazor.Dialog.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Toast\Tail.Blazor.Toast.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.ToastContainer\Tail.Blazor.ToastContainer.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Popconfirm\Tail.Blazor.Popconfirm.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.EmptyState\Tail.Blazor.EmptyState.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Confetti\Tail.Blazor.Confetti.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.NotificationCenter\Tail.Blazor.NotificationCenter.csproj" />
    <ProjectReference Include="..\..\components\feedback\Tail.Blazor.Tour\Tail.Blazor.Tour.csproj" />
  </ItemGroup>

</Project>
