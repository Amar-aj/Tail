@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Feedback

@if (Visible)
{
    <div role="alert" class="@GetAlertClasses()" @attributes="AdditionalAttributes">
        <div class="flex items-start">
            @if (ShowIcon)
            {
                <div class="flex-shrink-0">
                    @GetIcon()
                </div>
            }
            <div class="ml-3 flex-1">
                @if (!string.IsNullOrEmpty(Title))
                {
                    <h3 class="text-sm font-medium">@Title</h3>
                }
                <div class="@GetContentClasses()">
                    @ChildContent
                </div>
            </div>
            @if (Dismissible)
            {
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex h-8 w-8 focus:outline-none focus:ring-2" @onclick="HandleDismiss">
                    <span class="sr-only">Dismiss</span>
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            }
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public AlertVariant Variant { get; set; } = AlertVariant.Info;
    [Parameter] public string? Title { get; set; }
    [Parameter] public bool Dismissible { get; set; }
    [Parameter] public bool ShowIcon { get; set; } = true;
    [Parameter] public bool Visible { get; set; } = true;
    [Parameter] public EventCallback OnDismissed { get; set; }

    private string GetAlertClasses()
    {
        var classes = new List<string> { "p-4 rounded-lg border" };
        
        classes.Add(Variant switch
        {
            AlertVariant.Success => "bg-green-50 dark:bg-green-900/20 border-green-200 dark:border-green-800 text-green-800 dark:text-green-200",
            AlertVariant.Warning => "bg-yellow-50 dark:bg-yellow-900/20 border-yellow-200 dark:border-yellow-800 text-yellow-800 dark:text-yellow-200",
            AlertVariant.Danger => "bg-red-50 dark:bg-red-900/20 border-red-200 dark:border-red-800 text-red-800 dark:text-red-200",
            AlertVariant.Info => "bg-blue-50 dark:bg-blue-900/20 border-blue-200 dark:border-blue-800 text-blue-800 dark:text-blue-200",
            _ => "bg-gray-50 dark:bg-gray-900/20 border-gray-200 dark:border-gray-800 text-gray-800 dark:text-gray-200"
        });
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetContentClasses()
    {
        return !string.IsNullOrEmpty(Title) ? "mt-2 text-sm" : "text-sm";
    }

    private RenderFragment GetIcon()
    {
        return Variant switch
        {
            AlertVariant.Success => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-5 w-5");
                builder.AddAttribute(2, "fill", "currentColor");
                builder.AddAttribute(3, "viewBox", "0 0 20 20");
                builder.AddMarkupContent(4, "<path fill-rule=\"evenodd\" d=\"M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z\" clip-rule=\"evenodd\"></path>");
                builder.CloseElement();
            },
            AlertVariant.Warning => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-5 w-5");
                builder.AddAttribute(2, "fill", "currentColor");
                builder.AddAttribute(3, "viewBox", "0 0 20 20");
                builder.AddMarkupContent(4, "<path fill-rule=\"evenodd\" d=\"M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z\" clip-rule=\"evenodd\"></path>");
                builder.CloseElement();
            },
            AlertVariant.Danger => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-5 w-5");
                builder.AddAttribute(2, "fill", "currentColor");
                builder.AddAttribute(3, "viewBox", "0 0 20 20");
                builder.AddMarkupContent(4, "<path fill-rule=\"evenodd\" d=\"M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z\" clip-rule=\"evenodd\"></path>");
                builder.CloseElement();
            },
            _ => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-5 w-5");
                builder.AddAttribute(2, "fill", "currentColor");
                builder.AddAttribute(3, "viewBox", "0 0 20 20");
                builder.AddMarkupContent(4, "<path fill-rule=\"evenodd\" d=\"M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z\" clip-rule=\"evenodd\"></path>");
                builder.CloseElement();
            }
        };
    }

    private async Task HandleDismiss()
    {
        Visible = false;
        if (OnDismissed.HasDelegate)
        {
            await OnDismissed.InvokeAsync();
        }
    }
}


