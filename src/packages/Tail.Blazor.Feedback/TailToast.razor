@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Feedback

@if (Visible)
{
    <div class="@GetToastClasses()" role="alert" @attributes="AdditionalAttributes">
        <div class="flex items-start">
            @if (ShowIcon)
            {
                <div class="flex-shrink-0">
                    @GetIcon()
                </div>
            }
            <div class="ml-3 w-0 flex-1">
                @if (!string.IsNullOrEmpty(Title))
                {
                    <p class="text-sm font-medium text-gray-900 dark:text-white">@Title</p>
                }
                <p class="@GetMessageClasses()">@Message</p>
            </div>
            @if (Closable)
            {
                <div class="ml-4 flex-shrink-0 flex">
                    <button type="button" class="inline-flex text-gray-400 hover:text-gray-500 focus:outline-none" @onclick="HandleClose">
                        <span class="sr-only">Close</span>
                        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Message { get; set; }
    [Parameter] public ToastVariant Variant { get; set; } = ToastVariant.Info;
    [Parameter] public bool Visible { get; set; } = true;
    [Parameter] public bool Closable { get; set; } = true;
    [Parameter] public bool ShowIcon { get; set; } = true;
    [Parameter] public int Duration { get; set; } = 5000;
    [Parameter] public EventCallback OnClosed { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && Duration > 0)
        {
            await Task.Delay(Duration);
            await HandleClose();
        }
    }

    private string GetToastClasses()
    {
        var classes = new List<string> 
        { 
            "max-w-sm w-full bg-white dark:bg-gray-800 shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden"
        };
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetMessageClasses()
    {
        return string.IsNullOrEmpty(Title) 
            ? "text-sm text-gray-500 dark:text-gray-400" 
            : "mt-1 text-sm text-gray-500 dark:text-gray-400";
    }

    private RenderFragment GetIcon()
    {
        return Variant switch
        {
            ToastVariant.Success => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-6 w-6 text-green-400");
                builder.AddAttribute(2, "fill", "none");
                builder.AddAttribute(3, "viewBox", "0 0 24 24");
                builder.AddAttribute(4, "stroke", "currentColor");
                builder.AddMarkupContent(5, "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z\"></path>");
                builder.CloseElement();
            },
            ToastVariant.Warning => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-6 w-6 text-yellow-400");
                builder.AddAttribute(2, "fill", "none");
                builder.AddAttribute(3, "viewBox", "0 0 24 24");
                builder.AddAttribute(4, "stroke", "currentColor");
                builder.AddMarkupContent(5, "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z\"></path>");
                builder.CloseElement();
            },
            ToastVariant.Error => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-6 w-6 text-red-400");
                builder.AddAttribute(2, "fill", "none");
                builder.AddAttribute(3, "viewBox", "0 0 24 24");
                builder.AddAttribute(4, "stroke", "currentColor");
                builder.AddMarkupContent(5, "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z\"></path>");
                builder.CloseElement();
            },
            _ => builder =>
            {
                builder.OpenElement(0, "svg");
                builder.AddAttribute(1, "class", "h-6 w-6 text-blue-400");
                builder.AddAttribute(2, "fill", "none");
                builder.AddAttribute(3, "viewBox", "0 0 24 24");
                builder.AddAttribute(4, "stroke", "currentColor");
                builder.AddMarkupContent(5, "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z\"></path>");
                builder.CloseElement();
            }
        };
    }

    private async Task HandleClose()
    {
        Visible = false;
        if (OnClosed.HasDelegate)
        {
            await OnClosed.InvokeAsync();
        }
    }
}


