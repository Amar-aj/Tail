@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Feedback

<span class="@GetBadgeClasses()" @attributes="AdditionalAttributes">
    @ChildContent
    @if (ShowDot)
    {
        <span class="@GetDotClasses()"></span>
    }
</span>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public BadgeVariant Variant { get; set; } = BadgeVariant.Primary;
    [Parameter] public BadgeSize Size { get; set; } = BadgeSize.Md;
    [Parameter] public bool ShowDot { get; set; } = false;
    [Parameter] public bool Rounded { get; set; } = true;

    private string GetBadgeClasses()
    {
        var classes = new List<string> { "inline-flex items-center font-medium" };
        
        // Size
        classes.Add(Size switch
        {
            BadgeSize.Sm => "px-2 py-0.5 text-xs",
            BadgeSize.Md => "px-2.5 py-0.5 text-sm",
            BadgeSize.Lg => "px-3 py-1 text-base",
            _ => "px-2.5 py-0.5 text-sm"
        });
        
        // Rounded
        if (Rounded)
        {
            classes.Add("rounded-full");
        }
        else
        {
            classes.Add("rounded");
        }
        
        // Variant
        classes.Add(Variant switch
        {
            BadgeVariant.Primary => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200",
            BadgeVariant.Success => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200",
            BadgeVariant.Warning => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200",
            BadgeVariant.Danger => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200",
            BadgeVariant.Info => "bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200",
            BadgeVariant.Gray => "bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200",
            _ => "bg-blue-100 text-blue-800"
        });
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetDotClasses()
    {
        return Size switch
        {
            BadgeSize.Sm => "ml-1 w-1.5 h-1.5",
            BadgeSize.Md => "ml-1.5 w-2 h-2",
            BadgeSize.Lg => "ml-2 w-2.5 h-2.5",
            _ => "ml-1.5 w-2 h-2"
        } + " rounded-full bg-current opacity-75";
    }
}

public enum BadgeVariant
{
    Primary,
    Success,
    Warning,
    Danger,
    Info,
    Gray
}

public enum BadgeSize
{
    Sm,
    Md,
    Lg
}

