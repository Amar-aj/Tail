<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>1.0.0</Version>
    <Authors>Tail.Blazor Core Team</Authors>
    <Company>Tail.Blazor</Company>
    <Product>Tail.Blazor Buttons</Product>
    <Description>Meta-package for all Tail.Blazor button components. Includes: Button, IconButton, ToggleButton, SplitButton, FAB, ButtonGroup. Ultra-lightweight (~18 KB total).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://tailblazor.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tailblazor/tailblazor</RepositoryUrl>
    <PackageTags>blazor;tailwind;ui;components;buttons;meta-package;lightweight;performance</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>latest</LangVersion>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\components\buttons\Tail.Blazor.Button\Tail.Blazor.Button.csproj" />
    <ProjectReference Include="..\..\components\buttons\Tail.Blazor.IconButton\Tail.Blazor.IconButton.csproj" />
    <ProjectReference Include="..\..\components\buttons\Tail.Blazor.ToggleButton\Tail.Blazor.ToggleButton.csproj" />
    <ProjectReference Include="..\..\components\buttons\Tail.Blazor.SplitButton\Tail.Blazor.SplitButton.csproj" />
    <ProjectReference Include="..\..\components\buttons\Tail.Blazor.FAB\Tail.Blazor.FAB.csproj" />
    <ProjectReference Include="..\..\components\buttons\Tail.Blazor.ButtonGroup\Tail.Blazor.ButtonGroup.csproj" />
  </ItemGroup>

</Project>
