@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Buttons

<button 
    type="@Type"
    class="@GetButtonClasses()"
    style="@GetButtonStyle()"
    disabled="@Disabled"
    @onclick="@HandleClick"
    @onclick:preventDefault="@PreventDefault"
    @onclick:stopPropagation="@StopPropagation"
    @attributes="AdditionalAttributes">
    @if (Loading)
    {
        <svg class="animate-spin -ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
    }
    @if (!string.IsNullOrEmpty(IconStart))
    {
        <span class="mr-2">@IconStart</span>
    }
    @ChildContent
    @if (!string.IsNullOrEmpty(IconEnd))
    {
        <span class="ml-2">@IconEnd</span>
    }
</button>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public ButtonVariant Variant { get; set; } = ButtonVariant.Primary;
    [Parameter] public ButtonSize Size { get; set; } = ButtonSize.Md;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Loading { get; set; }
    [Parameter] public string? IconStart { get; set; }
    [Parameter] public string? IconEnd { get; set; }
    [Parameter] public string Type { get; set; } = "button";
    [Parameter] public bool PreventDefault { get; set; } = false;
    [Parameter] public bool StopPropagation { get; set; } = false;
    [Parameter] public bool FullWidth { get; set; } = false;
    [Parameter] public bool Rounded { get; set; } = true;
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }

    private string GetButtonClasses()
    {
        var classes = new List<string> { "font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2" };
        
        // Rounded corners
        if (Rounded)
        {
            classes.Add("rounded-lg");
        }
        
        // Base classes based on variant (using theme-aware classes)
        classes.Add(Variant switch
        {
            ButtonVariant.Primary => "text-white shadow-sm hover:shadow focus:ring-opacity-50",
            ButtonVariant.Success => "text-white shadow-sm hover:shadow focus:ring-opacity-50",
            ButtonVariant.Warning => "text-white shadow-sm hover:shadow focus:ring-opacity-50",
            ButtonVariant.Danger => "text-white shadow-sm hover:shadow focus:ring-opacity-50",
            ButtonVariant.Info => "text-white shadow-sm hover:shadow focus:ring-opacity-50",
            ButtonVariant.Outline => "border-2 bg-transparent hover:bg-opacity-10",
            ButtonVariant.Soft => "hover:bg-opacity-80",
            ButtonVariant.Ghost => "bg-transparent hover:bg-opacity-10",
            ButtonVariant.Link => "bg-transparent p-0 hover:underline",
            _ => "text-white shadow-sm hover:shadow"
        });
        
        // Size classes
        classes.Add(Size switch
        {
            ButtonSize.Xs => "px-2 py-1 text-xs",
            ButtonSize.Sm => "px-3 py-1.5 text-sm",
            ButtonSize.Md => "px-4 py-2 text-base",
            ButtonSize.Lg => "px-5 py-2.5 text-lg",
            ButtonSize.Xl => "px-6 py-3 text-xl",
            _ => "px-4 py-2 text-base"
        });
        
        // Full width
        if (FullWidth)
        {
            classes.Add("w-full");
        }
        
        // Disabled/Loading state
        if (Disabled || Loading)
        {
            classes.Add("opacity-50 cursor-not-allowed pointer-events-none");
        }
        else
        {
            classes.Add("cursor-pointer");
        }
        
        // Custom classes
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetButtonStyle()
    {
        // Use CSS variables for dynamic theming
        var styles = new List<string>();
        
        switch (Variant)
        {
            case ButtonVariant.Primary:
                styles.Add("background-color: var(--color-primary)");
                styles.Add("--tw-ring-color: var(--color-primary)");
                break;
            case ButtonVariant.Success:
                styles.Add("background-color: var(--color-success)");
                styles.Add("--tw-ring-color: var(--color-success)");
                break;
            case ButtonVariant.Warning:
                styles.Add("background-color: var(--color-warning)");
                styles.Add("--tw-ring-color: var(--color-warning)");
                break;
            case ButtonVariant.Danger:
                styles.Add("background-color: var(--color-danger)");
                styles.Add("--tw-ring-color: var(--color-danger)");
                break;
            case ButtonVariant.Info:
                styles.Add("background-color: var(--color-info)");
                styles.Add("--tw-ring-color: var(--color-info)");
                break;
            case ButtonVariant.Outline:
                styles.Add("border-color: var(--color-primary)");
                styles.Add("color: var(--color-primary)");
                styles.Add("--tw-ring-color: var(--color-primary)");
                break;
            case ButtonVariant.Soft:
                styles.Add("background-color: color-mix(in srgb, var(--color-primary) 15%, transparent)");
                styles.Add("color: var(--color-primary)");
                styles.Add("--tw-ring-color: var(--color-primary)");
                break;
            case ButtonVariant.Ghost:
                styles.Add("color: var(--color-primary)");
                styles.Add("--tw-ring-color: var(--color-primary)");
                break;
            case ButtonVariant.Link:
                styles.Add("color: var(--color-primary)");
                styles.Add("--tw-ring-color: var(--color-primary)");
                break;
        }
        
        return string.Join("; ", styles);
    }

    private async Task HandleClick(MouseEventArgs e)
    {
        if (!Disabled && !Loading && OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(e);
        }
    }
}

