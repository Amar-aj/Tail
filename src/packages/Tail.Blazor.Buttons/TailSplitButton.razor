@inherits Tail.Blazor.Core.TailComponentBase
@using Tail.Blazor.Core.Enums
@namespace Tail.Blazor.Buttons

<div class="inline-flex rounded-lg shadow-sm" role="group" @attributes="AdditionalAttributes">
    <button 
        type="button"
        class="@GetMainButtonClasses()"
        disabled="@Disabled"
        @onclick="@HandleMainClick">
        @MainButtonContent
    </button>
    <button 
        type="button"
        class="@GetDropdownButtonClasses()"
        disabled="@Disabled"
        @onclick="@HandleDropdownClick"
        aria-label="More options">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"></path>
        </svg>
    </button>
</div>

@if (ShowDropdown)
{
    <div class="absolute z-10 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
        <div class="py-1" role="menu">
            @DropdownContent
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment? MainButtonContent { get; set; }
    [Parameter] public RenderFragment? DropdownContent { get; set; }
    [Parameter] public ButtonVariant Variant { get; set; } = ButtonVariant.Primary;
    [Parameter] public ButtonSize Size { get; set; } = ButtonSize.Md;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ShowDropdown { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnMainClick { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnDropdownClick { get; set; }

    private string GetMainButtonClasses()
    {
        var classes = new List<string> { "px-4 py-2 text-sm font-medium rounded-l-lg border-r border-opacity-20 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2" };
        
        classes.Add(Size switch
        {
            ButtonSize.Sm => "px-3 py-1.5 text-xs",
            ButtonSize.Md => "px-4 py-2 text-sm",
            ButtonSize.Lg => "px-5 py-2.5 text-base",
            _ => "px-4 py-2 text-sm"
        });
        
        classes.Add(Variant switch
        {
            ButtonVariant.Primary => "bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500",
            ButtonVariant.Success => "bg-green-600 text-white hover:bg-green-700 focus:ring-green-500",
            _ => "bg-blue-600 text-white hover:bg-blue-700"
        });
        
        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed");
        }
        
        return string.Join(" ", classes);
    }

    private string GetDropdownButtonClasses()
    {
        var classes = new List<string> { "px-2 py-2 text-sm font-medium rounded-r-lg transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2" };
        
        classes.Add(Size switch
        {
            ButtonSize.Sm => "px-1.5 py-1.5",
            ButtonSize.Md => "px-2 py-2",
            ButtonSize.Lg => "px-2.5 py-2.5",
            _ => "px-2 py-2"
        });
        
        classes.Add(Variant switch
        {
            ButtonVariant.Primary => "bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500",
            ButtonVariant.Success => "bg-green-600 text-white hover:bg-green-700 focus:ring-green-500",
            _ => "bg-blue-600 text-white hover:bg-blue-700"
        });
        
        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed");
        }
        
        return string.Join(" ", classes);
    }

    private async Task HandleMainClick(MouseEventArgs e)
    {
        if (!Disabled && OnMainClick.HasDelegate)
        {
            await OnMainClick.InvokeAsync(e);
        }
    }

    private async Task HandleDropdownClick(MouseEventArgs e)
    {
        if (!Disabled)
        {
            ShowDropdown = !ShowDropdown;
            if (OnDropdownClick.HasDelegate)
            {
                await OnDropdownClick.InvokeAsync(e);
            }
        }
    }
}


