@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Buttons

<div class="@GetGroupClasses()" role="group" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Vertical { get; set; }
    [Parameter] public bool Attached { get; set; } = true;

    private string GetGroupClasses()
    {
        var classes = new List<string> { "inline-flex" };
        
        if (Vertical)
        {
            classes.Add("flex-col");
        }
        else
        {
            classes.Add("flex-row");
        }
        
        if (Attached)
        {
            classes.Add("space-x-0");
        }
        else
        {
            classes.Add(Vertical ? "space-y-2" : "space-x-2");
        }
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }
}


