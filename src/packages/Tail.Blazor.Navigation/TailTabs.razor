@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Navigation

<div class="@GetTabsClasses()" @attributes="AdditionalAttributes">
    <div class="@GetTabListClasses()" style="@GetTabListStyle()">
        @foreach (var tab in Tabs)
        {
            <button
                type="button"
                class="@GetTabButtonClasses(tab)"
                style="@GetTabButtonStyle(tab)"
                role="tab"
                aria-selected="@(tab == ActiveTab)"
                @onclick="() => SetActiveTab(tab)">
                @tab.Label
            </button>
        }
    </div>
    <div class="@GetContentClasses()" style="@GetContentStyle()">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public List<TabItem> Tabs { get; set; } = new();
    [Parameter] public TabItem? ActiveTab { get; set; }
    [Parameter] public EventCallback<TabItem> ActiveTabChanged { get; set; }
    [Parameter] public TabVariant Variant { get; set; } = TabVariant.Default;
    [Parameter] public TabSize Size { get; set; } = TabSize.Md;
    [Parameter] public TabPosition Position { get; set; } = TabPosition.Top;

    protected override void OnInitialized()
    {
        if (ActiveTab == null && Tabs.Count > 0)
        {
            ActiveTab = Tabs[0];
        }
    }

    private string GetTabsClasses()
    {
        var classes = new List<string> { "w-full" };
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetTabListClasses()
    {
        var classes = new List<string> { "flex" };
        
        classes.Add(Position switch
        {
            TabPosition.Top => "flex-row",
            TabPosition.Bottom => "flex-row",
            TabPosition.Left => "flex-col",
            TabPosition.Right => "flex-col",
            _ => "flex-row"
        });
        
        if (Variant == TabVariant.Pills)
        {
            classes.Add("gap-1");
        }
        
        return string.Join(" ", classes);
    }

    private string GetTabListStyle()
    {
        var styles = new List<string>();
        
        switch (Position)
        {
            case TabPosition.Top:
                styles.Add("border-bottom: 2px solid var(--color-divider)");
                break;
            case TabPosition.Bottom:
                styles.Add("border-top: 2px solid var(--color-divider)");
                break;
            case TabPosition.Left:
                styles.Add("border-right: 2px solid var(--color-divider)");
                break;
            case TabPosition.Right:
                styles.Add("border-left: 2px solid var(--color-divider)");
                break;
        }
        
        return string.Join("; ", styles);
    }

    private string GetTabButtonClasses(TabItem tab)
    {
        var classes = new List<string> 
        { 
            "font-medium focus:outline-none"
        };
        
        return string.Join(" ", classes);
    }

    private string GetTabButtonStyle(TabItem tab)
    {
        var styles = new List<string>();
        var isActive = tab == ActiveTab;
        
        // Size-based padding
        var (px, py, fontSize) = Size switch
        {
            TabSize.Sm => ("0.75rem", "0.375rem", "0.75rem"),
            TabSize.Md => ("1rem", "0.5rem", "0.875rem"),
            TabSize.Lg => ("1.25rem", "0.625rem", "1rem"),
            _ => ("1rem", "0.5rem", "0.875rem")
        };
        
        styles.Add($"padding: {py} {px}");
        styles.Add($"font-size: {fontSize}");
        
        // Transitions
        styles.Add("transition: color var(--transition-fast), background-color var(--transition-fast), border-color var(--transition-fast), transform var(--transition-fast)");
        
        // Variant-specific styles
        if (isActive)
        {
            switch (Variant)
            {
                case TabVariant.Default:
                case TabVariant.Underline:
                    styles.Add("color: var(--color-primary)");
                    styles.Add("border-bottom: 3px solid var(--color-primary)");
                    styles.Add("margin-bottom: -2px"); // Compensate for parent border
                    styles.Add("background-color: transparent");
                    break;
                    
                case TabVariant.Pills:
                    styles.Add("background-color: var(--color-primary)");
                    styles.Add("color: white");
                    styles.Add("border-radius: var(--radius-md)");
                    styles.Add("box-shadow: var(--shadow-sm)");
                    break;
            }
        }
        else
        {
            styles.Add("color: var(--color-text-secondary)");
            
            // Hover effects for inactive tabs
            if (Variant == TabVariant.Pills)
            {
                styles.Add("border-radius: var(--radius-md)");
                styles.Add("&:hover { background-color: var(--color-surface-2); color: var(--color-text-primary); }");
            }
            else
            {
                styles.Add("&:hover { color: var(--color-text-primary); border-bottom: 3px solid var(--color-border); margin-bottom: -2px; }");
            }
        }
        
        // Focus ring
        styles.Add("&:focus { outline: none; box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 30%, transparent); border-radius: var(--radius-sm); }");
        
        // Cursor
        styles.Add("cursor: pointer");
        
        return string.Join("; ", styles);
    }

    private string GetContentClasses()
    {
        return "mt-4 p-4";
    }

    private string GetContentStyle()
    {
        return @"
            background-color: var(--color-surface);
            border-radius: var(--radius-lg);
            transition: opacity var(--transition-normal);
        ";
    }

    private async Task SetActiveTab(TabItem tab)
    {
        ActiveTab = tab;
        if (ActiveTabChanged.HasDelegate)
        {
            await ActiveTabChanged.InvokeAsync(tab);
        }
    }
}


