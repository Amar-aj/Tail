<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>1.0.0</Version>
    <Authors>Tail.Blazor Core Team</Authors>
    <Company>Tail.Blazor</Company>
    <Product>Tail.Blazor Visualization</Product>
    <Description>Meta-package for all Tail.Blazor visualization components. Includes: Timeline, QRCode, ArcGauge, GanttChart, OrganizationChart, Flowchart. Ultra-lightweight (~24 KB total).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://tailblazor.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tailblazor/tailblazor</RepositoryUrl>
    <PackageTags>blazor;tailwind;ui;components;visualization;meta-package;lightweight;performance</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>latest</LangVersion>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\components\visualization\Tail.Blazor.Timeline\Tail.Blazor.Timeline.csproj" />
    <ProjectReference Include="..\..\components\visualization\Tail.Blazor.QRCode\Tail.Blazor.QRCode.csproj" />
    <ProjectReference Include="..\..\components\visualization\Tail.Blazor.ArcGauge\Tail.Blazor.ArcGauge.csproj" />
    <ProjectReference Include="..\..\components\visualization\Tail.Blazor.GanttChart\Tail.Blazor.GanttChart.csproj" />
    <ProjectReference Include="..\..\components\visualization\Tail.Blazor.OrganizationChart\Tail.Blazor.OrganizationChart.csproj" />
    <ProjectReference Include="..\..\components\visualization\Tail.Blazor.Flowchart\Tail.Blazor.Flowchart.csproj" />
  </ItemGroup>

</Project>
