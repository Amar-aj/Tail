@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Layout

<div class="@GetContainerClasses()" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public ContainerSize Size { get; set; } = ContainerSize.Default;
    [Parameter] public bool Fluid { get; set; } = false;

    private string GetContainerClasses()
    {
        var classes = new List<string>();
        
        if (Fluid)
        {
            classes.Add("w-full mx-auto px-4 sm:px-6 lg:px-8");
        }
        else
        {
            classes.Add(Size switch
            {
                ContainerSize.Sm => "max-w-screen-sm mx-auto px-4 sm:px-6",
                ContainerSize.Md => "max-w-screen-md mx-auto px-4 sm:px-6",
                ContainerSize.Lg => "max-w-screen-lg mx-auto px-4 sm:px-6",
                ContainerSize.Xl => "max-w-screen-xl mx-auto px-4 sm:px-6",
                ContainerSize.Xxl => "max-w-screen-2xl mx-auto px-4 sm:px-6",
                ContainerSize.Full => "w-full px-4 sm:px-6",
                _ => "max-w-screen-xl mx-auto px-4 sm:px-6"
            });
        }
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }
}

public enum ContainerSize
{
    Default,
    Sm,
    Md,
    Lg,
    Xl,
    Xxl,
    Full
}


