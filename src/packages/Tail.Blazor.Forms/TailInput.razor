@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id" class="@GetLabelClasses()">
            @Label
            @if (Required)
            {
                <span class="text-red-500 ml-1">*</span>
            }
        </label>
    }
    <div class="relative">
        @if (!string.IsNullOrEmpty(IconStart))
        {
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span class="text-gray-400">@IconStart</span>
            </div>
        }
        <input 
            type="@InputType"
            id="@Id"
            class="@GetInputClasses()"
            value="@CurrentValue"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            placeholder="@Placeholder"
            disabled="@Disabled"
            readonly="@ReadOnly"
            required="@Required"
            maxlength="@MaxLength"
            minlength="@MinLength"
            @attributes="AdditionalAttributes" />
        @if (ShowClearButton && !string.IsNullOrEmpty(CurrentValueAsString))
        {
            <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center" @onclick="HandleClear">
                <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        }
    </div>
    @if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm text-red-600 dark:text-red-400">@ErrorMessage</p>
    }
    @if (!string.IsNullOrEmpty(HelperText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">@HelperText</p>
    }
</div>

@code {
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? HelperText { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public InputType InputType { get; set; } = InputType.Text;
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool ShowClearButton { get; set; } = false;
    [Parameter] public string? IconStart { get; set; }
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public int? MaxLength { get; set; }
    [Parameter] public int? MinLength { get; set; }
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();

    private string? CurrentValue => Value;
    private string? CurrentValueAsString => Value;

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetLabelClasses()
    {
        var classes = new List<string> { "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" };
        
        if (Required)
        {
            classes.Add("font-semibold");
        }
        
        return string.Join(" ", classes);
    }

    private string GetInputClasses()
    {
        var classes = new List<string> 
        { 
            "block w-full rounded-lg border-gray-300 shadow-sm",
            "focus:border-blue-500 focus:ring-blue-500",
            "disabled:bg-gray-50 disabled:text-gray-500 disabled:cursor-not-allowed",
            "readonly:bg-gray-50",
            "transition-colors duration-200"
        };
        
        // Size
        classes.Add(Size switch
        {
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            _ => "px-4 py-2 text-base"
        });
        
        // Icon padding
        if (!string.IsNullOrEmpty(IconStart))
        {
            classes.Add("pl-10");
        }
        
        if (ShowClearButton)
        {
            classes.Add("pr-10");
        }
        
        // Error state
        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            classes.Add("border-red-300 focus:border-red-500 focus:ring-red-500");
        }
        else
        {
            classes.Add("border-gray-300");
        }
        
        // Dark mode
        classes.Add("dark:bg-gray-700 dark:border-gray-600 dark:text-white");
        
        return string.Join(" ", classes);
    }

    private bool ShowError => !string.IsNullOrEmpty(ErrorMessage);

    private async Task HandleInput(ChangeEventArgs e)
    {
        var newValue = e.Value?.ToString();
        Value = newValue;
        if (ValueChanged.HasDelegate)
        {
            await ValueChanged.InvokeAsync(Value);
        }
    }

    private void HandleFocus(FocusEventArgs e)
    {
        // Focus handling
    }

    private void HandleBlur(FocusEventArgs e)
    {
        // Blur handling
    }

    private async Task HandleClear()
    {
        Value = null;
        if (ValueChanged.HasDelegate)
        {
            await ValueChanged.InvokeAsync(null);
        }
    }
}

public enum InputType
{
    Text,
    Password,
    Email,
    Number,
    Tel,
    Url,
    Search,
    Date,
    Time,
    DateTimeLocal,
    Month,
    Week
}

public enum InputSize
{
    Sm,
    Md,
    Lg
}

