@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id" class="@GetLabelClasses()" style="@GetLabelStyle()">
            @Label
            @if (Required)
            {
                <span class="ml-1" style="color: var(--color-danger)">*</span>
            }
        </label>
    }
    <div class="relative">
        @if (!string.IsNullOrEmpty(IconStart))
        {
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <span style="color: var(--color-text-muted)">@IconStart</span>
            </div>
        }
        <input 
            type="@InputType"
            id="@Id"
            class="@GetInputClasses()"
            style="@GetInputStyle()"
            value="@CurrentValue"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            placeholder="@Placeholder"
            disabled="@Disabled"
            readonly="@ReadOnly"
            required="@Required"
            maxlength="@MaxLength"
            minlength="@MinLength"
            @attributes="AdditionalAttributes" />
        @if (ShowClearButton && !string.IsNullOrEmpty(CurrentValueAsString))
        {
            <button type="button" class="absolute inset-y-0 right-0 pr-3 flex items-center transition-opacity" 
                    style="opacity: 0.6; transition: opacity var(--transition-fast)"
                    @onclick="HandleClear"
                    onmouseover="this.style.opacity='1'"
                    onmouseout="this.style.opacity='0.6'">
                <svg class="h-5 w-5" style="color: var(--color-text-muted)" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        }
    </div>
    @if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-danger)">@ErrorMessage</p>
    }
    @if (!string.IsNullOrEmpty(HelperText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-text-muted)">@HelperText</p>
    }
</div>

@code {
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? HelperText { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public InputType InputType { get; set; } = InputType.Text;
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool ShowClearButton { get; set; } = false;
    [Parameter] public string? IconStart { get; set; }
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public int? MaxLength { get; set; }
    [Parameter] public int? MinLength { get; set; }
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();

    private bool isFocused = false;
    private string? CurrentValue => Value;
    private string? CurrentValueAsString => Value;

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetLabelClasses()
    {
        var classes = new List<string> { "block text-sm font-medium mb-1" };
        
        if (Required)
        {
            classes.Add("font-semibold");
        }
        
        return string.Join(" ", classes);
    }

    private string GetLabelStyle()
    {
        return "color: var(--color-text-primary);";
    }

    private string GetInputClasses()
    {
        var classes = new List<string> 
        { 
            "block w-full"
        };
        
        // Size
        classes.Add(Size switch
        {
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            _ => "px-4 py-2 text-base"
        });
        
        // Icon padding
        if (!string.IsNullOrEmpty(IconStart))
        {
            classes.Add("pl-10");
        }
        
        if (ShowClearButton)
        {
            classes.Add("pr-10");
        }
        
        return string.Join(" ", classes);
    }

    private string GetInputStyle()
    {
        var styles = new List<string>();
        
        // Border radius based on size
        var radius = Size switch
        {
            InputSize.Sm => "var(--radius-sm)",
            InputSize.Md => "var(--radius-md)",
            InputSize.Lg => "var(--radius-lg)",
            _ => "var(--radius-md)"
        };
        styles.Add($"border-radius: {radius}");
        
        // Colors and states
        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            // Error state
            styles.Add("border: 2px solid var(--color-danger)");
            styles.Add("background-color: color-mix(in srgb, var(--color-danger) 5%, var(--color-surface))");
            styles.Add("box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-danger) 10%, transparent)");
        }
        else if (isFocused)
        {
            // Focus state
            styles.Add("border: 2px solid var(--color-primary)");
            styles.Add("background-color: var(--color-surface)");
            styles.Add("box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary) 10%, transparent)");
            styles.Add("outline: none");
        }
        else
        {
            // Normal state
            styles.Add("background-color: var(--color-surface)");
            styles.Add("border: 1px solid var(--color-border)");
        }
        
        styles.Add("color: var(--color-text-primary)");
        
        // Transitions
        styles.Add("transition: border-color var(--transition-fast), box-shadow var(--transition-fast), background-color var(--transition-fast)");
        
        // Disabled/Readonly
        if (Disabled || ReadOnly)
        {
            styles.Add("background-color: var(--color-surface-2)");
            styles.Add("cursor: not-allowed");
            styles.Add("opacity: 0.6");
        }
        
        // Placeholder color
        styles.Add("&::placeholder { color: var(--color-text-muted); }");
        
        return string.Join("; ", styles);
    }

    private bool ShowError => !string.IsNullOrEmpty(ErrorMessage);

    private async Task HandleInput(ChangeEventArgs e)
    {
        var newValue = e.Value?.ToString();
        Value = newValue;
        if (ValueChanged.HasDelegate)
        {
            await ValueChanged.InvokeAsync(Value);
        }
    }

    private void HandleFocus(FocusEventArgs e)
    {
        isFocused = true;
    }

    private void HandleBlur(FocusEventArgs e)
    {
        isFocused = false;
    }

    private async Task HandleClear()
    {
        Value = null;
        if (ValueChanged.HasDelegate)
        {
            await ValueChanged.InvokeAsync(null);
        }
    }
}


