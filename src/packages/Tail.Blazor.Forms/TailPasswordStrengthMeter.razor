@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms
@using Microsoft.AspNetCore.Components.Web

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id" class="@GetLabelClasses()">
            @Label
            @if (Required)
            {
                <span class="ml-1" style="color: var(--color-danger)">*</span>
            }
        </label>
    }
    <div class="relative">
        <input 
            type="@(ShowPassword ? "text" : "password")"
            id="@Id"
            class="@GetInputClasses()"
            style="@GetInputStyle()"
            value="@Value"
            placeholder="@Placeholder"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            disabled="@Disabled"
            readonly="@ReadOnly"
            required="@Required"
            @attributes="AdditionalAttributes" />
        @if (ShowToggle)
        {
            <button 
                type="button"
                class="@GetToggleButtonClasses()"
                style="@GetToggleButtonStyle()"
                @onclick="TogglePasswordVisibility"
                aria-label="@(ShowPassword ? "Hide password" : "Show password")">
                @if (ShowPassword)
                {
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                    </svg>
                }
                else
                {
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                }
            </button>
        }
    </div>
    
    @if (ShowStrengthMeter && !string.IsNullOrEmpty(Value))
    {
        <div class="@GetStrengthMeterClasses()">
            <div class="@GetStrengthBarClasses()" style="@GetStrengthBarStyle()"></div>
        </div>
        <div class="@GetStrengthLabelClasses()">
            <span style="color: @GetStrengthColor()">@GetStrengthText()</span>
            @if (ShowScore)
            {
                <span class="ml-2 text-xs" style="color: var(--color-text-muted)">(@GetStrengthScore()/100)</span>
            }
        </div>
    }
    
    @if (ShowRequirements && Requirements.Any())
    {
        <div class="@GetRequirementsClasses()">
            @foreach (var requirement in Requirements)
            {
                <div class="@GetRequirementItemClasses(requirement)" style="@GetRequirementItemStyle(requirement)">
                    @if (IsRequirementMet(requirement))
                    {
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    }
                    else
                    {
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    }
                    <span>@requirement.Description</span>
                </div>
            }
        </div>
    }
    
    @if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-danger)">@ErrorMessage</p>
    }
    @if (!string.IsNullOrEmpty(HelperText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-text-secondary)">@HelperText</p>
    }
</div>

@code {
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; } = "Enter password";
    [Parameter] public string? HelperText { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool ShowError { get; set; } = true;
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public bool ShowToggle { get; set; } = true;
    [Parameter] public bool ShowStrengthMeter { get; set; } = true;
    [Parameter] public bool ShowScore { get; set; } = false;
    [Parameter] public bool ShowRequirements { get; set; } = true;
    [Parameter] public List<PasswordRequirement> Requirements { get; set; } = new();
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();

    private bool ShowPassword { get; set; }

    protected override void OnInitialized()
    {
        if (Requirements.Count == 0)
        {
            // Default requirements
            Requirements = new List<PasswordRequirement>
            {
                new PasswordRequirement { Type = PasswordRequirementType.Length, Description = "At least 8 characters", MinLength = 8 },
                new PasswordRequirement { Type = PasswordRequirementType.Uppercase, Description = "At least one uppercase letter" },
                new PasswordRequirement { Type = PasswordRequirementType.Lowercase, Description = "At least one lowercase letter" },
                new PasswordRequirement { Type = PasswordRequirementType.Number, Description = "At least one number" },
                new PasswordRequirement { Type = PasswordRequirementType.Special, Description = "At least one special character" }
            };
        }
    }

    private void HandleInput(ChangeEventArgs e)
    {
        Value = e.Value?.ToString();
        if (ValueChanged.HasDelegate)
        {
            ValueChanged.InvokeAsync(Value);
        }
    }

    private void HandleFocus(FocusEventArgs e)
    {
        // Show requirements on focus
    }

    private void HandleBlur(FocusEventArgs e)
    {
        // Validate on blur
    }

    private void TogglePasswordVisibility()
    {
        ShowPassword = !ShowPassword;
    }

    private int GetStrengthScore()
    {
        if (string.IsNullOrEmpty(Value)) return 0;
        
        int score = 0;
        int length = Value.Length;
        
        // Length score (0-25 points)
        if (length >= 8) score += 10;
        if (length >= 12) score += 10;
        if (length >= 16) score += 5;
        
        // Character variety (0-50 points)
        if (System.Text.RegularExpressions.Regex.IsMatch(Value, @"[a-z]")) score += 10;
        if (System.Text.RegularExpressions.Regex.IsMatch(Value, @"[A-Z]")) score += 10;
        if (System.Text.RegularExpressions.Regex.IsMatch(Value, @"[0-9]")) score += 10;
        if (System.Text.RegularExpressions.Regex.IsMatch(Value, @"[^a-zA-Z0-9]")) score += 10;
        if (length >= 8 && System.Text.RegularExpressions.Regex.IsMatch(Value, @"[a-z]") && 
            System.Text.RegularExpressions.Regex.IsMatch(Value, @"[A-Z]") && 
            System.Text.RegularExpressions.Regex.IsMatch(Value, @"[0-9]") && 
            System.Text.RegularExpressions.Regex.IsMatch(Value, @"[^a-zA-Z0-9]")) score += 10;
        
        // Complexity bonus (0-25 points)
        if (length >= 12 && HasVariety()) score += 15;
        if (length >= 16 && HasVariety()) score += 10;
        
        return Math.Min(100, score);
    }

    private bool HasVariety()
    {
        if (string.IsNullOrEmpty(Value)) return false;
        return System.Text.RegularExpressions.Regex.IsMatch(Value, @"[a-z]") &&
               System.Text.RegularExpressions.Regex.IsMatch(Value, @"[A-Z]") &&
               System.Text.RegularExpressions.Regex.IsMatch(Value, @"[0-9]") &&
               System.Text.RegularExpressions.Regex.IsMatch(Value, @"[^a-zA-Z0-9]");
    }

    private PasswordStrength GetStrength()
    {
        int score = GetStrengthScore();
        if (score < 30) return PasswordStrength.Weak;
        if (score < 60) return PasswordStrength.Fair;
        if (score < 80) return PasswordStrength.Good;
        return PasswordStrength.Strong;
    }

    private string GetStrengthText()
    {
        return GetStrength() switch
        {
            PasswordStrength.Weak => "Weak",
            PasswordStrength.Fair => "Fair",
            PasswordStrength.Good => "Good",
            PasswordStrength.Strong => "Strong",
            _ => "Very Weak"
        };
    }

    private string GetStrengthColor()
    {
        return GetStrength() switch
        {
            PasswordStrength.Weak => "var(--color-danger)",
            PasswordStrength.Fair => "var(--color-warning)",
            PasswordStrength.Good => "var(--color-info)",
            PasswordStrength.Strong => "var(--color-success)",
            _ => "var(--color-text-muted)"
        };
    }

    private double GetStrengthPercentage()
    {
        return GetStrengthScore();
    }

    private bool IsRequirementMet(PasswordRequirement requirement)
    {
        if (string.IsNullOrEmpty(Value)) return false;
        
        return requirement.Type switch
        {
            PasswordRequirementType.Length => Value.Length >= (requirement.MinLength ?? 8),
            PasswordRequirementType.Uppercase => System.Text.RegularExpressions.Regex.IsMatch(Value, @"[A-Z]"),
            PasswordRequirementType.Lowercase => System.Text.RegularExpressions.Regex.IsMatch(Value, @"[a-z]"),
            PasswordRequirementType.Number => System.Text.RegularExpressions.Regex.IsMatch(Value, @"[0-9]"),
            PasswordRequirementType.Special => System.Text.RegularExpressions.Regex.IsMatch(Value, @"[^a-zA-Z0-9]"),
            _ => false
        };
    }

    // Styling methods using global CSS variables
    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        return string.Join(" ", classes);
    }

    private string GetLabelClasses()
    {
        return "block text-sm font-medium mb-1";
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "w-full rounded-lg border transition-all" };
        
        if (ShowToggle)
        {
            classes.Add("pr-10");
        }
        
        classes.Add(Size switch
        {
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            _ => "px-4 py-2 text-base"
        });
        
        return string.Join(" ", classes);
    }

    private string GetInputStyle()
    {
        var styles = new List<string>
        {
            "background-color: var(--color-surface);",
            "border-color: var(--color-border);",
            "color: var(--color-text-primary);",
            "transition: border-color var(--transition-fast), box-shadow var(--transition-fast);"
        };
        
        if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
        {
            styles.Add("border-color: var(--color-danger);");
        }
        
        return string.Join(" ", styles);
    }

    private string GetToggleButtonClasses()
    {
        return "absolute inset-y-0 right-0 pr-3 flex items-center";
    }

    private string GetToggleButtonStyle()
    {
        return "color: var(--color-text-secondary);";
    }

    private string GetStrengthMeterClasses()
    {
        return "mt-2 h-2 rounded-full overflow-hidden";
    }

    private string GetStrengthBarClasses()
    {
        return "h-full transition-all duration-300";
    }

    private string GetStrengthBarStyle()
    {
        var percentage = GetStrengthPercentage();
        return $"width: {percentage}%; background-color: {GetStrengthColor()};";
    }

    private string GetStrengthLabelClasses()
    {
        return "mt-1 text-sm font-medium";
    }

    private string GetRequirementsClasses()
    {
        return "mt-3 space-y-1";
    }

    private string GetRequirementItemClasses(PasswordRequirement requirement)
    {
        return "flex items-center text-sm";
    }

    private string GetRequirementItemStyle(PasswordRequirement requirement)
    {
        var color = IsRequirementMet(requirement) ? "var(--color-success)" : "var(--color-text-muted)";
        return $"color: {color};";
    }
}


