@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms

<div class="@GetWrapperClasses()" @attributes="AdditionalAttributes">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">@Label</label>
    }
    <div class="flex items-center space-x-1" role="radiogroup" aria-label="Rating">
        @for (int i = 1; i <= MaxRating; i++)
        {
            <button
                type="button"
                class="@GetStarClasses(i)"
                @onclick="() => HandleClick(i)"
                @onmouseenter="() => HandleHover(i)"
                @onmouseleave="HandleLeave"
                disabled="@Disabled"
                aria-label="Rate @i out of @MaxRating">
                @if (i <= (HoveredValue ?? Value))
                {
                    <svg class="w-full h-full" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                }
                else
                {
                    <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                }
            </button>
        }
    </div>
    @if (ShowValue)
    {
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">@Value out of @MaxRating</p>
    }
</div>

@code {
    [Parameter] public int Value { get; set; } = 0;
    [Parameter] public EventCallback<int> ValueChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public int MaxRating { get; set; } = 5;
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool ShowValue { get; set; } = false;
    [Parameter] public RatingSize Size { get; set; } = RatingSize.Md;
    [Parameter] public RatingColor Color { get; set; } = RatingColor.Yellow;

    private int? HoveredValue { get; set; }

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetStarClasses(int index)
    {
        var classes = new List<string> 
        { 
            "text-gray-300 hover:text-yellow-400 transition-colors duration-150",
            "focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 rounded"
        };
        
        classes.Add(Size switch
        {
            RatingSize.Sm => "w-4 h-4",
            RatingSize.Md => "w-6 h-6",
            RatingSize.Lg => "w-8 h-8",
            RatingSize.Xl => "w-10 h-10",
            _ => "w-6 h-6"
        });
        
        if (index <= (HoveredValue ?? Value))
        {
            classes.Add(Color switch
            {
                RatingColor.Yellow => "text-yellow-400",
                RatingColor.Orange => "text-orange-400",
                RatingColor.Red => "text-red-400",
                RatingColor.Pink => "text-pink-400",
                RatingColor.Purple => "text-purple-400",
                _ => "text-yellow-400"
            });
        }
        
        if (Disabled || ReadOnly)
        {
            classes.Add("cursor-not-allowed opacity-50");
        }
        else
        {
            classes.Add("cursor-pointer");
        }
        
        return string.Join(" ", classes);
    }

    private async Task HandleClick(int value)
    {
        if (!Disabled && !ReadOnly)
        {
            Value = value;
            if (ValueChanged.HasDelegate)
            {
                await ValueChanged.InvokeAsync(Value);
            }
        }
    }

    private void HandleHover(int value)
    {
        if (!Disabled && !ReadOnly)
        {
            HoveredValue = value;
        }
    }

    private void HandleLeave()
    {
        HoveredValue = null;
    }
}


