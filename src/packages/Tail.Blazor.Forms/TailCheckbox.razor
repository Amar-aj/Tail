@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms

<label class="@GetLabelClasses()" @attributes="AdditionalAttributes">
    <input 
        type="checkbox"
        class="@GetCheckboxClasses()"
        checked="@IsChecked"
        @onchange="HandleChange"
        disabled="@Disabled"
        required="@Required" />
    <span class="@GetTextClasses()">
        @if (!string.IsNullOrEmpty(Label))
        {
            @Label
        }
        else
        {
            @ChildContent
        }
    </span>
</label>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public bool IsChecked { get; set; }
    [Parameter] public EventCallback<bool> IsCheckedChanged { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public CheckboxSize Size { get; set; } = CheckboxSize.Md;
    [Parameter] public CheckboxVariant Variant { get; set; } = CheckboxVariant.Primary;

    private string GetLabelClasses()
    {
        var classes = new List<string> { "inline-flex items-center cursor-pointer" };
        
        if (Disabled)
        {
            classes.Add("opacity-50 cursor-not-allowed");
        }
        
        return string.Join(" ", classes);
    }

    private string GetCheckboxClasses()
    {
        var classes = new List<string> 
        { 
            "rounded border-gray-300 text-blue-600 focus:ring-blue-500",
            "disabled:opacity-50 disabled:cursor-not-allowed",
            "transition-colors duration-200"
        };
        
        classes.Add(Size switch
        {
            CheckboxSize.Sm => "h-4 w-4",
            CheckboxSize.Md => "h-5 w-5",
            CheckboxSize.Lg => "h-6 w-6",
            _ => "h-5 w-5"
        });
        
        classes.Add(Variant switch
        {
            CheckboxVariant.Primary => "text-blue-600 focus:ring-blue-500",
            CheckboxVariant.Success => "text-green-600 focus:ring-green-500",
            CheckboxVariant.Warning => "text-yellow-600 focus:ring-yellow-500",
            CheckboxVariant.Danger => "text-red-600 focus:ring-red-500",
            _ => "text-blue-600"
        });
        
        return string.Join(" ", classes);
    }

    private string GetTextClasses()
    {
        var classes = new List<string> { "ml-2 text-sm text-gray-700 dark:text-gray-300" };
        
        classes.Add(Size switch
        {
            CheckboxSize.Sm => "text-xs",
            CheckboxSize.Md => "text-sm",
            CheckboxSize.Lg => "text-base",
            _ => "text-sm"
        });
        
        return string.Join(" ", classes);
    }

    private async Task HandleChange(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out var newValue))
        {
            IsChecked = newValue;
            if (IsCheckedChanged.HasDelegate)
            {
                await IsCheckedChanged.InvokeAsync(IsChecked);
            }
        }
    }
}

public enum CheckboxSize
{
    Sm,
    Md,
    Lg
}

public enum CheckboxVariant
{
    Primary,
    Success,
    Warning,
    Danger
}

