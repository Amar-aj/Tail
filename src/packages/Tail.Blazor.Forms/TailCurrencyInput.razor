@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms
@using Microsoft.AspNetCore.Components.Web

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id" class="@GetLabelClasses()">
            @Label
            @if (Required)
            {
                <span class="ml-1" style="color: var(--color-danger)">*</span>
            }
        </label>
    }
    <div class="relative">
        @if (!string.IsNullOrEmpty(CurrencySymbol) && SymbolPosition == CurrencySymbolPosition.Left)
        {
            <div class="@GetSymbolClasses()" style="@GetSymbolStyle()">@CurrencySymbol</div>
        }
        <input 
            type="text"
            id="@Id"
            class="@GetInputClasses()"
            style="@GetInputStyle()"
            value="@GetDisplayValue()"
            placeholder="@Placeholder"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            disabled="@Disabled"
            readonly="@ReadOnly"
            required="@Required"
            @attributes="AdditionalAttributes" />
        @if (!string.IsNullOrEmpty(CurrencySymbol) && SymbolPosition == CurrencySymbolPosition.Right)
        {
            <div class="@GetSymbolClasses()" style="@GetSymbolStyle()">@CurrencySymbol</div>
        }
    </div>
    @if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-danger)">@ErrorMessage</p>
    }
    @if (!string.IsNullOrEmpty(HelperText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-text-secondary)">@HelperText</p>
    }
</div>

@code {
    [Parameter] public decimal? Value { get; set; }
    [Parameter] public EventCallback<decimal?> ValueChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? HelperText { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public string? IconStart { get; set; }
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool ShowError { get; set; } = true;
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public string CurrencySymbol { get; set; } = "$";
    [Parameter] public CurrencySymbolPosition SymbolPosition { get; set; } = CurrencySymbolPosition.Left;
    [Parameter] public int DecimalPlaces { get; set; } = 2;
    [Parameter] public string Locale { get; set; } = "en-US";
    [Parameter] public decimal? MinValue { get; set; }
    [Parameter] public decimal? MaxValue { get; set; }
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();

    private string displayValue = string.Empty;
    private bool isFocused = false;

    protected override void OnInitialized()
    {
        UpdateDisplayValue();
    }

    protected override void OnParametersSet()
    {
        UpdateDisplayValue();
    }

    private void UpdateDisplayValue()
    {
        if (Value.HasValue)
        {
            displayValue = FormatCurrency(Value.Value);
        }
        else
        {
            displayValue = string.Empty;
        }
    }

    private void HandleInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? string.Empty;
        var numericValue = ParseCurrency(input);
        
        if (numericValue.HasValue)
        {
            // Validate min/max
            if (MinValue.HasValue && numericValue.Value < MinValue.Value)
            {
                numericValue = MinValue.Value;
            }
            else if (MaxValue.HasValue && numericValue.Value > MaxValue.Value)
            {
                numericValue = MaxValue.Value;
            }
            
            Value = numericValue;
            displayValue = FormatCurrency(numericValue.Value);
        }
        else
        {
            Value = null;
            displayValue = input;
        }
        
        if (ValueChanged.HasDelegate)
        {
            ValueChanged.InvokeAsync(Value);
        }
    }

    private void HandleFocus(FocusEventArgs e)
    {
        isFocused = true;
        // Show raw value when focused
        if (Value.HasValue)
        {
            displayValue = Value.Value.ToString($"F{DecimalPlaces}");
        }
    }

    private void HandleBlur(FocusEventArgs e)
    {
        isFocused = false;
        // Format value when blurred
        if (Value.HasValue)
        {
            displayValue = FormatCurrency(Value.Value);
        }
        else
        {
            displayValue = string.Empty;
        }
    }

    private decimal? ParseCurrency(string input)
    {
        if (string.IsNullOrWhiteSpace(input)) return null;
        
        // Remove currency symbol and formatting
        var cleaned = input
            .Replace(CurrencySymbol, "")
            .Replace(",", "")
            .Replace(" ", "")
            .Trim();
        
        if (decimal.TryParse(cleaned, System.Globalization.NumberStyles.Any, System.Globalization.CultureInfo.InvariantCulture, out var result))
        {
            return Math.Round(result, DecimalPlaces);
        }
        
        return null;
    }

    private string FormatCurrency(decimal value)
    {
        if (isFocused)
        {
            return value.ToString($"F{DecimalPlaces}");
        }
        
        try
        {
            var culture = new System.Globalization.CultureInfo(Locale);
            return value.ToString("C" + DecimalPlaces, culture);
        }
        catch
        {
            return value.ToString($"F{DecimalPlaces}");
        }
    }

    private string GetDisplayValue()
    {
        return displayValue;
    }

    // Styling methods using global CSS variables
    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        return string.Join(" ", classes);
    }

    private string GetLabelClasses()
    {
        return "block text-sm font-medium mb-1";
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "w-full rounded-lg border transition-all" };
        
        if (!string.IsNullOrEmpty(CurrencySymbol))
        {
            if (SymbolPosition == CurrencySymbolPosition.Left)
            {
                classes.Add("pl-8");
            }
            else
            {
                classes.Add("pr-8");
            }
        }
        
        classes.Add(Size switch
        {
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            _ => "px-4 py-2 text-base"
        });
        
        return string.Join(" ", classes);
    }

    private string GetInputStyle()
    {
        var styles = new List<string>
        {
            "background-color: var(--color-surface);",
            "border-color: var(--color-border);",
            "color: var(--color-text-primary);",
            "transition: border-color var(--transition-fast), box-shadow var(--transition-fast);"
        };
        
        if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
        {
            styles.Add("border-color: var(--color-danger);");
        }
        
        return string.Join(" ", styles);
    }

    private string GetSymbolClasses()
    {
        var classes = new List<string> { "absolute inset-y-0 flex items-center pointer-events-none" };
        
        if (SymbolPosition == CurrencySymbolPosition.Left)
        {
            classes.Add("left-0 pl-3");
        }
        else
        {
            classes.Add("right-0 pr-3");
        }
        
        return string.Join(" ", classes);
    }

    private string GetSymbolStyle()
    {
        return "color: var(--color-text-secondary);";
    }
}


