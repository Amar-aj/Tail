    [Parameter] public bool ReadOnly { get; set; }
    [Parameter] public bool ShowError { get; set; } = true;
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public string DefaultCountryCode { get; set; } = "+1";
    [Parameter] public List<CountryCode> CountryCodes { get; set; } = new();
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();

    private string PhoneNumber { get; set; } = string.Empty;
    private string selectedCountryCode = "+1";

