    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(Value) && Value != GetFullPhoneNumber())
        {
            ParsePhoneNumber(Value);
        }
    }

    private void ParsePhoneNumber(string fullNumber)
    {
        if (string.IsNullOrEmpty(fullNumber))
        {
            PhoneNumber = string.Empty;
            return;
        }
        
        // Try to extract country code
        foreach (var country in CountryCodes.OrderByDescending(c => c.Code.Length))
        {
            if (fullNumber.StartsWith(country.Code))
            {
                selectedCountryCode = country.Code;
                PhoneNumber = fullNumber.Substring(country.Code.Length).Trim();
                return;
            }
        }
        
        // No country code found, use default
        PhoneNumber = fullNumber;
    }

    private void HandleInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? string.Empty;
        // Remove non-numeric characters except + and spaces
        PhoneNumber = System.Text.RegularExpressions.Regex.Replace(input, @"[^\d\s\-\(\)]", "");
        UpdateValue();
    }

    private void UpdatePhoneNumber()
    {
        UpdateValue();
    }

    private void UpdateValue()
    {
        var fullNumber = GetFullPhoneNumber();
        Value = string.IsNullOrWhiteSpace(PhoneNumber) ? null : fullNumber;
        if (ValueChanged.HasDelegate)
        {
            ValueChanged.InvokeAsync(Value);
        }
    }

    private string GetFullPhoneNumber()
    {
        if (string.IsNullOrWhiteSpace(PhoneNumber))
        {
            return string.Empty;
        }
        return $"{selectedCountryCode} {PhoneNumber}";
    }

    private void HandleFocus(FocusEventArgs e)
    {
        // Format on focus if needed
    }

    private void HandleBlur(FocusEventArgs e)
    {
        // Format on blur if needed
        UpdateValue();
    }

    // Styling methods using global CSS variables
    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        return string.Join(" ", classes);
    }

    private string GetLabelClasses()
    {
        return "block text-sm font-medium mb-1";
    }

    private string GetCountryCodeClasses()
    {
        var classes = new List<string> { "rounded-lg border transition-all" };
        
        classes.Add(Size switch
        {
            InputSize.Sm => "px-2 py-1.5 text-sm",
            InputSize.Md => "px-3 py-2 text-base",
            InputSize.Lg => "px-4 py-2.5 text-lg",
            _ => "px-3 py-2 text-base"
        });
        
        return string.Join(" ", classes);
    }

    private string GetCountryCodeStyle()
    {
        return @"
            background-color: var(--color-surface);
            border-color: var(--color-border);
            color: var(--color-text-primary);
        ";
    }

    private string GetInputClasses()
    {
        var classes = new List<string> { "flex-1 rounded-lg border transition-all" };
        
        classes.Add(Size switch
        {
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            _ => "px-4 py-2 text-base"
        });
        
        return string.Join(" ", classes);
    }

    private string GetInputStyle()
    {
        var styles = new List<string>
        {
            "background-color: var(--color-surface);",
            "border-color: var(--color-border);",
            "color: var(--color-text-primary);",
            "transition: border-color var(--transition-fast), box-shadow var(--transition-fast);"
        };
        
        if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
        {
            styles.Add("border-color: var(--color-danger);");
        }
        
        return string.Join(" ", styles);
    }
