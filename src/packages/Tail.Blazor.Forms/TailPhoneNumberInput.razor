@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms
@using Microsoft.AspNetCore.Components.Web

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id" class="@GetLabelClasses()">
            @Label
            @if (Required)
            {
                <span class="ml-1" style="color: var(--color-danger)">*</span>
            }
        </label>
    }
    <div class="relative flex items-center gap-2">
        <select 
            class="@GetCountryCodeClasses()"
            style="@GetCountryCodeStyle()"
            @bind="selectedCountryCode"
            @bind:after="UpdatePhoneNumber"
            disabled="@Disabled">
            @foreach (var country in CountryCodes)
            {
                <option value="@country.Code">@country.Flag @country.Code</option>
            }
        </select>
        <input 
            type="tel"
            id="@Id"
            class="@GetInputClasses()"
            style="@GetInputStyle()"
            value="@PhoneNumber"
            placeholder="@Placeholder"
            @oninput="HandleInput"
            @onfocus="HandleFocus"
            @onblur="HandleBlur"
            disabled="@Disabled"
            readonly="@ReadOnly"
            required="@Required"
            @attributes="AdditionalAttributes" />
    </div>
    @if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-danger)">@ErrorMessage</p>
    }
    @if (!string.IsNullOrEmpty(HelperText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm" style="color: var(--color-text-secondary)">@HelperText</p>
    }
</div>

