@inherits Tail.Blazor.Core.TailComponentBase
@namespace Tail.Blazor.Forms

<div class="@GetWrapperClasses()">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label for="@Id" class="@GetLabelClasses()">
            @Label
            @if (Required)
            {
                <span class="text-red-500 ml-1">*</span>
            }
        </label>
    }
    <div class="relative">
        <select 
            id="@Id"
            class="@GetSelectClasses()"
            value="@CurrentValue"
            @onchange="HandleChange"
            disabled="@Disabled"
            required="@Required"
            @attributes="AdditionalAttributes">
            @if (!string.IsNullOrEmpty(Placeholder))
            {
                <option value="">@Placeholder</option>
            }
            @foreach (var item in Items)
            {
                <option value="@GetItemValue(item)">@GetItemText(item)</option>
            }
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-2">
            <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </div>
    </div>
    @if (ShowError && !string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm text-red-600 dark:text-red-400">@ErrorMessage</p>
    }
    @if (!string.IsNullOrEmpty(HelperText) && string.IsNullOrEmpty(ErrorMessage))
    {
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">@HelperText</p>
    }
</div>

@code {
    [Parameter] public string? Value { get; set; }
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public string? Label { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    [Parameter] public string? HelperText { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public List<SelectItem> Items { get; set; } = new();
    [Parameter] public bool Required { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public InputSize Size { get; set; } = InputSize.Md;
    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();
    [Parameter] public Func<SelectItem, string>? ValueSelector { get; set; }
    [Parameter] public Func<SelectItem, string>? TextSelector { get; set; }

    private string? CurrentValue => Value;

    private string GetWrapperClasses()
    {
        var classes = new List<string> { "w-full" };
        
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes.Add(CssClass);
        }
        
        return string.Join(" ", classes);
    }

    private string GetLabelClasses()
    {
        return "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1";
    }

    private string GetSelectClasses()
    {
        var classes = new List<string> 
        { 
            "block w-full rounded-lg border-gray-300 shadow-sm appearance-none",
            "focus:border-blue-500 focus:ring-blue-500",
            "disabled:bg-gray-50 disabled:text-gray-500 disabled:cursor-not-allowed",
            "transition-colors duration-200 pr-10"
        };
        
        classes.Add(Size switch
        {
            InputSize.Sm => "px-3 py-1.5 text-sm",
            InputSize.Md => "px-4 py-2 text-base",
            InputSize.Lg => "px-5 py-2.5 text-lg",
            _ => "px-4 py-2 text-base"
        });
        
        if (!string.IsNullOrEmpty(ErrorMessage))
        {
            classes.Add("border-red-300 focus:border-red-500 focus:ring-red-500");
        }
        else
        {
            classes.Add("border-gray-300");
        }
        
        classes.Add("dark:bg-gray-700 dark:border-gray-600 dark:text-white");
        
        return string.Join(" ", classes);
    }

    private bool ShowError => !string.IsNullOrEmpty(ErrorMessage);

    private async Task HandleChange(ChangeEventArgs e)
    {
        var newValue = e.Value?.ToString();
        Value = newValue;
        if (ValueChanged.HasDelegate)
        {
            await ValueChanged.InvokeAsync(Value);
        }
    }

    private string GetItemValue(SelectItem item)
    {
        return ValueSelector?.Invoke(item) ?? item.Value ?? item.Text ?? "";
    }

    private string GetItemText(SelectItem item)
    {
        return TextSelector?.Invoke(item) ?? item.Text ?? item.Value ?? "";
    }
}


