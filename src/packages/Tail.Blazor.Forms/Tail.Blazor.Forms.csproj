<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Version>1.0.0</Version>
    <Authors>Tail.Blazor Core Team</Authors>
    <Company>Tail.Blazor</Company>
    <Product>Tail.Blazor Forms</Product>
    <Description>Meta-package for all Tail.Blazor form components. Includes: Input, Textarea, Select, Checkbox, Switch, Slider, Rating, Radio, RadioGroup, MultiSelect, DatePicker, DateRangePicker, TimePicker, FileUpload, AutoComplete, ColorPicker, Mask, Numeric, OTPInput, TagInput, CurrencyInput, PhoneNumberInput, PasswordStrengthMeter, RichTextEditor, ImageCropper, AudioRecorder. Ultra-lightweight (~78 KB total).</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://tailblazor.com</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tailblazor/tailblazor</RepositoryUrl>
    <PackageTags>blazor;tailwind;ui;components;forms;inputs;meta-package;lightweight;performance</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <LangVersion>latest</LangVersion>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

