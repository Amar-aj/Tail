@page "/components/image-zoom"
@using Tail.Blazor.ImageZoom
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>ImageZoom - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailImageZoom" 
                 Description="Image zoom component for magnifying images on hover. Ultra-lightweight (~5 KB)."
                 PackageName="Tail.Blazor.Utils"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Image Zoom" Code="@basicCode">
            <PreviewContent>
                <TailImageZoom ImageSrc="https://via.placeholder.com/300" ZoomLevel="2.0" Alt="Sample Image" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Image zoom on hover</li>
                <li>Configurable zoom level</li>
                <li>Magnifying glass effect</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.ImageZoom";
    
    private string basicCode = @"<TailImageZoom ImageSrc=""https://example.com/image.jpg"" ZoomLevel=""2.0"" Alt=""Sample Image"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ImageSrc", Type = "string", Default = "string.Empty", Description = "URL of the image to display and zoom" },
        new DocPageTemplate.ApiParameter { Name = "Alt", Type = "string?", Default = "-", Description = "Alternative text for the image" },
        new DocPageTemplate.ApiParameter { Name = "ZoomLevel", Type = "double", Default = "2.0", Description = "Zoom magnification level" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

