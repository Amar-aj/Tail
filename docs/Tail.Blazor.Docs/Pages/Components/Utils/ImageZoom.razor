@page "/components/image-zoom"
@using Tail.Blazor.ImageZoom
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>ImageZoom - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailImageZoom</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Image zoom component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Image Zoom" Code="@basicCode">
            <PreviewContent>
                <TailImageZoom ImageUrl="https://via.placeholder.com/300" ZoomLevel="2" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.ImageZoom";
    private string basicCode = @"<TailImageZoom ImageUrl=""https://example.com/image.jpg"" ZoomLevel=""2"" />";
}

