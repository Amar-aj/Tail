@page "/components/accordion-item"
@using Tail.Blazor.AccordionItem
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>AccordionItem - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailAccordionItem" 
                 Description="Accordion item component for individual collapsible sections. Ultra-lightweight (~2 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Accordion Item" Code="@basicCode">
            <PreviewContent>
                <div style="border: 1px solid var(--color-border); border-radius: 8px; overflow: hidden;">
                    <TailAccordionItem Title="Item Title" @bind-IsExpanded="isExpanded">
                        <p style="color: var(--color-text-secondary);">Item content goes here</p>
                    </TailAccordionItem>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Individual accordion item with title and content</li>
                <li>Expandable/collapsible state</li>
                <li>Two-way binding for expanded state</li>
                <li>Arrow icon indicator</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private bool isExpanded = false;
    
    private string installCode = @"dotnet add package Tail.Blazor.AccordionItem";
    
    private string basicCode = @"<TailAccordionItem Title=""Item Title"" @bind-IsExpanded=""isExpanded"">
    <p>Item content</p>
</TailAccordionItem>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Content to display when expanded" },
        new DocPageTemplate.ApiParameter { Name = "Title", Type = "string", Default = "string.Empty", Description = "Title text for the accordion item" },
        new DocPageTemplate.ApiParameter { Name = "IsExpanded", Type = "bool", Default = "false", Description = "Whether the item is expanded (two-way binding)" },
        new DocPageTemplate.ApiParameter { Name = "IsExpandedChanged", Type = "EventCallback<bool>", Default = "-", Description = "Event fired when expanded state changes" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

