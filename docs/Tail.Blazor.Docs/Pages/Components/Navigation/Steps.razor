@page "/components/steps"
@using Tail.Blazor.Steps
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Steps - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailSteps</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Step indicator component. Ultra-lightweight (~4 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Steps" Code="@basicCode">
            <PreviewContent>
                <TailSteps Steps="@stepItems" CurrentStep="1" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> stepItems = new() { "Step 1", "Step 2", "Step 3" };
    private string installCode = @"dotnet add package Tail.Blazor.Steps";
    private string basicCode = @"<TailSteps Steps=""@stepItems"" CurrentStep=""1"" />";
}

