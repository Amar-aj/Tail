@page "/components/tabs"
@using Tail.Blazor.Tabs
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Tabs - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailTabs</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Tab component for organizing content. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Tabs" Code="@basicCode">
            <PreviewContent>
                <TailTabs Tabs="@tabs" @bind-ActiveTab="activeTab" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private TailTabs.TabItem? activeTab;
    private List<TailTabs.TabItem> tabs = new()
    {
        new TailTabs.TabItem { Label = "Tab 1", Content = builder => builder.AddContent(0, "Content 1") },
        new TailTabs.TabItem { Label = "Tab 2", Content = builder => builder.AddContent(0, "Content 2") },
        new TailTabs.TabItem { Label = "Tab 3", Content = builder => builder.AddContent(0, "Content 3") }
    };
    private string installCode = @"dotnet add package Tail.Blazor.Tabs";
    private string basicCode = @"<TailTabs Tabs=""@tabs"" @bind-ActiveTab=""activeTab"" />";
}

