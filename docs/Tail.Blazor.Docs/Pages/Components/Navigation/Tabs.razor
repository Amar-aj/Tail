@page "/components/tabs"
@using Tail.Blazor.Tabs
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>Tabs - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailTabs" 
                 Description="Tab component for organizing content into multiple panels. Ultra-lightweight (~5 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Tabs" Code="@basicCode">
            <PreviewContent>
                <TailTabs Tabs="@tabs" @bind-ActiveTab="activeTab" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Multiple tab panels for organizing content</li>
                <li>Two-way binding for active tab</li>
                <li>Custom tab labels and content</li>
                <li>Full theme support with CSS variables</li>
                <li>Smooth transitions and animations</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private TailTabs.TabItem? activeTab;
    private List<TailTabs.TabItem> tabs = new()
    {
        new TailTabs.TabItem { Label = "Tab 1", Content = builder => builder.AddContent(0, "Content 1") },
        new TailTabs.TabItem { Label = "Tab 2", Content = builder => builder.AddContent(0, "Content 2") },
        new TailTabs.TabItem { Label = "Tab 3", Content = builder => builder.AddContent(0, "Content 3") }
    };
    
    private string installCode = @"dotnet add package Tail.Blazor.Tabs";
    
    private string basicCode = @"<TailTabs Tabs=""@tabs"" @bind-ActiveTab=""activeTab"" />

@code {
    private TailTabs.TabItem? activeTab;
    private List<TailTabs.TabItem> tabs = new()
    {
        new TailTabs.TabItem { Label = ""Tab 1"", Content = builder => builder.AddContent(0, ""Content 1"") },
        new TailTabs.TabItem { Label = ""Tab 2"", Content = builder => builder.AddContent(0, ""Content 2"") }
    };
}";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Tabs", Type = "List<TabItem>", Default = "-", Description = "List of tab items to display" },
        new DocPageTemplate.ApiParameter { Name = "ActiveTab", Type = "TabItem?", Default = "-", Description = "Currently active tab (two-way binding)" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

