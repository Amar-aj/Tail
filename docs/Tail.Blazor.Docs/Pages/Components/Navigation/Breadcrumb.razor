@page "/components/breadcrumb"
@using Tail.Blazor.Breadcrumb
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Breadcrumb - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailBreadcrumb</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Breadcrumb navigation component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Breadcrumb" Code="@basicCode">
            <PreviewContent>
                <TailBreadcrumb Items="@breadcrumbItems" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> breadcrumbItems = new();
    private string installCode = @"dotnet add package Tail.Blazor.Breadcrumb";
    private string basicCode = @"<TailBreadcrumb Items=""@breadcrumbItems"" />";
}

