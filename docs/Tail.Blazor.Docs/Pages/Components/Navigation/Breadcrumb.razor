@page "/components/breadcrumb"
@using Tail.Blazor.Breadcrumb
@using Tail.Blazor.Docs.Shared

<PageTitle>Breadcrumb - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailBreadcrumb" 
                 Description="Navigation breadcrumb component for showing current page location. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">
    
    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Breadcrumb" Code="@basicCode">
            <PreviewContent>
                <TailBreadcrumb Items="@breadcrumbItems" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Navigation breadcrumb component for showing page hierarchy</li>
                <li>Automatic separator icons between items</li>
                <li>Last item displayed as text (non-clickable)</li>
                <li>Full theme support with CSS variables</li>
                <li>Customizable styling</li>
                <li>Accessible navigation structure</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Breadcrumb";

    private string basicCode = @"<TailBreadcrumb Items=""@breadcrumbItems"" />

@code {
    private List<TailBreadcrumb.BreadcrumbItem> breadcrumbItems = new()
    {
        new TailBreadcrumb.BreadcrumbItem { Text = ""Home"", Href = ""/"" },
        new TailBreadcrumb.BreadcrumbItem { Text = ""Components"", Href = ""/components"" },
        new TailBreadcrumb.BreadcrumbItem { Text = ""Breadcrumb"", Href = ""/components/breadcrumb"" }
    };
}";

    private List<TailBreadcrumb.BreadcrumbItem> breadcrumbItems = new()
    {
        new TailBreadcrumb.BreadcrumbItem { Text = "Home", Href = "/" },
        new TailBreadcrumb.BreadcrumbItem { Text = "Components", Href = "/components" },
        new TailBreadcrumb.BreadcrumbItem { Text = "Breadcrumb", Href = "/components/breadcrumb" }
    };

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Items", Type = "List<BreadcrumbItem>", Default = "new()", Description = "List of breadcrumb items to display" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

