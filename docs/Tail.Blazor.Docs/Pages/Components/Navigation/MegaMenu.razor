@page "/components/mega-menu"
@using Tail.Blazor.MegaMenu
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>MegaMenu - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailMegaMenu</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Mega menu component. Ultra-lightweight (~7 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Mega Menu" Code="@basicCode">
            <PreviewContent>
                <TailMegaMenu Items="@megaMenuItems" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> megaMenuItems = new();
    private string installCode = @"dotnet add package Tail.Blazor.MegaMenu";
    private string basicCode = @"<TailMegaMenu Items=""@megaMenuItems"" />";
}

