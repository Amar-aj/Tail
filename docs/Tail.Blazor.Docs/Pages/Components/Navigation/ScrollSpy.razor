@page "/components/scroll-spy"
@using Tail.Blazor.ScrollSpy
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>ScrollSpy - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailScrollSpy" 
                 Description="Scroll spy component for navigation links that highlight based on scroll position. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Scroll Spy" Code="@basicCode">
            <PreviewContent>
                <TailScrollSpy Items="@scrollSpyItems" ActiveId="@activeId" Position="@Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyPosition.Left" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Navigation links for page sections</li>
                <li>Active section highlighting</li>
                <li>Left or right positioning</li>
                <li>Click to scroll to sections</li>
                <li>Sticky positioning support</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string? activeId = "section1";
    private List<Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyItem> scrollSpyItems = new()
    {
        new Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyItem { Id = "section1", Label = "Section 1", Href = "#section1" },
        new Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyItem { Id = "section2", Label = "Section 2", Href = "#section2" },
        new Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyItem { Id = "section3", Label = "Section 3", Href = "#section3" }
    };
    
    private string installCode = @"dotnet add package Tail.Blazor.ScrollSpy";
    
    private string basicCode = @"<TailScrollSpy Items=""@scrollSpyItems"" ActiveId=""@activeId"" Position=""Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyPosition.Left"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Items", Type = "List<Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyItem>", Default = "new()", Description = "List of scroll spy items/sections" },
        new DocPageTemplate.ApiParameter { Name = "ActiveId", Type = "string?", Default = "-", Description = "ID of the currently active section" },
        new DocPageTemplate.ApiParameter { Name = "Position", Type = "Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyPosition", Default = "Left", Description = "Position of the scroll spy (Left or Right)" },
        new DocPageTemplate.ApiParameter { Name = "OnItemClick", Type = "EventCallback<Tail.Blazor.ScrollSpy.TailScrollSpy.ScrollSpyItem>", Default = "-", Description = "Event fired when a scroll spy item is clicked" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

