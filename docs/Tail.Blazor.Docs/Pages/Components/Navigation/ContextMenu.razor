@page "/components/context-menu"
@using Tail.Blazor.ContextMenu
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>ContextMenu - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailContextMenu</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Context menu component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Context Menu" Code="@basicCode">
            <PreviewContent>
                <TailContextMenu Items="@contextMenuItems" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> contextMenuItems = new();
    private string installCode = @"dotnet add package Tail.Blazor.ContextMenu";
    private string basicCode = @"<TailContextMenu Items=""@contextMenuItems"" />";
}

