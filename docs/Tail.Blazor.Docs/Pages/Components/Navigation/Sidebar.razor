@page "/components/sidebar"
@using Tail.Blazor.Sidebar
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Menu
@using Tail.Blazor.MenuItem
@using Microsoft.AspNetCore.Components

<PageTitle>Sidebar - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailSidebar" 
                 Description="Sidebar navigation component with collapsible functionality. Ultra-lightweight (~6 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Sidebar" Code="@basicCode">
            <PreviewContent>
                <div style="height: 300px; position: relative; border: 1px solid var(--color-border); border-radius: 8px;">
                    <TailSidebar @bind-IsCollapsed="isCollapsed" Position="@Tail.Blazor.Sidebar.SidebarPosition.Left" IsCollapsible="true">
                        <Header>
                            <h3 style="color: var(--color-text-primary); font-weight: bold;">Navigation</h3>
                        </Header>
                        <ChildContent>
                            <TailMenu>
                                <TailMenuItem Href="/home">Home</TailMenuItem>
                                <TailMenuItem Href="/about">About</TailMenuItem>
                                <TailMenuItem Href="/contact">Contact</TailMenuItem>
                            </TailMenu>
                        </ChildContent>
                    </TailSidebar>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Collapsible sidebar navigation</li>
                <li>Left or right positioning</li>
                <li>Optional header and footer sections</li>
                <li>Smooth collapse/expand animation</li>
                <li>Toggle button for collapsing</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private bool isCollapsed = false;
    
    private string installCode = @"dotnet add package Tail.Blazor.Sidebar";
    
    private string basicCode = @"<TailSidebar @bind-IsCollapsed=""isCollapsed"" Position=""Tail.Blazor.Sidebar.SidebarPosition.Left"" IsCollapsible=""true"">
    <Header>
        <h3>Navigation</h3>
    </Header>
    <ChildContent>
        <TailMenu>
            <TailMenuItem Href=""/home"">Home</TailMenuItem>
            <TailMenuItem Href=""/about"">About</TailMenuItem>
        </TailMenu>
    </ChildContent>
</TailSidebar>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Main content of the sidebar (typically navigation menu)" },
        new DocPageTemplate.ApiParameter { Name = "Header", Type = "RenderFragment?", Default = "-", Description = "Content for the sidebar header" },
        new DocPageTemplate.ApiParameter { Name = "Footer", Type = "RenderFragment?", Default = "-", Description = "Content for the sidebar footer" },
        new DocPageTemplate.ApiParameter { Name = "IsCollapsed", Type = "bool", Default = "false", Description = "Whether the sidebar is collapsed (two-way binding)" },
        new DocPageTemplate.ApiParameter { Name = "IsCollapsible", Type = "bool", Default = "true", Description = "Whether the sidebar can be collapsed" },
        new DocPageTemplate.ApiParameter { Name = "Position", Type = "Tail.Blazor.Sidebar.SidebarPosition", Default = "Left", Description = "Position of the sidebar (Left or Right)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

