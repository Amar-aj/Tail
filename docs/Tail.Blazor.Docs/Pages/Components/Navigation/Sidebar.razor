@page "/components/sidebar"
@using Tail.Blazor.Sidebar
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Sidebar - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailSidebar</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Sidebar navigation component. Ultra-lightweight (~6 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Sidebar" Code="@basicCode">
            <PreviewContent>
                <TailSidebar IsOpen="@isOpen" Position="SidebarPosition.Left">
                    <p>Sidebar content</p>
                </TailSidebar>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private bool isOpen = true;
    private string installCode = @"dotnet add package Tail.Blazor.Sidebar";
    private string basicCode = @"<TailSidebar IsOpen=""@isOpen"" Position=""SidebarPosition.Left"">
    <p>Sidebar content</p>
</TailSidebar>";
}

