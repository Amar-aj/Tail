@page "/components/accordion"
@using Tail.Blazor.Accordion
@using Tail.Blazor.AccordionItem
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>Accordion - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailAccordion" 
                 Description="Accordion component for displaying collapsible content sections. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Accordion" Code="@basicCode">
            <PreviewContent>
                <TailAccordion Items="@accordionItems" AllowMultiple="false" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Collapsible content sections</li>
                <li>Option to allow multiple items open at once</li>
                <li>Expand/collapse animation</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private List<Tail.Blazor.Accordion.TailAccordion.AccordionItem> accordionItems = new()
    {
        new Tail.Blazor.Accordion.TailAccordion.AccordionItem { Title = "Item 1", Content = builder => builder.AddContent(0, "Content for item 1"), IsExpanded = false },
        new Tail.Blazor.Accordion.TailAccordion.AccordionItem { Title = "Item 2", Content = builder => builder.AddContent(0, "Content for item 2"), IsExpanded = false }
    };
    
    private string installCode = @"dotnet add package Tail.Blazor.Accordion";
    
    private string basicCode = @"<TailAccordion Items=""@accordionItems"" AllowMultiple=""false"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Items", Type = "List<Tail.Blazor.Accordion.TailAccordion.AccordionItem>", Default = "new()", Description = "List of accordion items to display" },
        new DocPageTemplate.ApiParameter { Name = "AllowMultiple", Type = "bool", Default = "false", Description = "Allow multiple items to be expanded at the same time" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

