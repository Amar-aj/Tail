@page "/components/menu-item"
@using Tail.Blazor.MenuItem
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Menu
@using Microsoft.AspNetCore.Components

<PageTitle>MenuItem - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailMenuItem" 
                 Description="Menu item component for navigation links within menus. Ultra-lightweight (~2 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Menu Item" Code="@basicCode">
            <PreviewContent>
                <TailMenu>
                    <TailMenuItem Href="/home" IsActive="true">Home</TailMenuItem>
                    <TailMenuItem Href="/about">About</TailMenuItem>
                    <TailMenuItem Href="/contact">Contact</TailMenuItem>
                </TailMenu>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Navigation link for menus</li>
                <li>Active state styling</li>
                <li>Optional icon support</li>
                <li>Optional badge support</li>
                <li>Click event handling</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.MenuItem";
    
    private string basicCode = @"<TailMenu>
    <TailMenuItem Href=""/home"" IsActive=""true"">Home</TailMenuItem>
    <TailMenuItem Href=""/about"">About</TailMenuItem>
</TailMenu>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Content/text for the menu item" },
        new DocPageTemplate.ApiParameter { Name = "Icon", Type = "RenderFragment?", Default = "-", Description = "Optional icon to display before the content" },
        new DocPageTemplate.ApiParameter { Name = "Badge", Type = "RenderFragment?", Default = "-", Description = "Optional badge to display after the content" },
        new DocPageTemplate.ApiParameter { Name = "Href", Type = "string?", Default = "-", Description = "Navigation URL for the menu item" },
        new DocPageTemplate.ApiParameter { Name = "IsActive", Type = "bool", Default = "false", Description = "Whether the menu item is currently active" },
        new DocPageTemplate.ApiParameter { Name = "OnClick", Type = "EventCallback", Default = "-", Description = "Event fired when the menu item is clicked" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

