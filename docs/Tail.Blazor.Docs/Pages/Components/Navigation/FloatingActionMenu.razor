        new DocPageTemplate.ApiParameter { Name = "Position", Type = "Tail.Blazor.FloatingActionMenu.TailFloatingActionMenu.FloatingActionMenuPosition", Default = "BottomRight", Description = "Position of the floating action menu (TopLeft, TopRight, BottomLeft, BottomRight)" },
        new DocPageTemplate.ApiParameter { Name = "OnItemClick", Type = "EventCallback<Tail.Blazor.FloatingActionMenu.TailFloatingActionMenu.FloatingActionMenuItem>", Default = "-", Description = "Event fired when a menu item is clicked" },
