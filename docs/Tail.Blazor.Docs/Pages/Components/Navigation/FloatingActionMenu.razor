@page "/components/floating-action-menu"
@using Tail.Blazor.FloatingActionMenu
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>FloatingActionMenu - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailFloatingActionMenu</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Floating action menu component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Floating Action Menu" Code="@basicCode">
            <PreviewContent>
                <TailFloatingActionMenu Items="@fabMenuItems" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> fabMenuItems = new();
    private string installCode = @"dotnet add package Tail.Blazor.FloatingActionMenu";
    private string basicCode = @"<TailFloatingActionMenu Items=""@fabMenuItems"" />";
}

