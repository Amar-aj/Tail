@code {
    private List<TailFloatingActionMenu.FloatingActionMenuItem> menuItems = new()
    {
        new Tail.Blazor.FloatingActionMenu.TailFloatingActionMenu.FloatingActionMenuItem { Label = ""Add Item"" },
        new Tail.Blazor.FloatingActionMenu.TailFloatingActionMenu.FloatingActionMenuItem { Label = ""Settings"" }
