@page "/components/floating-action-menu"
@using Tail.Blazor.FloatingActionMenu
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Alert
@using Microsoft.AspNetCore.Components

<PageTitle>FloatingActionMenu - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailFloatingActionMenu" 
                 Description="Floating action menu component that expands to show multiple actions. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Navigation"
                 ApiParameters="@apiParameters">
    
    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Floating Action Menu" Code="@basicCode">
            <PreviewContent>
                <div style="position: relative; height: 300px; background-color: var(--color-surface-secondary); border-radius: 8px; padding: 2rem;">
                    <TailFloatingActionMenu Items="@menuItems" Position="@Tail.Blazor.FloatingActionMenu.TailFloatingActionMenu.FloatingActionMenuPosition.BottomRight" OnItemClick="HandleItemClick" />
                </div>
                @if (!string.IsNullOrEmpty(message))
                {
                    <TailAlert Variant="Tail.Blazor.Alert.AlertVariant.Info" Class="mt-4">
                        @message
                    </TailAlert>
                }
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Positions">
        <CodePreview Title="Different Positions" Code="@positionsCode">
            <PreviewContent>
                <div style="position: relative; height: 400px; background-color: var(--color-surface-secondary); border-radius: 8px; padding: 2rem;">
                    <TailFloatingActionMenu Items="@menuItems" Position="@Tail.Blazor.FloatingActionMenu.TailFloatingActionMenu.FloatingActionMenuPosition.BottomRight" OnItemClick="HandleItemClick" />
                    <p style="color: var(--color-text-secondary); margin-top: 2rem;">Click the floating button to expand the menu</p>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Floating action button with expandable menu</li>
                <li>Multiple position options (TopLeft, TopRight, BottomLeft, BottomRight)</li>
                <li>Smooth animations and transitions</li>
                <li>Custom icons and labels for each action</li>
                <li>Full theme support with CSS variables</li>
                <li>Event handling for menu item clicks</li>
                <li>Responsive and accessible</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

