@page "/components/carousel"
@using Tail.Blazor.Carousel
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Carousel - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailCarousel</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Carousel/slider component. Ultra-lightweight (~6 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Carousel" Code="@basicCode">
            <PreviewContent>
                <TailCarousel Items="@carouselItems" AutoPlay="true" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> carouselItems = new();
    private string installCode = @"dotnet add package Tail.Blazor.Carousel";
    private string basicCode = @"<TailCarousel Items=""@carouselItems"" AutoPlay=""true"" />";
}

