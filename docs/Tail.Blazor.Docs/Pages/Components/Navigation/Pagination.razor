@page "/components/pagination"
@using Tail.Blazor.Pagination
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Pagination - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailPagination</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Pagination component. Ultra-lightweight (~4 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Pagination" Code="@basicCode">
            <PreviewContent>
                <TailPagination CurrentPage="2" TotalPages="10" OnPageChanged="HandlePageChange" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Pagination";
    private string basicCode = @"<TailPagination CurrentPage=""2"" TotalPages=""10"" OnPageChanged=""HandlePageChange"" />";
    
    private void HandlePageChange(int page)
    {
        // Handle page change
    }
}

