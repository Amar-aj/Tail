@page "/components/icon"
@using Tail.Blazor.Icon
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>Icon - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailIcon" 
                 Description="Icon component with Heroicons and Lucide support. Ultra-lightweight (~15 KB)."
                 PackageName="Tail.Blazor.Icons"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Icon" Code="@basicCode">
            <PreviewContent>
                <div class="flex gap-4 items-center">
                    <TailIcon Name="Tail.Blazor.Icon.IconName.Home" Size="Tail.Blazor.Icon.IconSize.Md" />
                    <TailIcon Name="Tail.Blazor.Icon.IconName.User" Size="Tail.Blazor.Icon.IconSize.Md" />
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Heroicons and Lucide icon library support</li>
                <li>Multiple size options</li>
                <li>Named icon support</li>
                <li>Custom icon rendering</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Icon";
    
    private string basicCode = @"<TailIcon Name=""Tail.Blazor.Icon.IconName.Home"" Size=""Tail.Blazor.Icon.IconSize.Md"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Name", Type = "Tail.Blazor.Icon.IconName?", Default = "-", Description = "Icon name from the icon library" },
        new DocPageTemplate.ApiParameter { Name = "Size", Type = "Tail.Blazor.Icon.IconSize", Default = "Md", Description = "Size of the icon (Xs, Sm, Md, Lg, Xl)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

