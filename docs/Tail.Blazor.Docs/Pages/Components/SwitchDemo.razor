@page "/components/switch"
@page "/components/toggle"
@using Tail.Blazor.Forms
@using Tail.Blazor.Docs.Shared

<PageTitle>Switch Toggle - Tail.Blazor</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">Switch Toggle</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        A modern toggle switch component with multiple variants, sizes, and customization options.
    </p>

    <!-- Overview -->
    <section class="mb-12">
        <div class="grid md:grid-cols-2 gap-6">
            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">? Features</h3>
                <ul class="space-y-2 text-gray-600 dark:text-gray-400">
                    <li>? 4 variants (Primary, Success, Warning, Danger)</li>
                    <li>? 3 sizes (Sm, Md, Lg)</li>
                    <li>? Loading state support</li>
                    <li>? Custom icons for checked/unchecked</li>
                    <li>? Inner ON/OFF labels</li>
                    <li>? Smooth animations</li>
                    <li>? Dark mode support</li>
                    <li>? Fully accessible</li>
                </ul>
            </div>

            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">?? Current State</h3>
                <div class="space-y-3">
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded">
                        <span class="font-medium">Status:</span>
                        <span class="px-3 py-1 rounded-full text-sm @(basicSwitch ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200" : "bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200")">
                            @(basicSwitch ? "ON" : "OFF")
                        </span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded">
                        <span class="font-medium">Toggles:</span>
                        <span class="text-gray-600 dark:text-gray-400">@toggleCount</span>
                    </div>
                    <TailSwitch 
                        Label="Test Switch" 
                        @bind-IsChecked="basicSwitch"
                        OnToggle="HandleToggle"
                        Variant="SwitchVariant.Primary"
                        Size="SwitchSize.Md" />
                </div>
            </div>
        </div>
    </section>

    <!-- Variants -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Variants</h2>
        
        <CodePreview Title="All Variants" Code="@variantsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Primary" Variant="SwitchVariant.Primary" @bind-IsChecked="primaryVariant" />
                        <span class="text-sm text-gray-500">Blue theme color</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Success" Variant="SwitchVariant.Success" @bind-IsChecked="successVariant" />
                        <span class="text-sm text-gray-500">Green for success states</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Warning" Variant="SwitchVariant.Warning" @bind-IsChecked="warningVariant" />
                        <span class="text-sm text-gray-500">Yellow for warnings</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Danger" Variant="SwitchVariant.Danger" @bind-IsChecked="dangerVariant" />
                        <span class="text-sm text-gray-500">Red for dangerous actions</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Emoji" Variant="SwitchVariant.Primary" @bind-IsChecked="emojiVariant" />
                        <span class="text-sm text-gray-500">Primary variant with emoji labels</span>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Sizes -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Sizes</h2>
        
        <CodePreview Title="All Sizes" Code="@sizesCode">
            <PreviewContent>
                <div class="space-y-6">
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Small" Size="SwitchSize.Sm" @bind-IsChecked="smSize" />
                        <code class="text-xs text-gray-500">SwitchSize.Sm</code>
                    </div>
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Medium (Default)" Size="SwitchSize.Md" @bind-IsChecked="mdSize" />
                        <code class="text-xs text-gray-500">SwitchSize.Md</code>
                    </div>
                    <div class="flex items-center space-x-4">
                        <TailSwitch Label="Large" Size="SwitchSize.Lg" @bind-IsChecked="lgSize" />
                        <code class="text-xs text-gray-500">SwitchSize.Lg</code>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Inner Labels -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Inner Labels</h2>
        
        <CodePreview Title="ON/OFF Labels Inside Switch" Code="@labelsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailSwitch 
                        Label="With default labels" 
                        ShowLabels="true"
                        Size="SwitchSize.Md"
                        @bind-IsChecked="labelsDefault" />
                    
                    <TailSwitch 
                        Label="Custom labels" 
                        ShowLabels="true"
                        OnLabel="YES"
                        OffLabel="NO"
                        Size="SwitchSize.Lg"
                        Variant="SwitchVariant.Success"
                        @bind-IsChecked="labelsCustom" />
                    
                    <TailSwitch 
                        Label="Emoji labels (Primary)" 
                        ShowLabels="true"
                        OnLabel="?"
                        OffLabel="?"
                        Size="SwitchSize.Lg"
                        Variant="SwitchVariant.Primary"
                        @bind-IsChecked="labelsEmoji" />
                    
                    <TailSwitch 
                        Label="Professional Emoji Style" 
                        ShowLabels="true"
                        OnLabel="âœ…"
                        OffLabel="âŒ"
                        Size="SwitchSize.Lg"
                        Variant="SwitchVariant.Primary"
                        @bind-IsChecked="labelsEmojiPro" />
                    
                    <TailSwitch 
                        Label="Emoji Toggle (Light/Dark)" 
                        ShowLabels="true"
                        OnLabel="ðŸŒ™"
                        OffLabel="â˜€ï¸"
                        Size="SwitchSize.Lg"
                        Variant="SwitchVariant.Primary"
                        @bind-IsChecked="labelsEmojiTheme" />
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Loading State -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Loading State</h2>
        
        <CodePreview Title="Switch with Loading Indicator" Code="@loadingCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailSwitch 
                        Label="Saving preferences..." 
                        Loading="true"
                        IsChecked="true" />
                    
                    <TailSwitch 
                        Label="Click to toggle with delay" 
                        @bind-IsChecked="loadingSwitch"
                        Loading="@isLoading"
                        OnToggle="HandleLoadingToggle"
                        Variant="SwitchVariant.Primary" />
                    
                    @if (isLoading)
                    {
                        <p class="text-sm text-blue-600 dark:text-blue-400">? Processing...</p>
                    }
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Custom Icons -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Custom Icons</h2>
        
        <CodePreview Title="Switches with Icons" Code="@iconsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailSwitch 
                        Label="Checkmark icon" 
                        CheckedIcon="<svg class='w-3 h-3' fill='currentColor' viewBox='0 0 20 20'><path fill-rule='evenodd' d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z' clip-rule='evenodd'/></svg>"
                        @bind-IsChecked="iconCheck"
                        Variant="SwitchVariant.Success" />
                    
                    <TailSwitch 
                        Label="Lock/Unlock icons" 
                        CheckedIcon="<svg class='w-3 h-3' fill='currentColor' viewBox='0 0 20 20'><path d='M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z'/></svg>"
                        UncheckedIcon="<svg class='w-3 h-3' fill='currentColor' viewBox='0 0 20 20'><path fill-rule='evenodd' d='M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z' clip-rule='evenodd'/></svg>"
                        @bind-IsChecked="iconLock"
                        Variant="SwitchVariant.Warning" />
                    
                    <TailSwitch 
                        Label="Volume icons" 
                        CheckedIcon="<svg class='w-3 h-3' fill='currentColor' viewBox='0 0 20 20'><path fill-rule='evenodd' d='M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM14.657 2.929a1 1 0 011.414 0A9.972 9.972 0 0119 10a9.972 9.972 0 01-2.929 7.071 1 1 0 01-1.414-1.414A7.971 7.971 0 0017 10c0-2.21-.894-4.208-2.343-5.657a1 1 0 010-1.414zm-2.829 2.828a1 1 0 011.415 0A5.983 5.983 0 0115 10a5.984 5.984 0 01-1.757 4.243 1 1 0 01-1.415-1.415A3.984 3.984 0 0013 10a3.983 3.983 0 00-1.172-2.828 1 1 0 010-1.415z' clip-rule='evenodd'/></svg>"
                        UncheckedIcon="<svg class='w-3 h-3' fill='currentColor' viewBox='0 0 20 20'><path fill-rule='evenodd' d='M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217zM12.293 7.293a1 1 0 011.414 0L15 8.586l1.293-1.293a1 1 0 111.414 1.414L16.414 10l1.293 1.293a1 1 0 01-1.414 1.414L15 11.414l-1.293 1.293a1 1 0 01-1.414-1.414L13.586 10l-1.293-1.293a1 1 0 010-1.414z' clip-rule='evenodd'/></svg>"
                        @bind-IsChecked="iconVolume"
                        Variant="SwitchVariant.Primary" />
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Disabled State -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Disabled State</h2>
        
        <CodePreview Title="Disabled Switches" Code="@disabledCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailSwitch Label="Disabled (Off)" Disabled="true" IsChecked="false" />
                    <TailSwitch Label="Disabled (On)" Disabled="true" IsChecked="true" Variant="SwitchVariant.Primary" />
                    <TailSwitch Label="Disabled with labels" Disabled="true" IsChecked="true" ShowLabels="true" Size="SwitchSize.Lg" />
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Event Handling -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Event Handling</h2>
        
        <CodePreview Title="OnToggle Event" Code="@eventsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailSwitch 
                        Label="Toggle me to see events" 
                        @bind-IsChecked="eventSwitch"
                        OnToggle="HandleEventToggle"
                        Variant="SwitchVariant.Primary" />
                    
                    @if (eventMessages.Any())
                    {
                        <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                            <h4 class="font-semibold text-blue-900 dark:text-blue-200 mb-2">Event Log:</h4>
                            <div class="space-y-1">
                                @foreach (var message in eventMessages.TakeLast(5))
                                {
                                    <p class="text-sm text-blue-700 dark:text-blue-300">@message</p>
                                }
                            </div>
                            <button @onclick="ClearEventLog" class="mt-2 text-xs text-blue-600 dark:text-blue-400 hover:underline">
                                Clear log
                            </button>
                        </div>
                    }
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Practical Examples -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Practical Examples</h2>
        
        <CodePreview Title="Settings Panel" Code="@practicalCode">
            <PreviewContent>
                <div class="p-6 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">?? Application Settings</h3>
                        
                        <div class="space-y-4">
                            <div class="flex items-center justify-between p-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-lg transition-colors">
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">?? Push Notifications</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400">Receive alerts and updates</div>
                                </div>
                                <TailSwitch @bind-IsChecked="settings.Notifications" Variant="SwitchVariant.Primary" />
                            </div>
                            
                            <div class="flex items-center justify-between p-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-lg transition-colors">
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">?? Email Updates</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400">Daily digest emails</div>
                                </div>
                                <TailSwitch @bind-IsChecked="settings.EmailUpdates" Variant="SwitchVariant.Success" />
                            </div>
                            
                            <div class="flex items-center justify-between p-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-lg transition-colors">
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">?? Two-Factor Authentication</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400">Extra security for your account</div>
                                </div>
                                <TailSwitch @bind-IsChecked="settings.TwoFactor" Variant="SwitchVariant.Success" />
                            </div>
                            
                            <div class="flex items-center justify-between p-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-lg transition-colors">
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">?? Dark Mode</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400">Toggle dark theme</div>
                                </div>
                                <TailSwitch @bind-IsChecked="settings.DarkMode" ShowLabels="true" OnLabel="ON" OffLabel="OFF" Size="SwitchSize.Lg" />
                            </div>
                            
                            <div class="flex items-center justify-between p-3 hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded-lg transition-colors">
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">?? Analytics</div>
                                    <div class="text-sm text-gray-500 dark:text-gray-400">Help improve the app</div>
                                </div>
                                <TailSwitch @bind-IsChecked="settings.Analytics" Variant="SwitchVariant.Primary" />
                            </div>
                        </div>
                        
                        <div class="mt-6 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                            <p class="text-sm text-blue-800 dark:text-blue-200">
                                <strong>Active Settings:</strong> 
                                @string.Join(", ", new[] 
                                { 
                                    settings.Notifications ? "Notifications" : null,
                                    settings.EmailUpdates ? "Email" : null,
                                    settings.TwoFactor ? "2FA" : null,
                                    settings.DarkMode ? "Dark Mode" : null,
                                    settings.Analytics ? "Analytics" : null
                                }.Where(s => s != null))
                            </p>
                        </div>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- API Reference -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">API Reference</h2>
        
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 border border-gray-200 dark:border-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-800">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Parameter</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Default</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Description</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">Label</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">string?</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">null</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Label text displayed next to the switch</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">IsChecked</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">bool</td>
