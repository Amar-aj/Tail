@page "/components/icon-button"
@using Tail.Blazor.IconButton
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Alert
@using Tail.Blazor.Button
@using Microsoft.AspNetCore.Components

<PageTitle>IconButton - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailIconButton" 
                 Description="Icon-only button component for compact actions. Ultra-lightweight (~2 KB)."
                 PackageName="Tail.Blazor.Buttons"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Icon Button" Code="@basicCode">
            <PreviewContent>
                <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary" OnClick="@(() => ShowMessage("Icon clicked!"))">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                </TailIconButton>
                @if (!string.IsNullOrEmpty(message))
                {
                    <TailAlert Variant="Tail.Blazor.Alert.AlertVariant.Info" Class="mt-4">
                        @message
                    </TailAlert>
                }
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Variants">
        <CodePreview Title="Button Variants" Code="@variantsCode">
            <PreviewContent>
                <div class="flex flex-wrap gap-3">
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Success">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Warning">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Danger">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </TailIconButton>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Sizes">
        <CodePreview Title="Button Sizes" Code="@sizesCode">
            <PreviewContent>
                <div class="flex flex-wrap items-center gap-3">
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary" Size="@Tail.Blazor.Button.ButtonSize.Xs">
                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary" Size="@Tail.Blazor.Button.ButtonSize.Sm">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary" Size="@Tail.Blazor.Button.ButtonSize.Md">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary" Size="@Tail.Blazor.Button.ButtonSize.Lg">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="Tail.Blazor.Button.ButtonVariant.Primary" Size="@Tail.Blazor.Button.ButtonSize.Xl">
                        <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>
</DocPageTemplate>

@code {
    private string message = string.Empty;

    private string installCode = @"dotnet add package Tail.Blazor.IconButton";

    private string basicCode = @"<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"" OnClick=""HandleClick"">
    <svg class=""w-5 h-5"" fill=""none"" viewBox=""0 0 24 24"" stroke=""currentColor"">
        <path stroke-linecap=""round"" stroke-linejoin=""round"" stroke-width=""2"" d=""M12 4v16m8-8H4"" />
    </svg>
</TailIconButton>";

    private string variantsCode = @"<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Success"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Warning"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Danger"">...</TailIconButton>";

    private string sizesCode = @"<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"" Size=""Tail.Blazor.Button.ButtonSize.Xs"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"" Size=""Tail.Blazor.Button.ButtonSize.Sm"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"" Size=""Tail.Blazor.Button.ButtonSize.Md"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"" Size=""Tail.Blazor.Button.ButtonSize.Lg"">...</TailIconButton>
<TailIconButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"" Size=""Tail.Blazor.Button.ButtonSize.Xl"">...</TailIconButton>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Variant", Type = "Tail.Blazor.Button.ButtonVariant", Default = "Primary", Description = "Color variant" },
        new DocPageTemplate.ApiParameter { Name = "Size", Type = "Tail.Blazor.Button.ButtonSize", Default = "Md", Description = "Button size" },
        new DocPageTemplate.ApiParameter { Name = "Disabled", Type = "bool", Default = "false", Description = "Disable the button" },
        new DocPageTemplate.ApiParameter { Name = "IsLoading", Type = "bool", Default = "false", Description = "Show loading spinner" },
        new DocPageTemplate.ApiParameter { Name = "OnClick", Type = "EventCallback<MouseEventArgs>", Default = "-", Description = "Click event handler" },
        new DocPageTemplate.ApiParameter { Name = "StopPropagation", Type = "bool", Default = "false", Description = "Stop event propagation" },
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Icon content (typically SVG)" }
    };

    private void ShowMessage(string msg)
    {
        message = msg;
        StateHasChanged();
    }
}

