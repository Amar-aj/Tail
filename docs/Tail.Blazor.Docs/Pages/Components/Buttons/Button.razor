            <PreviewContent>
                <div class="flex flex-wrap gap-3">
                    <TailButton Variant="ButtonVariant.Primary" AnimationDuration="duration-100">
                        Fast (100ms)
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Primary" AnimationDuration="duration-200">
                        Normal (200ms)
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Primary" AnimationDuration="duration-500">
                        Slow (500ms)
                    </TailButton>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <!-- Real-World Examples Section -->
    <DocSection Title="Real-World Examples">
        <CodePreview Title="Action Buttons in a Card" Code="@examplesCode">
