            <PreviewContent>
                <div class="space-y-3 max-w-md">
                    <TailButton Variant="ButtonVariant.Primary" FullWidth="true">
                        Full Width Button
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Outline" FullWidth="true">
                        Full Width Outline
                    </TailButton>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <!-- Tooltips Section -->
    <DocSection Title="Tooltips and Accessibility">
        <div style="color: var(--color-text-secondary); margin-bottom: 1rem;">
            <p>Add tooltips and ARIA labels for better accessibility and user experience.</p>
        </div>
        <CodePreview Title="Button with Tooltip" Code="@tooltipCode">
            <PreviewContent>
                <div class="flex flex-wrap gap-3">
                    <TailButton Variant="ButtonVariant.Primary" Tooltip="Click to submit the form">
                        Submit
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Danger" Tooltip="Permanently delete this item" AriaLabel="Delete item">
                        Delete
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Success" Tooltip="Save your changes" AriaLabel="Save">
                        Save
                    </TailButton>
