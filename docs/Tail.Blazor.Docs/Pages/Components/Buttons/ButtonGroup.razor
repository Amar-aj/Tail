@page "/components/button-group"
@using Tail.Blazor.ButtonGroup
@using Tail.Blazor.Button
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>ButtonGroup - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailButtonGroup" 
                 Description="Group related buttons together with seamless styling. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Buttons"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Button Group" Code="@basicCode">
            <PreviewContent>
                <TailButtonGroup>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Primary">Left</TailButton>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Primary">Middle</TailButton>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Primary">Right</TailButton>
                </TailButtonGroup>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Mixed Variants">
        <CodePreview Title="Mixed Variants" Code="@variantsCode">
            <PreviewContent>
                <TailButtonGroup>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Primary">Save</TailButton>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Success">Export</TailButton>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Warning">Edit</TailButton>
                    <TailButton Variant="Tail.Blazor.Button.ButtonVariant.Danger">Delete</TailButton>
                </TailButtonGroup>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Group related buttons together visually</li>
                <li>Seamless borders between buttons</li>
                <li>Rounded corners on first and last buttons</li>
                <li>Supports all button variants and sizes</li>
                <li>Full theme support with CSS variables</li>
                <li>Flexible layout and styling</li>
                <li>Works with any TailButton components</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.ButtonGroup";

    private string basicCode = @"<TailButtonGroup>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"">Left</TailButton>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"">Middle</TailButton>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"">Right</TailButton>
</TailButtonGroup>";

    private string variantsCode = @"<TailButtonGroup>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Primary"">Save</TailButton>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Success"">Export</TailButton>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Warning"">Edit</TailButton>
    <TailButton Variant=""Tail.Blazor.Button.ButtonVariant.Danger"">Delete</TailButton>
</TailButtonGroup>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Button components to group together" },
        new DocPageTemplate.ApiParameter { Name = "Vertical", Type = "bool", Default = "false", Description = "Display buttons vertically instead of horizontally" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" }
    };
}
