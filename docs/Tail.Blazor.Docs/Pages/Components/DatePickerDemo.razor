@page "/components/datepicker"
@using Tail.Blazor.Forms
@using Tail.Blazor.Docs.Shared

<PageTitle>Date & Time Pickers - Tail.Blazor</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-2" style="color: var(--color-text-primary)">Date & Time Pickers</h1>
    <p class="text-lg mb-8" style="color: var(--color-text-secondary)">
        Comprehensive date and time picker components with two-way data binding, multiple selection modes, customizable UI, and full theme support.
    </p>

    <!-- Features Overview -->
    <section class="mb-12">
        <div class="grid md:grid-cols-2 gap-6">
            <div class="p-6 rounded-lg shadow-md" style="background-color: var(--color-surface); border: 1px solid var(--color-border)">
                <h3 class="text-xl font-semibold mb-4" style="color: var(--color-text-primary)">‚ú® Key Features</h3>
                <ul class="space-y-2" style="color: var(--color-text-secondary)">
                    <li>‚úÖ Two-way data binding</li>
                    <li>üìÖ Calendar, Month, and Year views</li>
                    <li>üî¢ Single, Multiple, and Range selection modes</li>
                    <li>üö´ Disabled dates and special date highlighting</li>
                    <li>üìè Min/Max date restrictions</li>
                    <li>üé® Customizable UI (no button/no input)</li>
                    <li>üìù Custom input parsing</li>
                    <li>üéØ Custom footer templates</li>
                    <li>‚è∞ Time picker with 12/24 hour formats</li>
                    <li>üåô Full theme support</li>
                </ul>
            </div>

            <div class="p-6 rounded-lg shadow-md" style="background-color: var(--color-surface); border: 1px solid var(--color-border)">
                <h3 class="text-xl font-semibold mb-4" style="color: var(--color-text-primary)">üéØ Component Types</h3>
                <ul class="space-y-2" style="color: var(--color-text-secondary)">
                    <li><strong>TailDatePicker</strong> - Full-featured date picker</li>
                    <li><strong>TailTimePicker</strong> - Time-only picker (coming soon)</li>
                    <li><strong>TailDateTimePicker</strong> - Combined date & time (coming soon)</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Basic Date Picker -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Basic Date Picker</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Simple date picker with two-way data binding.
        </p>

        <CodePreview Title="Basic Date Selection" Code="@basicDateCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Select Date" 
                        Value="@selectedDate1"
                        ValueChanged="OnDateChanged1"
                        Placeholder="Choose a date..." />
                    @if (selectedDate1.HasValue)
                    {
                        <p class="text-sm" style="color: var(--color-text-secondary)">
                            Selected: <strong style="color: var(--color-text-primary)">@selectedDate1.Value.ToString("MMMM dd, yyyy")</strong>
                        </p>
                    }
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Multiple Date Selection -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Multiple Date Selection</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Select multiple dates by setting SelectionMode to Multiple.
        </p>

        <CodePreview Title="Multiple Date Selection" Code="@multipleDateCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Select Multiple Dates" 
                        SelectionMode="DateSelectionMode.Multiple"
                        Values="@selectedDates"
                        ValuesChanged="OnDatesChanged"
                        Placeholder="Choose dates..." />
                    @if (selectedDates != null && selectedDates.Any())
                    {
                        <div class="p-4 rounded-lg" style="background-color: var(--color-surface-2); border: 1px solid var(--color-border)">
                            <p class="text-sm font-semibold mb-2" style="color: var(--color-text-primary)">Selected Dates:</p>
                            <ul class="list-disc list-inside space-y-1 text-sm" style="color: var(--color-text-secondary)">
                                @foreach (var date in selectedDates.OrderBy(d => d))
                                {
                                    <li>@date.ToString("MMM dd, yyyy")</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Min/Max Date Restrictions -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Date Restrictions</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Restrict date selection with MinDate and MaxDate parameters.
        </p>

        <CodePreview Title="Min/Max Date Restrictions" Code="@minMaxDateCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Select Date (Next 30 Days Only)" 
                        Value="@selectedDate2"
                        ValueChanged="OnDateChanged2"
                        MinDate="@DateTime.Today"
                        MaxDate="@DateTime.Today.AddDays(30)"
                        Placeholder="Choose a date..." />
                    <p class="text-sm" style="color: var(--color-text-muted)">
                        Only dates from today to 30 days ahead are selectable.
                    </p>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Disabled Dates -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Disabled Dates</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Disable specific dates or use a function to determine disabled dates.
        </p>

        <CodePreview Title="Disabled Dates" Code="@disabledDatesCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Select Date (Weekends Disabled)" 
                        Value="@selectedDate3"
                        ValueChanged="OnDateChanged3"
                        IsDateDisabledFunc="@IsWeekend"
                        Placeholder="Choose a weekday..." />
                    <p class="text-sm" style="color: var(--color-text-muted)">
                        Weekends (Saturday and Sunday) are disabled.
                    </p>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Special Dates -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Special Dates</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Highlight special dates with visual indicators.
        </p>

        <CodePreview Title="Special Dates Highlighting" Code="@specialDatesCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Select Date" 
                        Value="@selectedDate4"
                        ValueChanged="OnDateChanged4"
                        SpecialDates="@specialDates"
                        Placeholder="Choose a date..." />
                    <p class="text-sm" style="color: var(--color-text-muted)">
                        Special dates (holidays) are highlighted with a ring.
                    </p>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Year/Month Selection -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Year and Month Selection</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Navigate through years and months with dedicated views. Configure year range for initial view.
        </p>

        <CodePreview Title="Year Range Configuration" Code="@yearRangeCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Select Date" 
                        Value="@selectedDate5"
                        ValueChanged="OnDateChanged5"
                        YearRangeStart="2020"
                        YearRangeEnd="2030"
                        InitialViewDate="@initialViewDate"
                        Placeholder="Choose a date..." />
                    <p class="text-sm" style="color: var(--color-text-muted)">
                        Year range is limited to 2020-2030. Click on month/year headers to navigate.
                    </p>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Customizable UI -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Customizable UI</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Show or hide input box and button. Use button-only mode for custom layouts.
        </p>

        <CodePreview Title="Button-Only Mode" Code="@buttonOnlyCode">
            <PreviewContent>
                <div class="max-w-md space-y-4">
                    <TailDatePicker 
                        Label="Button Only" 
                        Value="@selectedDate6"
                        ValueChanged="OnDateChanged6"
                        ShowInput="false"
                        ShowButton="true"
                        Placeholder="Click to select..." />
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Custom Footer -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4" style="color: var(--color-text-primary)">Custom Footer Template</h2>
        <p class="mb-6" style="color: var(--color-text-secondary)">
            Add custom footer content with FooterTemplate or use the default footer with ShowFooter.
        </p>

        <CodePreview Title="Custom Footer" Code="@customFooterCode">
            <PreviewContent>
