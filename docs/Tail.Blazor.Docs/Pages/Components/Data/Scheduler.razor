@page "/components/scheduler"
@using Tail.Blazor.Scheduler
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Scheduler - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailScheduler</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Calendar and event scheduler component. Ultra-lightweight (~15 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Scheduler" Code="@basicCode">
            <PreviewContent>
                <TailScheduler Events="@events" OnEventClick="HandleEventClick" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> events = new();
    private string installCode = @"dotnet add package Tail.Blazor.Scheduler";
    private string basicCode = @"<TailScheduler Events=""@events"" OnEventClick=""HandleEventClick"" />";
    
    private void HandleEventClick(object eventItem)
    {
        // Handle event click
    }
}

