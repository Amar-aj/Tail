@page "/components/virtual-scroll"
@using Tail.Blazor.VirtualScroll
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>VirtualScroll - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailVirtualScroll</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Virtual scrolling for large lists. Ultra-lightweight (~8 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Virtual Scroll" Code="@basicCode">
            <PreviewContent>
                <TailVirtualScroll Items="@virtualItems" ItemHeight="50" VisibleCount="10">
                    <ItemTemplate>
                        <div class="p-2">@context</div>
                    </ItemTemplate>
                </TailVirtualScroll>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<string> virtualItems = Enumerable.Range(1, 1000).Select(i => $"Item {i}").ToList();
    private string installCode = @"dotnet add package Tail.Blazor.VirtualScroll";
    private string basicCode = @"<TailVirtualScroll Items=""@virtualItems"" ItemHeight=""50"" VisibleCount=""10"">
    <ItemTemplate>
        <div class=""p-2"">@context</div>
    </ItemTemplate>
</TailVirtualScroll>";
}

