@page "/components/data-grid"
@using Tail.Blazor.DataGrid
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>DataGrid - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailDataGrid</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Advanced data grid with sorting, filtering, and paging. Ultra-lightweight (~25 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="DataGrid" Code="@basicCode">
            <PreviewContent>
                <TailDataGrid Data="@gridData" Columns="@columns" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> gridData = new();
    private List<TailDataGrid<object>.DataGridColumn<object>> columns = new();
    
    private string installCode = @"dotnet add package Tail.Blazor.DataGrid";
    private string basicCode = @"<TailDataGrid Data=""@gridData"" Columns=""@columns"" />";
}

