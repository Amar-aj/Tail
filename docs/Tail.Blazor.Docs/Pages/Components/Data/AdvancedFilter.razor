@page "/components/advanced-filter"
@using Tail.Blazor.AdvancedFilter
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>AdvancedFilter - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailAdvancedFilter</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Advanced filtering component. Ultra-lightweight (~10 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Advanced Filter" Code="@basicCode">
            <PreviewContent>
                <TailAdvancedFilter Filters="@filters" OnFilterChanged="HandleFilterChanged" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> filters = new();
    private string installCode = @"dotnet add package Tail.Blazor.AdvancedFilter";
    private string basicCode = @"<TailAdvancedFilter Filters=""@filters"" OnFilterChanged=""HandleFilterChanged"" />";
    
    private void HandleFilterChanged(List<object> newFilters)
    {
        filters = newFilters;
        StateHasChanged();
    }
}

