@page "/components/advanced-filter"
@using Tail.Blazor.AdvancedFilter
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Alert
@using Microsoft.AspNetCore.Components

<PageTitle>AdvancedFilter - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailAdvancedFilter" 
                 Description="Advanced filtering component for building complex filter criteria with field, operator, and value selection. Ultra-lightweight (~10 KB)."
                 PackageName="Tail.Blazor.Data"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Advanced Filter" Code="@basicCode">
            <PreviewContent>
                <TailAdvancedFilter Fields="@fields" OnFilterApplied="@((TailAdvancedFilter.FilterCriteria f) => HandleFilterApplied(f))" />
                @if (lastFilter != null)
                {
                    <TailAlert Variant="Tail.Blazor.Alert.AlertVariant.Info" Class="mt-4">
                        Filter: @lastFilter.Field @lastFilter.Operator "@lastFilter.Value"
                    </TailAlert>
                }
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Field selection dropdown</li>
                <li>Multiple operators (Equals, Contains, Starts With, Ends With)</li>
                <li>Filter value input</li>
                <li>Apply filter button</li>
                <li>Filter criteria event callback</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private List<string> fields = new() { "Name", "Email", "Status", "Date" };
    private TailAdvancedFilter.FilterCriteria? lastFilter = null;
    
    private string installCode = @"dotnet add package Tail.Blazor.AdvancedFilter";
    
    private string basicCode = @"<TailAdvancedFilter Fields=""@fields"" OnFilterApplied=""HandleFilterApplied"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Fields", Type = "List<string>", Default = "new()", Description = "List of field names available for filtering" },
        new DocPageTemplate.ApiParameter { Name = "OnFilterApplied", Type = "EventCallback<TailAdvancedFilter.FilterCriteria>", Default = "-", Description = "Event fired when filter is applied with filter criteria" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
    
    private void HandleFilterApplied(TailAdvancedFilter.FilterCriteria filter)
    {
        lastFilter = filter;
        StateHasChanged();
    }
}

