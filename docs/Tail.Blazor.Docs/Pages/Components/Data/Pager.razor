@page "/components/pager"
@using Tail.Blazor.Pager
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Pager - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailPager</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Pagination component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Pager" Code="@basicCode">
            <PreviewContent>
                <TailPager CurrentPage="2" TotalPages="10" TotalItems="100" PageSize="10" CurrentPageChanged="OnPageChanged" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Pager";
    private string basicCode = @"<TailPager CurrentPage=""2"" TotalPages=""10"" TotalItems=""100"" PageSize=""10"" CurrentPageChanged=""OnPageChanged"" />";
    
    private void OnPageChanged(int page)
    {
        // Handle page change
    }
}

