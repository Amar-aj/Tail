@page "/components/kanban-board"
@using Tail.Blazor.KanbanBoard
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>KanbanBoard - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailKanbanBoard</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Kanban board component. Ultra-lightweight (~12 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Kanban Board" Code="@basicCode">
            <PreviewContent>
                <TailKanbanBoard Columns="@kanbanColumns" OnCardMove="HandleCardMove" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> kanbanColumns = new();
    private string installCode = @"dotnet add package Tail.Blazor.KanbanBoard";
    private string basicCode = @"<TailKanbanBoard Columns=""@kanbanColumns"" OnCardMove=""HandleCardMove"" />";
    
    private void HandleCardMove(object card, string fromColumn, string toColumn)
    {
        // Handle card move
    }
}

