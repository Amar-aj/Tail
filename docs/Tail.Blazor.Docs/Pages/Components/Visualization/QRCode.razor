@page "/components/qr-code"
@using Tail.Blazor.QRCode
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>QRCode - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailQRCode" 
                 Description="QR code generator component for encoding text or URLs into QR codes. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Visualization"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="QR Code" Code="@basicCode">
            <PreviewContent>
                <TailQRCode Value="https://tailblazor.com" Size="200" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Generates QR codes from text or URLs</li>
                <li>SVG-based rendering</li>
                <li>Customizable size</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.QRCode";
    
    private string basicCode = @"<TailQRCode Value=""https://tailblazor.com"" Size=""200"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string", Default = "string.Empty", Description = "Text or URL to encode in the QR code" },
        new DocPageTemplate.ApiParameter { Name = "Size", Type = "int", Default = "200", Description = "Size of the QR code in pixels (width and height)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

