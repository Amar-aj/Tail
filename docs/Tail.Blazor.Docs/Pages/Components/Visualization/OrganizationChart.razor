@page "/components/organization-chart"
@using Tail.Blazor.OrganizationChart
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>OrganizationChart - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailOrganizationChart" 
                 Description="Organization chart component for displaying hierarchical organizational structures. Ultra-lightweight (~12 KB)."
                 PackageName="Tail.Blazor.Visualization"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Organization Chart" Code="@basicCode">
            <PreviewContent>
                <TailOrganizationChart RootNode="@rootNode" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Hierarchical organization chart display</li>
                <li>Tree-like structure with parent-child relationships</li>
                <li>Customizable node content</li>
                <li>Recursive rendering of child nodes</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode rootNode = new()
    {
        Name = "CEO",
        Children = new List<Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode>
        {
            new Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode { Name = "CTO", Children = new List<Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode> { new Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode { Name = "Dev Lead" } } },
            new Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode { Name = "CFO" }
        }
    };
    
    private string installCode = @"dotnet add package Tail.Blazor.OrganizationChart";
    
    private string basicCode = @"<TailOrganizationChart RootNode=""@rootNode"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "RootNode", Type = "Tail.Blazor.OrganizationChart.TailOrganizationChart.OrganizationNode", Default = "-", Description = "Root node of the organization chart with hierarchical children" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

