@page "/components/organization-chart"
@using Tail.Blazor.OrganizationChart
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>OrganizationChart - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailOrganizationChart</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Organization chart component. Ultra-lightweight (~12 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Organization Chart" Code="@basicCode">
            <PreviewContent>
                <TailOrganizationChart Data="@orgData" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> orgData = new();
    private string installCode = @"dotnet add package Tail.Blazor.OrganizationChart";
    private string basicCode = @"<TailOrganizationChart Data=""@orgData"" />";
}

