@page "/components/flowchart"
@using Tail.Blazor.Flowchart
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Flowchart - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailFlowchart</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Flowchart component. Ultra-lightweight (~15 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Flowchart" Code="@basicCode">
            <PreviewContent>
                <TailFlowchart Nodes="@flowchartNodes" Edges="@flowchartEdges" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> flowchartNodes = new();
    private List<object> flowchartEdges = new();
    private string installCode = @"dotnet add package Tail.Blazor.Flowchart";
    private string basicCode = @"<TailFlowchart Nodes=""@flowchartNodes"" Edges=""@flowchartEdges"" />";
}

