@page "/components/arc-gauge"
@using Tail.Blazor.ArcGauge
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>ArcGauge - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailArcGauge</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Arc gauge component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Arc Gauge" Code="@basicCode">
            <PreviewContent>
                <TailArcGauge Value="75" Max="100" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.ArcGauge";
    private string basicCode = @"<TailArcGauge Value=""75"" Max=""100"" />";
}

