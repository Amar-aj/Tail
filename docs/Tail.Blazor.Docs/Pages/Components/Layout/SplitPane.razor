@page "/components/split-pane"
@using Tail.Blazor.SplitPane
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>SplitPane - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailSplitPane" 
                 Description="Split pane component for dividing content into resizable panels. Ultra-lightweight (~6 KB)."
                 PackageName="Tail.Blazor.Layout"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Split Pane" Code="@basicCode">
            <PreviewContent>
                <div style="height: 200px; border: 1px solid var(--color-border); border-radius: 8px;">
                    <TailSplitPane SplitPercentage="30" Resizable="true">
                        <Pane1>
                            <div style="padding: 1rem; height: 100%; background-color: var(--color-surface-secondary); color: var(--color-text-primary);">
                                Left Panel
                            </div>
                        </Pane1>
                        <Pane2>
                            <div style="padding: 1rem; height: 100%; background-color: var(--color-surface); color: var(--color-text-primary);">
                                Right Panel
                            </div>
                        </Pane2>
                    </TailSplitPane>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Split layout with two panels</li>
                <li>Configurable split percentage</li>
                <li>Resizable divider (optional)</li>
                <li>Responsive layout support</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.SplitPane";
    
    private string basicCode = @"<TailSplitPane SplitPercentage=""30"" Resizable=""true"">
    <Pane1>
        <div>Left Panel</div>
    </Pane1>
    <Pane2>
        <div>Right Panel</div>
    </Pane2>
</TailSplitPane>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Pane1", Type = "RenderFragment?", Default = "-", Description = "Content for the left/first pane" },
        new DocPageTemplate.ApiParameter { Name = "Pane2", Type = "RenderFragment?", Default = "-", Description = "Content for the right/second pane" },
        new DocPageTemplate.ApiParameter { Name = "SplitPercentage", Type = "int", Default = "50", Description = "Percentage width of the first pane (0-100)" },
        new DocPageTemplate.ApiParameter { Name = "Resizable", Type = "bool", Default = "true", Description = "Allow resizing the split by dragging the divider" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

