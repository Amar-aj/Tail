@page "/components/grid"
@using Tail.Blazor.Grid
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Grid - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailGrid</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Responsive grid component. Ultra-lightweight (~4 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Grid" Code="@basicCode">
            <PreviewContent>
                <TailGrid Columns="3" Gap="4">
                    <div class="p-4 bg-gray-100 dark:bg-gray-800">Item 1</div>
                    <div class="p-4 bg-gray-100 dark:bg-gray-800">Item 2</div>
                    <div class="p-4 bg-gray-100 dark:bg-gray-800">Item 3</div>
                </TailGrid>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Grid";
    private string basicCode = @"<TailGrid Columns=""3"" Gap=""4"">
    <div>Item 1</div>
    <div>Item 2</div>
    <div>Item 3</div>
</TailGrid>";
}

