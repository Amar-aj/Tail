@page "/components/bottom-sheet"
@using Tail.Blazor.BottomSheet
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>BottomSheet - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailBottomSheet</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Bottom sheet component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Bottom Sheet" Code="@basicCode">
            <PreviewContent>
                <TailButton Variant="ButtonVariant.Primary" OnClick="OpenBottomSheet">Open Bottom Sheet</TailButton>
                <TailBottomSheet IsOpen="@isOpen" OnClose="CloseBottomSheet">
                    <p>Bottom sheet content</p>
                </TailBottomSheet>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private bool isOpen = false;
    private string installCode = @"dotnet add package Tail.Blazor.BottomSheet";
    private string basicCode = @"<TailBottomSheet IsOpen=""@isOpen"" OnClose=""CloseBottomSheet"">
    <p>Bottom sheet content</p>
</TailBottomSheet>";
    
    private void OpenBottomSheet() => isOpen = true;
    private void CloseBottomSheet() => isOpen = false;
}

