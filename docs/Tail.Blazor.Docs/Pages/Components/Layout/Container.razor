@page "/components/container"
@using Tail.Blazor.Container
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Container - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailContainer</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Container component with responsive sizes. Ultra-lightweight (~2 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Container" Code="@basicCode">
            <PreviewContent>
                <TailContainer Size="ContainerSize.Lg">
                    <p>Container content</p>
                </TailContainer>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Container";
    private string basicCode = @"<TailContainer Size=""ContainerSize.Lg"">
    <p>Container content</p>
</TailContainer>";
}

