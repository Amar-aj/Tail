@page "/components/panel"
@using Tail.Blazor.Panel
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>Panel - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailPanel" 
                 Description="Panel component with color variants for displaying grouped content. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Layout"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Panel" Code="@basicCode">
            <PreviewContent>
                <TailPanel Title="Panel Title" Variant="@Tail.Blazor.Panel.PanelVariant.Default">
                    <p style="color: var(--color-text-primary);">Panel content goes here.</p>
                </TailPanel>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Variants">
        <CodePreview Title="Panel Variants" Code="@variantsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailPanel Title="Success Panel" Variant="@Tail.Blazor.Panel.PanelVariant.Success">
                        <p style="color: var(--color-text-primary);">This is a success panel.</p>
                    </TailPanel>
                    <TailPanel Title="Warning Panel" Variant="@Tail.Blazor.Panel.PanelVariant.Warning">
                        <p style="color: var(--color-text-primary);">This is a warning panel.</p>
                    </TailPanel>
                    <TailPanel Title="Danger Panel" Variant="@Tail.Blazor.Panel.PanelVariant.Danger">
                        <p style="color: var(--color-text-primary);">This is a danger panel.</p>
                    </TailPanel>
                    <TailPanel Title="Info Panel" Variant="@Tail.Blazor.Panel.PanelVariant.Info">
                        <p style="color: var(--color-text-primary);">This is an info panel.</p>
                    </TailPanel>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Panel component with color variants</li>
                <li>Multiple variants (Default, Success, Warning, Danger, Info)</li>
                <li>Optional title section</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Panel";
    
    private string basicCode = @"<TailPanel Title=""Panel Title"" Variant=""Tail.Blazor.Panel.PanelVariant.Default"">
    <p>Panel content</p>
</TailPanel>";

    private string variantsCode = @"<TailPanel Title=""Success Panel"" Variant=""Tail.Blazor.Panel.PanelVariant.Success"">Content</TailPanel>
<TailPanel Title=""Warning Panel"" Variant=""Tail.Blazor.Panel.PanelVariant.Warning"">Content</TailPanel>
<TailPanel Title=""Danger Panel"" Variant=""Tail.Blazor.Panel.PanelVariant.Danger"">Content</TailPanel>
<TailPanel Title=""Info Panel"" Variant=""Tail.Blazor.Panel.PanelVariant.Info"">Content</TailPanel>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Content to display inside the panel" },
        new DocPageTemplate.ApiParameter { Name = "Title", Type = "string?", Default = "-", Description = "Title text displayed in the panel header" },
        new DocPageTemplate.ApiParameter { Name = "Variant", Type = "Tail.Blazor.Panel.PanelVariant", Default = "Default", Description = "Visual style variant (Default, Success, Warning, Danger, Info)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

