@page "/components/nav-menu"
@using Tail.Blazor.NavMenu
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Menu
@using Microsoft.AspNetCore.Components
@using NavMenuOrientation = Tail.Blazor.NavMenu.NavMenuOrientation

<PageTitle>NavMenu - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailNavMenu" 
                 Description="Navigation menu component for horizontal or vertical menu layouts. Ultra-lightweight (~5 KB)."
                 PackageName="Tail.Blazor.Layout"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Nav Menu" Code="@basicCode">
            <PreviewContent>
                <TailNavMenu Orientation="NavMenuOrientation.Horizontal">
                    <TailMenuItem>Home</TailMenuItem>
                    <TailMenuItem>About</TailMenuItem>
                    <TailMenuItem>Contact</TailMenuItem>
                </TailNavMenu>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Vertical Orientation">
        <CodePreview Title="Vertical Nav Menu" Code="@verticalCode">
            <PreviewContent>
                <TailNavMenu Orientation="NavMenuOrientation.Vertical">
                    <TailMenuItem>Home</TailMenuItem>
                    <TailMenuItem>About</TailMenuItem>
                    <TailMenuItem>Contact</TailMenuItem>
                </TailNavMenu>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Navigation menu container</li>
                <li>Horizontal or vertical orientation</li>
                <li>Flexible content layout</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.NavMenu";
    
    private string basicCode = @"<TailNavMenu Orientation=""NavMenuOrientation.Horizontal"">
    <TailMenuItem>Home</TailMenuItem>
    <TailMenuItem>About</TailMenuItem>
    <TailMenuItem>Contact</TailMenuItem>
</TailNavMenu>";

    private string verticalCode = @"<TailNavMenu Orientation=""NavMenuOrientation.Vertical"">
    <TailMenuItem>Home</TailMenuItem>
    <TailMenuItem>About</TailMenuItem>
    <TailMenuItem>Contact</TailMenuItem>
</TailNavMenu>";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Menu items to display (typically TailMenuItem components)" },
        new DocPageTemplate.ApiParameter { Name = "Orientation", Type = "NavMenuOrientation", Default = "Horizontal", Description = "Menu orientation (Horizontal or Vertical)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

