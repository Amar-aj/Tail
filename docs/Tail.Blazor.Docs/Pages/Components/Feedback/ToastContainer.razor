@page "/components/toast-container"
@using Tail.Blazor.ToastContainer
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>ToastContainer - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailToastContainer" 
                 Description="Toast container component for managing and displaying multiple toast notifications. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Feedback"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Toast Container" Code="@basicCode">
            <PreviewContent>
                <TailToastContainer @ref="toastContainer" Position="@Tail.Blazor.ToastContainer.ToastPosition.TopRight" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Container for managing multiple toast notifications</li>
                <li>6 position options (TopLeft, TopRight, TopCenter, BottomLeft, BottomRight, BottomCenter)</li>
                <li>Maximum toast limit configuration</li>
                <li>Programmatic toast addition and removal</li>
                <li>Stacked toast display</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private TailToastContainer? toastContainer;
    
    private string installCode = @"dotnet add package Tail.Blazor.ToastContainer";
    
    private string basicCode = @"<TailToastContainer @ref=""toastContainer"" Position=""Tail.Blazor.ToastContainer.ToastPosition.TopRight"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Position", Type = "Tail.Blazor.ToastContainer.ToastPosition", Default = "TopRight", Description = "Position of the toast container (TopLeft, TopRight, TopCenter, BottomLeft, BottomRight, BottomCenter)" },
        new DocPageTemplate.ApiParameter { Name = "MaxToasts", Type = "int", Default = "5", Description = "Maximum number of toasts to display at once" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

