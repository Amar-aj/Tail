@page "/components/notification-center"
@using Tail.Blazor.NotificationCenter
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>NotificationCenter - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailNotificationCenter</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Notification center component. Ultra-lightweight (~8 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Notification Center" Code="@basicCode">
            <PreviewContent>
                <TailNotificationCenter Notifications="@notifications" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> notifications = new();
    private string installCode = @"dotnet add package Tail.Blazor.NotificationCenter";
    private string basicCode = @"<TailNotificationCenter Notifications=""@notifications"" />";
}

