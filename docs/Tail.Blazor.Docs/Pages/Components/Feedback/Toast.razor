@page "/components/toast"
@using Tail.Blazor.Toast
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Button
@using Microsoft.AspNetCore.Components

<PageTitle>Toast - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailToast" 
                 Description="Toast notification component for displaying temporary messages. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Feedback"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Toast" Code="@basicCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailToast Message="Operation completed successfully!" Variant="Tail.Blazor.Toast.ToastVariant.Success" Title="Success" />
                    <TailToast Message="Please review your input." Variant="Tail.Blazor.Toast.ToastVariant.Warning" Title="Warning" />
                    <TailToast Message="An error occurred." Variant="Tail.Blazor.Toast.ToastVariant.Error" Title="Error" />
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Toast notification messages</li>
                <li>Multiple variants (Success, Warning, Error, Info)</li>
                <li>Optional title and message</li>
                <li>Auto-dismiss after specified time</li>
                <li>Dismissible with close button</li>
                <li>Optional icon display</li>
                <li>Custom icon support</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Toast";
    
    private string basicCode = @"<TailToast Message=""Operation completed successfully!"" Variant=""Tail.Blazor.Toast.ToastVariant.Success"" Title=""Success"" />
<TailToast Message=""Please review your input."" Variant=""Tail.Blazor.Toast.ToastVariant.Warning"" Title=""Warning"" />
<TailToast Message=""An error occurred."" Variant=""Tail.Blazor.Toast.ToastVariant.Error"" Title=""Error"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Message", Type = "string?", Default = "-", Description = "Main message text of the toast" },
        new DocPageTemplate.ApiParameter { Name = "Title", Type = "string?", Default = "-", Description = "Title text of the toast" },
        new DocPageTemplate.ApiParameter { Name = "Variant", Type = "Tail.Blazor.Toast.ToastVariant", Default = "Info", Description = "Visual style variant (Success, Warning, Error, Info)" },
        new DocPageTemplate.ApiParameter { Name = "Dismissible", Type = "bool", Default = "true", Description = "Show close button to dismiss the toast" },
        new DocPageTemplate.ApiParameter { Name = "ShowIcon", Type = "bool", Default = "true", Description = "Show icon corresponding to the variant" },
        new DocPageTemplate.ApiParameter { Name = "Icon", Type = "RenderFragment?", Default = "-", Description = "Custom icon to display" },
        new DocPageTemplate.ApiParameter { Name = "AutoDismissAfter", Type = "int?", Default = "5000", Description = "Auto-dismiss after milliseconds (null = no auto-dismiss)" },
        new DocPageTemplate.ApiParameter { Name = "OnDismiss", Type = "EventCallback", Default = "-", Description = "Event fired when toast is dismissed" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

