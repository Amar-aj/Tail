@page "/components/tour"
@using Tail.Blazor.Tour
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Tour - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailTour</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Tour/guide component. Ultra-lightweight (~10 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Tour" Code="@basicCode">
            <PreviewContent>
                <TailTour Steps="@tourSteps" IsActive="@isTourActive" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private bool isTourActive = false;
    private List<object> tourSteps = new();
    private string installCode = @"dotnet add package Tail.Blazor.Tour";
    private string basicCode = @"<TailTour Steps=""@tourSteps"" IsActive=""@isTourActive"" />";
}

