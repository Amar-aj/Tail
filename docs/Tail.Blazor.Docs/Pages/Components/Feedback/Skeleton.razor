@page "/components/skeleton"
@using Tail.Blazor.Skeleton
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>Skeleton - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailSkeleton" 
                 Description="Skeleton loading component for showing placeholder content while data loads. Ultra-lightweight (~2 KB)."
                 PackageName="Tail.Blazor.Feedback"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Skeleton" Code="@basicCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailSkeleton Type="@Tail.Blazor.Skeleton.SkeletonType.Text" Width="200" Height="20" />
                    <TailSkeleton Type="@Tail.Blazor.Skeleton.SkeletonType.Rectangle" Width="100" Height="100" />
                    <TailSkeleton Type="@Tail.Blazor.Skeleton.SkeletonType.Circle" Width="50" Height="50" />
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Skeleton loading placeholder</li>
                <li>Multiple types (Text, Rectangle, Circle)</li>
                <li>Customizable width and height</li>
                <li>Animated shimmer effect</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Skeleton";
    
    private string basicCode = @"<TailSkeleton Type=""Tail.Blazor.Skeleton.SkeletonType.Text"" Width=""200"" Height=""20"" />
<TailSkeleton Type=""Tail.Blazor.Skeleton.SkeletonType.Rectangle"" Width=""100"" Height=""100"" />
<TailSkeleton Type=""Tail.Blazor.Skeleton.SkeletonType.Circle"" Width=""50"" Height=""50"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Type", Type = "Tail.Blazor.Skeleton.SkeletonType", Default = "Rectangle", Description = "Type of skeleton (Text, Rectangle, Circle)" },
        new DocPageTemplate.ApiParameter { Name = "Width", Type = "int?", Default = "-", Description = "Width of the skeleton in pixels (optional, uses 100% for Text type)" },
        new DocPageTemplate.ApiParameter { Name = "Height", Type = "int?", Default = "-", Description = "Height of the skeleton in pixels" },
        new DocPageTemplate.ApiParameter { Name = "Animated", Type = "bool", Default = "true", Description = "Enable shimmer animation" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

