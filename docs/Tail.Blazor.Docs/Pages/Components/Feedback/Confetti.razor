@page "/components/confetti"
@using Tail.Blazor.Confetti
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Confetti - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailConfetti</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Confetti celebration component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Confetti" Code="@basicCode">
            <PreviewContent>
                <TailButton Variant="ButtonVariant.Primary" OnClick="TriggerConfetti">Celebrate!</TailButton>
                <TailConfetti Trigger="@confettiTrigger" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private bool confettiTrigger = false;
    private string installCode = @"dotnet add package Tail.Blazor.Confetti";
    private string basicCode = @"<TailConfetti Trigger=""@confettiTrigger"" />";
    
    private void TriggerConfetti()
    {
        confettiTrigger = !confettiTrigger;
    }
}

