@page "/components/sparkline"
@using Tail.Blazor.Sparkline
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Sparkline - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailSparkline</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Inline mini-chart component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Sparkline" Code="@basicCode">
            <PreviewContent>
                <TailSparkline Data="@sparklineData" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<int> sparklineData = new() { 10, 20, 15, 25, 30, 20, 35 };
    private string installCode = @"dotnet add package Tail.Blazor.Sparkline";
    private string basicCode = @"<TailSparkline Data=""@sparklineData"" />";
}

