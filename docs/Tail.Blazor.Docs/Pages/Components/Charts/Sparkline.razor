@page "/components/sparkline"
@using Tail.Blazor.Chart
@using Tail.Blazor.Docs.Shared

<PageTitle>Sparkline - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailSparkline" 
                 Description="Miniature inline chart component for trend visualization. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Charts"
                 ApiParameters="@apiParameters">
    
    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Sparkline" Code="@basicCode">
            <PreviewContent>
                <TailSparkline Data="@sparklineData" Width="200" Height="50" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Miniature inline chart for trend visualization</li>
                <li>SVG-based rendering</li>
                <li>Customizable width and height</li>
                <li>Compact design for inline use</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.Charts";

    private string basicCode = @"<TailSparkline Data=""@sparklineData"" Width=""100"" Height=""30"" />";

    private List<double> sparklineData = new() { 10, 20, 15, 25, 30, 20, 35 };

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Data", Type = "List<double>", Default = "new()", Description = "Data points for the sparkline" },
        new DocPageTemplate.ApiParameter { Name = "Width", Type = "int", Default = "100", Description = "Chart width in pixels" },
        new DocPageTemplate.ApiParameter { Name = "Height", Type = "int", Default = "30", Description = "Chart height in pixels" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

