@page "/components/chart"
@using Tail.Blazor.Chart
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Chart - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailChart</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Chart component with multiple chart types. Ultra-lightweight (~35 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Chart" Code="@basicCode">
            <PreviewContent>
                <TailChart Type="ChartType.Bar" Data="@chartData" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<object> chartData = new();
    private string installCode = @"dotnet add package Tail.Blazor.Chart";
    private string basicCode = @"<TailChart Type=""ChartType.Bar"" Data=""@chartData"" />";
}

