@page "/components/navigation"
@using Tail.Blazor.Navigation

<PageTitle>Navigation - Tail.Blazor</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-6">Navigation Components</h1>

    <div class="prose dark:prose-invert max-w-none">
        <h2>Tabs</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <TailTabs Tabs="@TabItems" ActiveTab="@ActiveTab" ActiveTabChanged="OnTabChanged" />
        </div>

        <h2>Breadcrumb</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <TailBreadcrumb Items="@BreadcrumbItems" />
        </div>

        <h2>Accordion</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <TailAccordion>
                <TailAccordionItem Title="Section 1" IsExpanded="true">
                    <p>Content for section 1</p>
                </TailAccordionItem>
                <TailAccordionItem Title="Section 2">
                    <p>Content for section 2</p>
                </TailAccordionItem>
            </TailAccordion>
        </div>

        <h2>Steps</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <TailSteps Steps="@StepItems" CurrentStep="2" />
        </div>

        <h2>Sidebar</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <div class="h-64 relative border border-gray-200 dark:border-gray-700 rounded">
                <TailSidebar IsCollapsed="false" Collapsible="true">
                    <HeaderContent>
                        <h3 class="text-lg font-semibold">Menu</h3>
                    </HeaderContent>
                    <ChildContent>
                        <TailMenu>
                            <TailMenuItem Text="Dashboard" />
                            <TailMenuItem Text="Settings" />
                            <TailMenuItem Text="Profile" />
                        </TailMenu>
                    </ChildContent>
                </TailSidebar>
            </div>
        </div>

        <h2>Menu</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <TailMenu>
                <TailMenuItem Text="Home" />
                <TailMenuItem Text="About" />
                <TailMenuItem Text="Contact" />
            </TailMenu>
        </div>

        <h2>Carousel</h2>
        <div class="bg-gray-50 dark:bg-gray-900 p-6 rounded-lg mb-6">
            <TailCarousel Slides="@CarouselSlides" AutoPlay="true" AutoPlayInterval="3000" ShowIndicators="true" ShowArrows="true" />
        </div>
    </div>
</div>

@code {
    private TabItem? ActiveTab { get; set; }
    private List<TabItem> TabItems { get; set; } = new()
    {
        new TabItem { Label = "Tab 1" },
        new TabItem { Label = "Tab 2" },
        new TabItem { Label = "Tab 3" }
    };

    private List<BreadcrumbItem> BreadcrumbItems { get; set; } = new()
    {
        new BreadcrumbItem { Text = "Home", Href = "/" },
        new BreadcrumbItem { Text = "Components", Href = "/components" },
        new BreadcrumbItem { Text = "Navigation" }
    };

    private List<StepItem> StepItems { get; set; } = new()
    {
        new StepItem { Title = "Step 1", Description = "First step" },
        new StepItem { Title = "Step 2", Description = "Second step" },
        new StepItem { Title = "Step 3", Description = "Third step" }
    };

    private List<CarouselSlide> CarouselSlides { get; set; } = new()
    {
        new CarouselSlide 
        { 
            Content = new RenderFragment(builder => 
            {
                builder.OpenElement(0, "div");
                builder.AddAttribute(1, "class", "h-48 flex items-center justify-center text-white text-2xl");
                builder.AddAttribute(2, "style", "background-color: #3b82f6;");
                builder.AddContent(3, "Slide 1");
                builder.CloseElement();
            })
        },
        new CarouselSlide 
        { 
            Content = new RenderFragment(builder => 
            {
                builder.OpenElement(0, "div");
                builder.AddAttribute(1, "class", "h-48 flex items-center justify-center text-white text-2xl");
                builder.AddAttribute(2, "style", "background-color: #10b981;");
                builder.AddContent(3, "Slide 2");
                builder.CloseElement();
            })
        },
        new CarouselSlide 
        { 
            Content = new RenderFragment(builder => 
            {
                builder.OpenElement(0, "div");
                builder.AddAttribute(1, "class", "h-48 flex items-center justify-center text-white text-2xl");
                builder.AddAttribute(2, "style", "background-color: #8b5cf6;");
                builder.AddContent(3, "Slide 3");
                builder.CloseElement();
            })
        }
    };

    private void OnTabChanged(TabItem tab)
    {
        ActiveTab = tab;
    }
}

