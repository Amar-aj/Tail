@page "/components/buttons"
@using Tail.Blazor.Buttons
@using Tail.Blazor.Docs.Shared

<PageTitle>Buttons - Tail.Blazor</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">Button Components</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        A comprehensive collection of professional button components with text, icons, images, multiple variants, sizes, and states.
    </p>

    <!-- Features Overview -->
    <section class="mb-12">
        <div class="grid md:grid-cols-2 gap-6">
            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">‚ú® Key Features</h3>
                <ul class="space-y-2 text-gray-600 dark:text-gray-400">
                    <li>‚úÖ Text, Icons, and Images support</li>
                    <li>üé® 9 variants (Primary, Success, Warning, Danger, Info, Outline, Soft, Ghost, Link)</li>
                    <li>üìè 5 sizes (Xs, Sm, Md, Lg, Xl)</li>
                    <li>üîÑ Loading states with dynamic text</li>
                    <li>üéØ Toggle buttons with visual feedback</li>
                    <li>üéà Floating Action Buttons (FAB)</li>
                    <li>üåô Full dark mode support</li>
                    <li>‚ôø Fully accessible</li>
                </ul>
            </div>

            <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">üéØ Component Types</h3>
                <ul class="space-y-2 text-gray-600 dark:text-gray-400">
                    <li><strong>TailButton</strong> - Standard button with all features</li>
                    <li><strong>TailToggleButton</strong> - Toggle on/off button</li>
                    <li><strong>TailIconButton</strong> - Icon-only square button</li>
                    <li><strong>TailFAB</strong> - Floating Action Button</li>
                    <li><strong>TailButtonGroup</strong> - Group related buttons</li>
                    <li><strong>TailSplitButton</strong> - Button with dropdown</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- TailButton - Primary Variants -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Button Variants</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            TailButton supports multiple visual styles including Primary, Success, Warning, Danger, and Info.
        </p>

        <CodePreview Title="Primary Button" Code="@primaryButtonCode">
            <PreviewContent>
                <div class="flex flex-wrap gap-3">
                    <TailButton Variant="ButtonVariant.Primary" OnClick="@(() => ShowMessage("Primary clicked"))">
                        Primary
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Success" OnClick="@(() => ShowMessage("Success clicked"))">
                        Success
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Warning" OnClick="@(() => ShowMessage("Warning clicked"))">
                        Warning
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Danger" OnClick="@(() => ShowMessage("Danger clicked"))">
                        Danger
                    </TailButton>
                    <TailButton Variant="ButtonVariant.Info" OnClick="@(() => ShowMessage("Info clicked"))">
                        Info
                    </TailButton>
                </div>
                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="mt-4 p-3 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 rounded-md">
                        @message
                    </div>
                }
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Button Sizes -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Button Sizes</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            Five different sizes available: Xs, Sm, Md, Lg, and Xl. Icons and images automatically scale with button size.
        </p>

        <CodePreview Title="Button Sizes" Code="@buttonSizesCode">
            <PreviewContent>
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">All Sizes</h3>
                        <div class="flex flex-wrap items-center gap-3">
                            <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Xs">Extra Small</TailButton>
                            <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Sm">Small</TailButton>
                            <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Md">Medium</TailButton>
                            <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Lg">Large</TailButton>
                            <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Xl">Extra Large</TailButton>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Sizes with Icons</h3>
                        <div class="flex flex-wrap items-center gap-3">
                            <TailButton Variant="ButtonVariant.Success" Size="ButtonSize.Xs" IconStart="@checkIcon">XS</TailButton>
                            <TailButton Variant="ButtonVariant.Success" Size="ButtonSize.Sm" IconStart="@checkIcon">SM</TailButton>
                            <TailButton Variant="ButtonVariant.Success" Size="ButtonSize.Md" IconStart="@checkIcon">MD</TailButton>
                            <TailButton Variant="ButtonVariant.Success" Size="ButtonSize.Lg" IconStart="@checkIcon">LG</TailButton>
                            <TailButton Variant="ButtonVariant.Success" Size="ButtonSize.Xl" IconStart="@checkIcon">XL</TailButton>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Sizes with Images</h3>
                        <div class="flex flex-wrap items-center gap-3">
                            <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" Size="ButtonSize.Xs" ImageStart="https://via.placeholder.com/24">XS</TailButton>
                            <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" Size="ButtonSize.Sm" ImageStart="https://via.placeholder.com/24">SM</TailButton>
                            <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" Size="ButtonSize.Md" ImageStart="https://via.placeholder.com/24">MD</TailButton>
                            <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" Size="ButtonSize.Lg" ImageStart="https://via.placeholder.com/24">LG</TailButton>
                            <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" Size="ButtonSize.Xl" ImageStart="https://via.placeholder.com/24">XL</TailButton>
                        </div>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Button States -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Button States</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            Buttons support loading and disabled states with dynamic text.
        </p>

        <CodePreview Title="Loading and Disabled States" Code="@buttonStatesCode">
            <PreviewContent>
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-3">
                        <TailButton Variant="ButtonVariant.Primary" Loading="@isLoading" LoadingText="Processing..." OnClick="SimulateLoading">
                            Click to Load
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Primary" Disabled="true">
                            Disabled Button
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Success" Loading="true" LoadingText="Saving...">
                            Save Changes
                        </TailButton>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <TailButton Variant="ButtonVariant.Danger" Loading="@isDeleting" LoadingText="Deleting..." OnClick="SimulateDelete">
                            Delete Item
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Info" Loading="true" LoadingText="Uploading...">
                            Upload File
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" Loading="@isSubmitting" LoadingText="Submitting..." OnClick="SimulateSubmit">
                            Submit Form
                        </TailButton>
                    </div>
                    <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                        <p class="text-sm text-blue-800 dark:text-blue-200">
                            <strong>Note:</strong> When <code class="text-xs">Loading</code> is true, the button shows a spinner and optionally displays custom <code class="text-xs">LoadingText</code>. 
                            If <code class="text-xs">LoadingText</code> is not provided, it shows the original button content.
                        </p>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Outline Buttons -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Outline Style</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            Outline buttons have transparent backgrounds with colored borders. Perfect for secondary actions.
        </p>

        <CodePreview Title="Outline Buttons" Code="@outlineButtonsCode">
            <PreviewContent>
                <div class="flex flex-wrap gap-3">
                    <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary">Primary Outline</TailButton>
                    <TailButton Variant="ButtonVariant.Outline" OutlineColor="success">Success Outline</TailButton>
                    <TailButton Variant="ButtonVariant.Outline" OutlineColor="warning">Warning Outline</TailButton>
                    <TailButton Variant="ButtonVariant.Outline" OutlineColor="danger">Danger Outline</TailButton>
                    <TailButton Variant="ButtonVariant.Outline" OutlineColor="info">Info Outline</TailButton>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Soft & Ghost Variants -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Soft & Ghost Variants</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            Soft buttons have subtle backgrounds, while Ghost buttons are completely transparent.
        </p>

        <CodePreview Title="Soft & Ghost Buttons" Code="@softGhostCode">
            <PreviewContent>
                <div class="space-y-4">
                    <div class="flex flex-wrap gap-3">
                        <TailButton Variant="ButtonVariant.Soft">Soft Primary</TailButton>
                        <TailButton Variant="ButtonVariant.Ghost">Ghost Primary</TailButton>
                        <TailButton Variant="ButtonVariant.Link">Link Style</TailButton>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Buttons with Icons and Images -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Buttons with Icons and Images</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            Add icons and images to buttons using IconStart/IconEnd and ImageStart/ImageEnd parameters. Supports both SVG strings/URLs and RenderFragment.
        </p>

        <CodePreview Title="Buttons with Icons" Code="@iconButtonsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Icons (Left/Right)</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailButton Variant="ButtonVariant.Primary" IconStart="@saveIcon">
                                Save
                            </TailButton>
                            <TailButton Variant="ButtonVariant.Success" IconEnd="@checkIcon">
                                Confirm
                            </TailButton>
                            <TailButton Variant="ButtonVariant.Danger" IconStart="@deleteIcon" IconEnd="@arrowIcon">
                                Delete
                            </TailButton>
                        </div>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" IconStart="@downloadIcon">
                            Download
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Outline" OutlineColor="success" IconEnd="@arrowRightIcon">
                            Continue
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Soft" IconStart="@uploadIcon">
                            Upload File
                        </TailButton>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Sm" IconStart="@plusIcon">
                            Add Item
                        </TailButton>
                        <TailButton Variant="ButtonVariant.Primary" Size="ButtonSize.Lg" IconStart="@starIcon">
                            Favorite
                        </TailButton>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>

        <CodePreview Title="Buttons with Images" Code="@imageButtonsCode">
            <PreviewContent>
                <div class="space-y-4">
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Images (Left/Right)</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailButton Variant="ButtonVariant.Primary" ImageStart="https://via.placeholder.com/24">
                                User Profile
                            </TailButton>
                            <TailButton Variant="ButtonVariant.Outline" OutlineColor="primary" ImageStart="https://via.placeholder.com/24">
                                Avatar Button
                            </TailButton>
                            <TailButton Variant="ButtonVariant.Soft" ImageStart="https://via.placeholder.com/24" ImageEnd="https://via.placeholder.com/24">
                                With Both Images
                            </TailButton>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Combined: Icons + Images + Text</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailButton Variant="ButtonVariant.Primary" IconStart="@starIcon" ImageEnd="https://via.placeholder.com/24">
                                Mixed Content
                            </TailButton>
                            <TailButton Variant="ButtonVariant.Success" ImageStart="https://via.placeholder.com/24" IconEnd="@checkIcon">
                                Image + Icon
                            </TailButton>
                        </div>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Icon Buttons -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Icon Buttons</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            TailIconButton for icon-only actions.
        </p>

        <CodePreview Title="Icon Buttons" Code="@iconButtonsCode">
            <PreviewContent>
                <div class="flex flex-wrap gap-3">
                    <TailIconButton Variant="ButtonVariant.Primary" Size="ButtonSize.Sm">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="ButtonVariant.Success" Size="ButtonSize.Md">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </TailIconButton>
                    <TailIconButton Variant="ButtonVariant.Danger" Size="ButtonSize.Lg">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </TailIconButton>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Toggle Button -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Toggle Button</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            TailToggleButton supports text, icons, and images. Perfect for on/off states, filters, and selection toggles.
        </p>

        <CodePreview Title="Toggle Buttons" Code="@toggleButtonCode">
            <PreviewContent>
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Basic Toggle</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailToggleButton Variant="ButtonVariant.Primary" @bind-IsToggled="toggle1">
                                Toggle Me
                            </TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Success" @bind-IsToggled="toggle2">
                                Success Toggle
                            </TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Danger" @bind-IsToggled="toggle3">
                                Danger Toggle
                            </TailToggleButton>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Toggle with Icons</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailToggleButton Variant="ButtonVariant.Primary" IconStart="@starIcon" @bind-IsToggled="toggle4">
                                Favorite
                            </TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Success" IconStart="@checkIcon" @bind-IsToggled="toggle5">
                                Enable
                            </TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Outline" OutlineColor="primary" IconStart="@heartIcon" @bind-IsToggled="toggle6">
                                Like
                            </TailToggleButton>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">Toggle with Images</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailToggleButton Variant="ButtonVariant.Primary" ImageStart="https://via.placeholder.com/24" @bind-IsToggled="toggle7">
                                User Profile
                            </TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Soft" ImageStart="https://via.placeholder.com/24" @bind-IsToggled="toggle8">
                                Avatar Toggle
                            </TailToggleButton>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">All Variants</h3>
                        <div class="flex flex-wrap gap-3">
                            <TailToggleButton Variant="ButtonVariant.Primary" @bind-IsToggled="toggle9">Primary</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Outline" OutlineColor="primary" @bind-IsToggled="toggle10">Outline</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Soft" @bind-IsToggled="toggle11">Soft</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Ghost" @bind-IsToggled="toggle12">Ghost</TailToggleButton>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">All Sizes</h3>
                        <div class="flex flex-wrap items-center gap-3">
                            <TailToggleButton Variant="ButtonVariant.Primary" Size="ButtonSize.Xs" @bind-IsToggled="toggle13">XS</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Primary" Size="ButtonSize.Sm" @bind-IsToggled="toggle14">SM</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Primary" Size="ButtonSize.Md" @bind-IsToggled="toggle15">MD</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Primary" Size="ButtonSize.Lg" @bind-IsToggled="toggle16">LG</TailToggleButton>
                            <TailToggleButton Variant="ButtonVariant.Primary" Size="ButtonSize.Xl" @bind-IsToggled="toggle17">XL</TailToggleButton>
                        </div>
                    </div>
                    
                    <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                        <h4 class="font-semibold text-blue-900 dark:text-blue-200 mb-2">Current Toggle States:</h4>
                        <div class="text-sm text-blue-700 dark:text-blue-300 space-y-1">
                            <div>Toggle 1: @(toggle1 ? "ON" : "OFF")</div>
                            <div>Toggle 2: @(toggle2 ? "ON" : "OFF")</div>
                            <div>Toggle 3: @(toggle3 ? "ON" : "OFF")</div>
                        </div>
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </section>

    <!-- Button Group -->
    <section class="mb-12">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Button Group</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
            Group related buttons together with TailButtonGroup.
        </p>

        <CodePreview Title="Button Group" Code="@buttonGroupCode">
            <PreviewContent>
                <TailButtonGroup>
                    <TailButton Variant="ButtonVariant.Primary">Left</TailButton>
                    <TailButton Variant="ButtonVariant.Primary">Middle</TailButton>
                    <TailButton Variant="ButtonVariant.Primary">Right</TailButton>
                </TailButtonGroup>
            </PreviewContent>
        </CodePreview>
    </section>

