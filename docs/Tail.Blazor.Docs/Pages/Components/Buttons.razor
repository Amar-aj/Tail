                            </TailFAB>
                            <TailFAB Variant="ButtonVariant.Info" Position="FABPosition.BottomLeft" Extended="true" Text="Profile" Image="https://via.placeholder.com/64">
                            </TailFAB>
                        </div>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3 text-gray-900 dark:text-white">All Sizes</h3>
                        <div class="flex flex-wrap items-center gap-4">
                            <div class="relative h-20 w-20 border border-gray-300 dark:border-gray-700 rounded">
                                <TailFAB Variant="ButtonVariant.Primary" Size="ButtonSize.Sm" Position="FABPosition.TopLeft">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                    </svg>
                                </TailFAB>
                            </div>
                            <div class="relative h-24 w-24 border border-gray-300 dark:border-gray-700 rounded">
