@page "/components/custom-validator"
@using Tail.Blazor.CustomValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>CustomValidator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailCustomValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Custom validation component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Custom Validator" Code="@basicCode">
            <PreviewContent>
                <TailCustomValidator Value="@customValue" Validate="@CustomValidation" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string customValue = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.CustomValidator";
    private string basicCode = @"<TailCustomValidator Value=""@customValue"" Validate=""@CustomValidation"" />";
    
    private bool CustomValidation(string value)
    {
        return !string.IsNullOrEmpty(value);
    }
}

