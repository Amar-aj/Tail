@page "/components/range-validator"
@using Tail.Blazor.RangeValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Numeric
@using Microsoft.AspNetCore.Components

<PageTitle>RangeValidator - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailRangeValidator" 
                 Description="Range validation component for validating numeric or string values within a specified range. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Validators"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Range Validator" Code="@basicCode">
            <PreviewContent>
                <TailNumeric @bind-Value="rangeValue" Label="Age (0-100)" Min="0" Max="100" />
                <TailRangeValidator Value="@((double?)rangeValue)" Min="0" Max="100" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Validates values within a specified range</li>
                <li>Configurable minimum and maximum values</li>
                <li>Works with numeric and string values</li>
                <li>Displays error message when validation fails</li>
                <li>Customizable error message</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private decimal rangeValue = 0;
    
    private string installCode = @"dotnet add package Tail.Blazor.RangeValidator";
    
    private string basicCode = @"<TailNumeric @bind-Value=""rangeValue"" Label=""Age"" Min=""0"" Max=""100"" />
<TailRangeValidator Value=""@rangeValue"" Min=""0"" Max=""100"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "double?", Default = "-", Description = "Numeric value to validate" },
        new DocPageTemplate.ApiParameter { Name = "Min", Type = "double", Default = "-", Description = "Minimum allowed value" },
        new DocPageTemplate.ApiParameter { Name = "Max", Type = "double", Default = "-", Description = "Maximum allowed value" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "-", Description = "Custom error message" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

