@page "/components/range-validator"
@using Tail.Blazor.RangeValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>RangeValidator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailRangeValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Range validation component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Range Validator" Code="@basicCode">
            <PreviewContent>
                <TailRangeValidator Value="@rangeValue" Min="0" Max="100" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private int rangeValue = 0;
    private string installCode = @"dotnet add package Tail.Blazor.RangeValidator";
    private string basicCode = @"<TailRangeValidator Value=""@rangeValue"" Min=""0"" Max=""100"" />";
}

