@page "/components/validator"
@using Tail.Blazor.Validator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Validator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Base validator component. Ultra-lightweight (~4 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Validator" Code="@basicCode">
            <PreviewContent>
                <TailValidator Value="@testValue" IsValid="@isValid" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string testValue = string.Empty;
    private bool isValid = true;
    private string installCode = @"dotnet add package Tail.Blazor.Validator";
    private string basicCode = @"<TailValidator Value=""@testValue"" IsValid=""@isValid"" />";
}

