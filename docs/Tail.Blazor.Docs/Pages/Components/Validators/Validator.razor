@page "/components/validator"
@using Tail.Blazor.Validator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Input
@using Microsoft.AspNetCore.Components

<PageTitle>Validator - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailValidator" 
                 Description="Base validator component for displaying validation errors. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Validators"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Validator" Code="@basicCode">
            <PreviewContent>
                <TailInput @bind-Value="testValue" Label="Test Input" />
                <TailValidator IsValid="@isValid" ErrorMessage="This field cannot be empty" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Base validator component for validation logic</li>
                <li>Displays error messages when validation fails</li>
                <li>Customizable error message</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string testValue = string.Empty;
    private bool isValid => !string.IsNullOrEmpty(testValue);
    
    private string installCode = @"dotnet add package Tail.Blazor.Validator";
    
    private string basicCode = @"<TailValidator Value=""@testValue"" IsValid=""@isValid"" ErrorMessage=""Validation failed"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "IsValid", Type = "bool?", Default = "-", Description = "Boolean indicating if the value is valid (null/true = valid, false = invalid)" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "-", Description = "Error message to display when validation fails" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

