@page "/components/required-validator"
@using Tail.Blazor.RequiredValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>RequiredValidator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailRequiredValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Required field validator. Ultra-lightweight (~2 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Required Validator" Code="@basicCode">
            <PreviewContent>
                <TailRequiredValidator Value="@requiredValue" ErrorMessage="This field is required" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string requiredValue = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.RequiredValidator";
    private string basicCode = @"<TailRequiredValidator Value=""@requiredValue"" ErrorMessage=""Required field"" />";
}

