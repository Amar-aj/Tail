@page "/components/regex-validator"
@using Tail.Blazor.RegexValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Input
@using Microsoft.AspNetCore.Components

<PageTitle>RegexValidator - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailRegexValidator" 
                 Description="Regular expression validation component for validating values against a regex pattern. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Validators"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Regex Validator" Code="@basicCode">
            <PreviewContent>
                <TailInput @bind-Value="regexValue" Label="Alphabetic Only" />
                <TailRegexValidator Value="@regexValue" Pattern="^[A-Za-z]+$" ErrorMessage="Only letters are allowed" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Validates values against a regular expression pattern</li>
                <li>Custom regex pattern support</li>
                <li>Displays error message when validation fails</li>
                <li>Customizable error message</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string regexValue = string.Empty;
    
    private string installCode = @"dotnet add package Tail.Blazor.RegexValidator";
    
    private string basicCode = @"<TailInput @bind-Value=""regexValue"" Label=""Alphabetic Only"" />
<TailRegexValidator Value=""@regexValue"" Pattern=""^[A-Za-z]+$"" ErrorMessage=""Only letters are allowed"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string?", Default = "-", Description = "Value to validate" },
        new DocPageTemplate.ApiParameter { Name = "Pattern", Type = "string", Default = "string.Empty", Description = "Regular expression pattern to match against" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "Value does not match the required pattern", Description = "Error message to display when validation fails" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

