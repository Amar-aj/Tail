@page "/components/regex-validator"
@using Tail.Blazor.RegexValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>RegexValidator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailRegexValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Regex validation component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Regex Validator" Code="@basicCode">
            <PreviewContent>
                <TailRegexValidator Value="@regexValue" Pattern="^[A-Za-z]+$" ErrorMessage="Invalid format" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string regexValue = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.RegexValidator";
    private string basicCode = @"<TailRegexValidator Value=""@regexValue"" Pattern=""^[A-Za-z]+$"" ErrorMessage=""Invalid format"" />";
}

