@page "/components/email-validator"
@using Tail.Blazor.EmailValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Input
@using Microsoft.AspNetCore.Components

<PageTitle>EmailValidator - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailEmailValidator" 
                 Description="Email validation component for validating email addresses. Ultra-lightweight (~2 KB)."
                 PackageName="Tail.Blazor.Validators"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Email Validator" Code="@basicCode">
            <PreviewContent>
                <TailInput @bind-Value="emailValue" Label="Email Address" Type="@Tail.Blazor.Input.InputType.Email" />
                <TailEmailValidator Value="@emailValue" ErrorMessage="Invalid email address" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Validates email address format using regex</li>
                <li>Displays error message when validation fails</li>
                <li>Customizable error message</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string emailValue = string.Empty;
    
    private string installCode = @"dotnet add package Tail.Blazor.EmailValidator";
    
    private string basicCode = @"<TailInput @bind-Value=""emailValue"" Label=""Email Address"" Type=""InputType.Email"" />
<TailEmailValidator Value=""@emailValue"" ErrorMessage=""Invalid email address"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string?", Default = "-", Description = "Email address value to validate" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "Please enter a valid email address", Description = "Error message to display when validation fails" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

