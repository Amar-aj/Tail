@page "/components/compare-validator"
@using Tail.Blazor.CompareValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>CompareValidator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailCompareValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Compare validation component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Compare Validator" Code="@basicCode">
            <PreviewContent>
                <TailCompareValidator Value="@compareValue" CompareTo="@compareToValue" Operator="CompareOperator.Equal" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string compareValue = string.Empty;
    private string compareToValue = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.CompareValidator";
    private string basicCode = @"<TailCompareValidator Value=""@compareValue"" CompareTo=""@compareToValue"" Operator=""CompareOperator.Equal"" />";
}

