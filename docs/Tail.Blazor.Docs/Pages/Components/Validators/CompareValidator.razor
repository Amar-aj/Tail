@page "/components/compare-validator"
@using Tail.Blazor.CompareValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Input
@using Microsoft.AspNetCore.Components
@using CompareOperator = Tail.Blazor.CompareValidator.CompareOperator

<PageTitle>CompareValidator - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailCompareValidator" 
                 Description="Compare validation component for comparing two values with various operators. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Validators"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Compare Validator" Code="@basicCode">
            <PreviewContent>
                <TailInput @bind-Value="password" Label="Password" Type="@Tail.Blazor.Input.InputType.Password" />
                <TailInput @bind-Value="confirmPassword" Label="Confirm Password" Type="@Tail.Blazor.Input.InputType.Password" />
                <TailCompareValidator Value="@password" CompareTo="@confirmPassword" Operator="CompareOperator.Equal" ErrorMessage="Passwords must match" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Compares two values using various operators</li>
                <li>Operators: Equal, NotEqual, GreaterThan, LessThan</li>
                <li>Displays error message when validation fails</li>
                <li>Customizable error message</li>
                <li>Useful for password confirmation, etc.</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string password = string.Empty;
    private string confirmPassword = string.Empty;
    
    private string installCode = @"dotnet add package Tail.Blazor.CompareValidator";
    
    private string basicCode = @"<TailInput @bind-Value=""password"" Label=""Password"" Type=""InputType.Password"" />
<TailInput @bind-Value=""confirmPassword"" Label=""Confirm Password"" Type=""InputType.Password"" />
<TailCompareValidator Value=""@password"" CompareTo=""@confirmPassword"" Operator=""CompareOperator.Equal"" ErrorMessage=""Passwords must match"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string?", Default = "-", Description = "First value to compare" },
        new DocPageTemplate.ApiParameter { Name = "CompareTo", Type = "string?", Default = "-", Description = "Second value to compare against" },
        new DocPageTemplate.ApiParameter { Name = "Operator", Type = "CompareOperator", Default = "Equal", Description = "Comparison operator (Equal, NotEqual, GreaterThan, LessThan)" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "-", Description = "Custom error message (default message is generated based on operator)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

