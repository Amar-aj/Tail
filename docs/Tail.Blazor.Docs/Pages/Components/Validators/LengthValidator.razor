@page "/components/length-validator"
@using Tail.Blazor.LengthValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>LengthValidator - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailLengthValidator</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Length validation component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Length Validator" Code="@basicCode">
            <PreviewContent>
                <TailLengthValidator Value="@lengthValue" MinLength="3" MaxLength="10" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string lengthValue = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.LengthValidator";
    private string basicCode = @"<TailLengthValidator Value=""@lengthValue"" MinLength=""3"" MaxLength=""10"" />";
}

