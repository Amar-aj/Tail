@page "/components/length-validator"
@using Tail.Blazor.LengthValidator
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Input
@using Microsoft.AspNetCore.Components

<PageTitle>LengthValidator - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailLengthValidator" 
                 Description="Length validation component for validating string length constraints. Ultra-lightweight (~3 KB)."
                 PackageName="Tail.Blazor.Validators"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Length Validator" Code="@basicCode">
            <PreviewContent>
                <TailInput @bind-Value="lengthValue" Label="Username (3-10 chars)" />
                <TailLengthValidator Value="@lengthValue" MinLength="3" MaxLength="10" />
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Validates minimum and/or maximum string length</li>
                <li>Configurable min and max length constraints</li>
                <li>Displays error message when validation fails</li>
                <li>Customizable error message</li>
                <li>Full theme support with CSS variables</li>
                <li>Lightweight and performant</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string lengthValue = string.Empty;
    
    private string installCode = @"dotnet add package Tail.Blazor.LengthValidator";
    
    private string basicCode = @"<TailInput @bind-Value=""lengthValue"" Label=""Username"" />
<TailLengthValidator Value=""@lengthValue"" MinLength=""3"" MaxLength=""10"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string?", Default = "-", Description = "Value to validate" },
        new DocPageTemplate.ApiParameter { Name = "MinLength", Type = "int?", Default = "-", Description = "Minimum allowed length" },
        new DocPageTemplate.ApiParameter { Name = "MaxLength", Type = "int?", Default = "-", Description = "Maximum allowed length" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "-", Description = "Custom error message (default message is generated based on min/max)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

