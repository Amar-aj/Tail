@page "/components/image-cropper"
@using Tail.Blazor.ImageCropper
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>ImageCropper - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailImageCropper</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Image cropping component. Ultra-lightweight (~8 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Image Cropper" Code="@basicCode">
            <PreviewContent>
                <TailImageCropper OnImageCropped="HandleCropped" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string installCode = @"dotnet add package Tail.Blazor.ImageCropper";
    private string basicCode = @"<TailImageCropper OnImageCropped=""HandleCropped"" />";
    
    private void HandleCropped(string imageData)
    {
        // Handle cropped image
    }
}

