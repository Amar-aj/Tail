@page "/components/file-upload"
@using Tail.Blazor.FileUpload
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>FileUpload - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailFileUpload</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">File upload component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="File Upload" Code="@basicCode">
            <PreviewContent>
                <TailFileUpload OnFileSelected="HandleFileSelected" Accept=".pdf,.doc,.docx" />
                @if (!string.IsNullOrEmpty(fileName))
                {
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Selected: @fileName</p>
                }
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string fileName = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.FileUpload";
    private string basicCode = @"<TailFileUpload OnFileSelected=""HandleFileSelected"" Accept="".pdf,.doc"" />";
    
    private void HandleFileSelected(string name)
    {
        fileName = name;
        StateHasChanged();
    }
}

