@page "/components/date-picker"
@using Tail.Blazor.DatePicker
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>DatePicker - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailDatePicker</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Date selection component. Ultra-lightweight (~8 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Date Picker" Code="@basicCode">
            <PreviewContent>
                <TailDatePicker @bind-Value="selectedDate" Label="Select Date" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Selected: @selectedDate?.ToString("yyyy-MM-dd")</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private DateTime? selectedDate = null;
    private string installCode = @"dotnet add package Tail.Blazor.DatePicker";
    private string basicCode = @"<TailDatePicker @bind-Value=""selectedDate"" Label=""Select Date"" />";
}

