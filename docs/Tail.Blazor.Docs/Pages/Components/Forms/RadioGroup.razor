@page "/components/radio-group"
@using Tail.Blazor.RadioGroup
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>RadioGroup - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailRadioGroup</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Radio button group component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Radio Group" Code="@basicCode">
            <PreviewContent>
                <TailRadioGroup @bind-Value="selectedValue" Options="@radioOptions" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Selected: @selectedValue</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string selectedValue = string.Empty;
    private List<string> radioOptions = new() { "Option 1", "Option 2", "Option 3" };
    private string installCode = @"dotnet add package Tail.Blazor.RadioGroup";
    private string basicCode = @"<TailRadioGroup @bind-Value=""selectedValue"" Options=""@radioOptions"" />";
}
