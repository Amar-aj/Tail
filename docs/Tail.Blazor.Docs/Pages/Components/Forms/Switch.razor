@page "/components/switch"
@using Tail.Blazor.Switch
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Switch - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailSwitch</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Toggle switch component. Ultra-lightweight (~2 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Switch" Code="@basicCode">
            <PreviewContent>
                <TailSwitch @bind-Value="isEnabled" Label="Enable notifications" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Enabled: @isEnabled</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private bool isEnabled = false;
    private string installCode = @"dotnet add package Tail.Blazor.Switch";
    private string basicCode = @"<TailSwitch @bind-Value=""isEnabled"" Label=""Enable notifications"" />";
}
