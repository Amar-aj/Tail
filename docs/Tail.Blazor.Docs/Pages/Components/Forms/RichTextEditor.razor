@page "/components/rich-text-editor"
@using Tail.Blazor.RichTextEditor
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>RichTextEditor - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailRichTextEditor</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Rich text editor component. Ultra-lightweight (~15 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Rich Text Editor" Code="@basicCode">
            <PreviewContent>
                <TailRichTextEditor @bind-Value="htmlContent" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string htmlContent = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.RichTextEditor";
    private string basicCode = @"<TailRichTextEditor @bind-Value=""htmlContent"" />";
}

