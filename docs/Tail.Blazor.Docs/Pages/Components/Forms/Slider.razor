@page "/components/slider"
@using Tail.Blazor.Slider
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Slider - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailSlider</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Range slider input component. Ultra-lightweight (~3 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Slider" Code="@basicCode">
            <PreviewContent>
                <TailSlider @bind-Value="sliderValue" Min="0" Max="100" Step="1" Label="Volume" ShowValue="true" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Value: @sliderValue</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private int sliderValue = 50;
    private string installCode = @"dotnet add package Tail.Blazor.Slider";
    private string basicCode = @"<TailSlider @bind-Value=""sliderValue"" Min=""0"" Max=""100"" Step=""1"" Label=""Volume"" ShowValue=""true"" />";
}

