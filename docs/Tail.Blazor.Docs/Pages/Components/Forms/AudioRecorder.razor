@page "/components/audio-recorder"
@using Tail.Blazor.AudioRecorder
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>AudioRecorder - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailAudioRecorder</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Audio recording component. Ultra-lightweight (~6 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Audio Recorder" Code="@basicCode">
            <PreviewContent>
                <TailAudioRecorder @bind-Value="audioData" OnRecordingComplete="HandleRecording" />
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string audioData = string.Empty;
    private string installCode = @"dotnet add package Tail.Blazor.AudioRecorder";
    private string basicCode = @"<TailAudioRecorder @bind-Value=""audioData"" OnRecordingComplete=""HandleRecording"" />";
    
    private void HandleRecording(string data)
    {
        audioData = data;
        StateHasChanged();
    }
}

