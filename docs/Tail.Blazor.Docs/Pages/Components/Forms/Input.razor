        <CodePreview Title="Input with Icons" Code="@iconsCode">
            <PreviewContent>
                <div class="space-y-4 max-w-md">
                    <TailInput @bind-Value="iconValue1" Placeholder="Search..." Label="Search">
                        <IconStart>
