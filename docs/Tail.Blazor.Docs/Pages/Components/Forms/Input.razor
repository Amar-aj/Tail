@page "/components/input"
@using Tail.Blazor.Input
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Input - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailInput</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        Text input component with validation support. Ultra-lightweight (~4 KB).
    </p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Text Input" Code="@basicCode">
            <PreviewContent>
                <TailInput @bind-Value="textValue" Placeholder="Enter text..." />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Value: @textValue</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Input Types</h2>
        <CodePreview Title="Different Input Types" Code="@typesCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailInput @bind-Value="emailValue" Type="email" Placeholder="Email address" />
                    <TailInput @bind-Value="passwordValue" Type="password" Placeholder="Password" />
                    <TailInput @bind-Value="numberValue" Type="number" Placeholder="Number" />
                    <TailInput @bind-Value="urlValue" Type="url" Placeholder="URL" />
                </div>
            </PreviewContent>
        </CodePreview>
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">States</h2>
        <CodePreview Title="Disabled and Readonly" Code="@statesCode">
            <PreviewContent>
                <div class="space-y-4">
                    <TailInput Value="Disabled input" Disabled="true" />
                    <TailInput Value="Readonly input" ReadOnly="true" />
                </div>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string textValue = string.Empty;
    private string emailValue = string.Empty;
    private string passwordValue = string.Empty;
    private string numberValue = string.Empty;
    private string urlValue = string.Empty;

    private string installCode = @"dotnet add package Tail.Blazor.Input";

    private string basicCode = @"<TailInput @bind-Value=""textValue"" Placeholder=""Enter text..."" />";

    private string typesCode = @"<TailInput @bind-Value=""emailValue"" Type=""email"" Placeholder=""Email"" />
<TailInput @bind-Value=""passwordValue"" Type=""password"" Placeholder=""Password"" />
<TailInput @bind-Value=""numberValue"" Type=""number"" Placeholder=""Number"" />
<TailInput @bind-Value=""urlValue"" Type=""url"" Placeholder=""URL"" />";

    private string statesCode = @"<TailInput Value=""Disabled input"" Disabled=""true"" />
<TailInput Value=""Readonly input"" ReadOnly=""true"" />";
}
