        <CodePreview Title="Install Package" Code="@installCode" ShowPreview="false" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Simple Text Input" Code="@basicCode">
            <PreviewContent>
                <div class="space-y-4 max-w-md">
                    <TailInput @bind-Value="textValue" Placeholder="Enter your name..." />
                    <p class="text-sm" style="color: var(--color-text-secondary)">Value: <strong style="color: var(--color-text-primary)">@(string.IsNullOrEmpty(textValue) ? "Empty" : textValue)</strong></p>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Variants">
        <CodePreview Title="Input Variants (Standard, Outlined, Filled)" Code="@variantsCode">
            <PreviewContent>
                <div class="space-y-6 max-w-md">
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: var(--color-text-primary)">Standard (Default)</label>
                        <TailInput @bind-Value="variantValue1" Placeholder="Standard variant" Variant="InputVariant.Standard" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: var(--color-text-primary)">Outlined</label>
                        <TailInput @bind-Value="variantValue2" Placeholder="Outlined variant" Variant="InputVariant.Outlined" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: var(--color-text-primary)">Filled</label>
                        <TailInput @bind-Value="variantValue3" Placeholder="Filled variant" Variant="InputVariant.Filled" />
                    </div>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Sizes">
        <CodePreview Title="Input Sizes" Code="@sizesCode">
            <PreviewContent>
                <div class="space-y-4 max-w-md">
                    <TailInput @bind-Value="sizeValue1" Placeholder="Extra Small" Size="InputSize.Xs" />
                    <TailInput @bind-Value="sizeValue2" Placeholder="Small" Size="InputSize.Sm" />
                    <TailInput @bind-Value="sizeValue3" Placeholder="Medium (Default)" Size="InputSize.Md" />
                    <TailInput @bind-Value="sizeValue4" Placeholder="Large" Size="InputSize.Lg" />
                    <TailInput @bind-Value="sizeValue5" Placeholder="Extra Large" Size="InputSize.Xl" />
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Input Types">
        <CodePreview Title="Different Input Types" Code="@typesCode">
            <PreviewContent>
                <div class="space-y-4 max-w-md">
                    <TailInput @bind-Value="emailValue" Type="InputType.Email" Placeholder="Email address" Label="Email" />
                    <TailInput @bind-Value="passwordValue" Type="InputType.Password" Placeholder="Password" Label="Password" />
                    <TailInput @bind-Value="numberValue" Type="InputType.Number" Placeholder="Number" Label="Number" Min="0" Max="100" Step="1" />
                    <TailInput @bind-Value="urlValue" Type="InputType.Url" Placeholder="https://example.com" Label="URL" />
                    <TailInput @bind-Value="telValue" Type="InputType.Tel" Placeholder="+1 (555) 123-4567" Label="Phone" />
                    <TailInput @bind-Value="searchValue" Type="InputType.Search" Placeholder="Search..." Label="Search" />
                    <TailInput @bind-Value="dateValue" Type="InputType.Date" Label="Date" />
                    <TailInput @bind-Value="timeValue" Type="InputType.Time" Label="Time" />
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Floating Labels">
        <CodePreview Title="Floating Labels" Code="@floatingLabelCode">
            <PreviewContent>
                <div class="space-y-6 max-w-md">
                    <TailInput @bind-Value="floatingValue1" Label="Username" FloatingLabel="true" Variant="InputVariant.Standard" />
                    <TailInput @bind-Value="floatingValue2" Label="Email Address" FloatingLabel="true" Type="InputType.Email" Variant="InputVariant.Outlined" />
                    <TailInput @bind-Value="floatingValue3" Label="Password" FloatingLabel="true" Type="InputType.Password" Variant="InputVariant.Filled" />
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

