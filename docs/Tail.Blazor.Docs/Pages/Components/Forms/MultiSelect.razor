@page "/components/multi-select"
@using Tail.Blazor.MultiSelect
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>MultiSelect - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailMultiSelect</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Multi-selection dropdown component. Ultra-lightweight (~6 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="MultiSelect" Code="@basicCode">
            <PreviewContent>
                <TailMultiSelect @bind-SelectedValues="selectedItems" Items="@options" Placeholder="Select items..." />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Selected: @string.Join(", ", selectedItems)</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private List<string> selectedItems = new();
    private List<MultiSelectItem> options = new() 
    { 
        new MultiSelectItem { Value = "1", Text = "Option 1" },
        new MultiSelectItem { Value = "2", Text = "Option 2" },
        new MultiSelectItem { Value = "3", Text = "Option 3" },
        new MultiSelectItem { Value = "4", Text = "Option 4" }
    };
    private string installCode = @"dotnet add package Tail.Blazor.MultiSelect";
    private string basicCode = @"<TailMultiSelect @bind-SelectedValues=""selectedItems"" Items=""@options"" Placeholder=""Select..."" />";
}

