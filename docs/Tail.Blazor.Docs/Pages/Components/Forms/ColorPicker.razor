@page "/components/color-picker"
@using Tail.Blazor.ColorPicker
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>ColorPicker - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailColorPicker</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Color selection component. Ultra-lightweight (~4 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Color Picker" Code="@basicCode">
            <PreviewContent>
                <TailColorPicker @bind-Value="selectedColor" />
                <div class="mt-4 w-20 h-20 rounded" style="background-color: @selectedColor"></div>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string selectedColor = "#3b82f6";
    private string installCode = @"dotnet add package Tail.Blazor.ColorPicker";
    private string basicCode = @"<TailColorPicker @bind-Value=""selectedColor"" />";
}

