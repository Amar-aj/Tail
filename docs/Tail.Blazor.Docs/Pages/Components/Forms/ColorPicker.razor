@page "/components/color-picker"
@using Tail.Blazor.ColorPicker
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>ColorPicker - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailColorPicker" 
                 Description="Color selection component with visual picker and hex input. Ultra-lightweight (~4 KB)."
                 PackageName="Tail.Blazor.Forms"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Color Picker" Code="@basicCode">
            <PreviewContent>
                <TailColorPicker @bind-Value="selectedColor" Label="Choose Color" />
                <div class="mt-4 flex items-center gap-4">
                    <div class="w-20 h-20 rounded border-2" style="background-color: @selectedColor; border-color: var(--color-border);"></div>
                    <p class="text-sm" style="color: var(--color-text-secondary);">Selected: @selectedColor</p>
                </div>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Native color picker input</li>
                <li>Hex color code input field</li>
                <li>Color preview display</li>
                <li>Two-way binding for color value</li>
                <li>Multiple sizes (Xs, Sm, Md, Lg, Xl)</li>
                <li>Label and help text support</li>
                <li>Show/hide preview option</li>
                <li>Disabled state support</li>
                <li>Full theme support with CSS variables</li>
                <li>Synchronized color picker and text input</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string? selectedColor = "#3b82f6";
    
    private string installCode = @"dotnet add package Tail.Blazor.ColorPicker";
    
    private string basicCode = @"<TailColorPicker @bind-Value=""selectedColor"" Label=""Choose Color"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string?", Default = "-", Description = "Selected color as hex string (two-way binding)" },
        new DocPageTemplate.ApiParameter { Name = "ValueChanged", Type = "EventCallback<string?>", Default = "-", Description = "Event fired when color changes" },
        new DocPageTemplate.ApiParameter { Name = "Size", Type = "ColorPickerSize", Default = "Md", Description = "Size of the color picker (Xs, Sm, Md, Lg, Xl)" },
        new DocPageTemplate.ApiParameter { Name = "Label", Type = "string?", Default = "-", Description = "Label text for the color picker" },
        new DocPageTemplate.ApiParameter { Name = "HelpText", Type = "string?", Default = "-", Description = "Helper text to display below the picker" },
        new DocPageTemplate.ApiParameter { Name = "ShowPreview", Type = "bool", Default = "true", Description = "Show color preview box" },
        new DocPageTemplate.ApiParameter { Name = "Disabled", Type = "bool", Default = "false", Description = "Disable the color picker" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}

