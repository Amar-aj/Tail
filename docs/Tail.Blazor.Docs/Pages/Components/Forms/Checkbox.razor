@page "/components/checkbox"
@using Tail.Blazor.Checkbox
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Checkbox - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailCheckbox</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Checkbox input component. Ultra-lightweight (~2 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Checkbox" Code="@basicCode">
            <PreviewContent>
                <TailCheckbox @bind-Value="isChecked" Label="Accept terms and conditions" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Checked: @isChecked</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private bool isChecked = false;
    private string installCode = @"dotnet add package Tail.Blazor.Checkbox";
    private string basicCode = @"<TailCheckbox @bind-Value=""isChecked"" Label=""Accept terms"" />";
}
