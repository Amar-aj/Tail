@page "/components/time-picker"
@using Tail.Blazor.TimePicker
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>TimePicker - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailTimePicker</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Time selection component. Ultra-lightweight (~6 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Time Picker" Code="@basicCode">
            <PreviewContent>
                <TailTimePicker @bind-Value="selectedTime" Label="Select Time" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Selected: @selectedTime?.ToString("HH:mm")</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private TimeSpan? selectedTime = null;
    private string installCode = @"dotnet add package Tail.Blazor.TimePicker";
    private string basicCode = @"<TailTimePicker @bind-Value=""selectedTime"" Label=""Select Time"" />";
}

