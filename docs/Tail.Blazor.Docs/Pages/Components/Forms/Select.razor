@page "/components/select"
@using Tail.Blazor.Select
@using Tail.Blazor.Docs.Shared
@using Microsoft.AspNetCore.Components

<PageTitle>Select - Tail.Blazor</PageTitle>

<DocPageTemplate Title="TailSelect" 
                 Description="Dropdown selection component with customizable options. Ultra-lightweight (~5 KB)."
                 PackageName="Tail.Blazor.Forms"
                 ApiParameters="@apiParameters">

    <DocSection Title="Installation">
        <CodePreview Title="Install Package" Code="@installCode" />
    </DocSection>

    <DocSection Title="Basic Usage">
        <CodePreview Title="Select" Code="@basicCode">
            <PreviewContent>
                <TailSelect @bind-Value="selectedValue" Items="@options" Placeholder="Select an option" />
                <p class="mt-2 text-sm" style="color: var(--color-text-secondary);">Selected: @selectedValue</p>
            </PreviewContent>
        </CodePreview>
    </DocSection>

    <DocSection Title="Features">
        <div style="color: var(--color-text-primary);">
            <ul style="list-style: disc; padding-left: 1.5rem; space-y-2;">
                <li>Dropdown selection with customizable options</li>
                <li>Two-way binding for selected value</li>
                <li>Placeholder text support</li>
                <li>Label support</li>
                <li>Disabled state support</li>
                <li>Search/filter functionality</li>
                <li>Multiple selection support</li>
                <li>Custom option rendering</li>
                <li>Full theme support with CSS variables</li>
                <li>Keyboard navigation</li>
            </ul>
        </div>
    </DocSection>
</DocPageTemplate>

@code {
    private string selectedValue = string.Empty;
    private List<Tail.Blazor.Select.SelectItem> options = new() 
    { 
        new Tail.Blazor.Select.SelectItem { Value = "1", Text = "Option 1" },
        new Tail.Blazor.Select.SelectItem { Value = "2", Text = "Option 2" },
        new Tail.Blazor.Select.SelectItem { Value = "3", Text = "Option 3" }
    };
    
    private string installCode = @"dotnet add package Tail.Blazor.Select";
    
    private string basicCode = @"<TailSelect @bind-Value=""selectedValue"" Items=""@options"" Placeholder=""Select an option"" />";

    private List<DocPageTemplate.ApiParameter> apiParameters = new()
    {
        new DocPageTemplate.ApiParameter { Name = "Value", Type = "string?", Default = "-", Description = "Selected value (two-way binding)" },
        new DocPageTemplate.ApiParameter { Name = "ValueChanged", Type = "EventCallback<string?>", Default = "-", Description = "Event fired when selection changes" },
        new DocPageTemplate.ApiParameter { Name = "Items", Type = "List<Tail.Blazor.Select.SelectItem>?", Default = "-", Description = "List of selectable items" },
        new DocPageTemplate.ApiParameter { Name = "Size", Type = "SelectSize", Default = "Md", Description = "Select size (Xs, Sm, Md, Lg, Xl)" },
        new DocPageTemplate.ApiParameter { Name = "Label", Type = "string?", Default = "-", Description = "Label text for the select" },
        new DocPageTemplate.ApiParameter { Name = "Placeholder", Type = "string?", Default = "-", Description = "Placeholder text when no option is selected" },
        new DocPageTemplate.ApiParameter { Name = "HelpText", Type = "string?", Default = "-", Description = "Helper text to display below the select" },
        new DocPageTemplate.ApiParameter { Name = "ErrorMessage", Type = "string?", Default = "-", Description = "Error message to display" },
        new DocPageTemplate.ApiParameter { Name = "Required", Type = "bool", Default = "false", Description = "Mark the select as required" },
        new DocPageTemplate.ApiParameter { Name = "Disabled", Type = "bool", Default = "false", Description = "Disable the select" },
        new DocPageTemplate.ApiParameter { Name = "ChildContent", Type = "RenderFragment?", Default = "-", Description = "Custom option elements (alternative to Items)" },
        new DocPageTemplate.ApiParameter { Name = "Style", Type = "string?", Default = "-", Description = "Additional inline styles" },
        new DocPageTemplate.ApiParameter { Name = "Class", Type = "string?", Default = "-", Description = "Additional CSS classes" }
    };
}
