@page "/components/select"
@using Tail.Blazor.Select
@using Tail.Blazor.Docs.Shared
@using Tail.Blazor.Layout
@using Tail.Blazor.Card
@using Microsoft.AspNetCore.Components

<PageTitle>Select - Tail.Blazor</PageTitle>

<TailContainer Size="ContainerSize.Xxl">
    <h1 class="text-4xl font-bold mb-2 text-gray-900 dark:text-white">TailSelect</h1>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">Dropdown selection component. Ultra-lightweight (~5 KB).</p>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Installation</h2>
        <CodePreview Title="Install Package" Code="@installCode" />
    </TailCard>

    <TailCard Class="mb-8">
        <h2 class="text-3xl font-bold mb-4 text-gray-900 dark:text-white">Basic Usage</h2>
        <CodePreview Title="Select" Code="@basicCode">
            <PreviewContent>
                <TailSelect @bind-Value="selectedValue" Items="@options" />
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Selected: @selectedValue</p>
            </PreviewContent>
        </CodePreview>
    </TailCard>
</TailContainer>

@code {
    private string selectedValue = string.Empty;
    private List<SelectItem> options = new() 
    { 
        new SelectItem { Value = "1", Text = "Option 1" },
        new SelectItem { Value = "2", Text = "Option 2" },
        new SelectItem { Value = "3", Text = "Option 3" }
    };
    private string installCode = @"dotnet add package Tail.Blazor.Select";
    private string basicCode = @"<TailSelect @bind-Value=""selectedValue"" Items=""@options"" />";
}
