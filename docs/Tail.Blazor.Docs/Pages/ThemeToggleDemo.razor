@page "/theme-toggle-demo"
@using Tail.Blazor.Core.Theme

<PageTitle>Theme Toggle Demo - Tail.Blazor</PageTitle>

<div class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-6 text-gray-900 dark:text-white">Theme Toggle Component</h1>

    <div class="prose dark:prose-invert max-w-none mb-8">
        <p class="text-lg text-gray-600 dark:text-gray-400">
            The TailThemeToggle component provides an easy way to switch between light and dark modes 
            with automatic local storage persistence and system preference detection.
        </p>
    </div>

    <!-- Features -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">? Features</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
                <li>? Automatic local storage persistence</li>
                <li>? System preference detection</li>
                <li>? Smooth animations</li>
                <li>? Multiple styles (Icon, Button, Outlined)</li>
                <li>? Customizable labels</li>
                <li>? Event callbacks</li>
            </ul>
        </div>

        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">?? Current Theme</h3>
            <div class="space-y-3">
                <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded">
                    <span class="font-medium">Mode:</span>
                    <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
                        @currentTheme
                    </span>
                </div>
                <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded">
                    <span class="font-medium">Changes:</span>
                    <span class="text-gray-600 dark:text-gray-400">@changeCount</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Examples -->
    <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Examples</h2>

    <div class="space-y-8">
        <!-- Icon Style -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Icon Style (Default)</h3>
            <div class="flex items-center space-x-4 mb-4">
                <TailThemeToggle OnThemeChanged="HandleThemeChanged" />
                <span class="text-gray-600 dark:text-gray-400">Click the icon to toggle theme</span>
            </div>
            <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto"><code class="text-sm">&lt;TailThemeToggle OnThemeChanged="HandleThemeChanged" /&gt;</code></pre>
        </div>

        <!-- Icon with Label -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Icon with Label</h3>
            <div class="flex items-center space-x-4 mb-4">
                <TailThemeToggle ShowLabel="true" OnThemeChanged="HandleThemeChanged" />
            </div>
            <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto"><code class="text-sm">&lt;TailThemeToggle ShowLabel="true" OnThemeChanged="HandleThemeChanged" /&gt;</code></pre>
        </div>

        <!-- Button Style -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Button Style</h3>
            <div class="flex items-center space-x-4 mb-4">
                <TailThemeToggle 
                    Style="ThemeToggleStyle.Button" 
                    ShowLabel="true"
                    OnThemeChanged="HandleThemeChanged" />
            </div>
            <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto"><code class="text-sm">&lt;TailThemeToggle 
    Style="ThemeToggleStyle.Button" 
    ShowLabel="true"
    OnThemeChanged="HandleThemeChanged" /&gt;</code></pre>
        </div>

        <!-- Outlined Style -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Outlined Style</h3>
            <div class="flex items-center space-x-4 mb-4">
                <TailThemeToggle 
                    Style="ThemeToggleStyle.Outlined" 
                    ShowLabel="true"
                    OnThemeChanged="HandleThemeChanged" />
            </div>
            <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto"><code class="text-sm">&lt;TailThemeToggle 
    Style="ThemeToggleStyle.Outlined" 
    ShowLabel="true"
    OnThemeChanged="HandleThemeChanged" /&gt;</code></pre>
        </div>

        <!-- Custom Labels -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Custom Labels</h3>
            <div class="flex items-center space-x-4 mb-4">
                <TailThemeToggle 
                    Style="ThemeToggleStyle.Button" 
                    ShowLabel="true"
                    LightModeLabel="?? Day"
                    DarkModeLabel="?? Night"
                    OnThemeChanged="HandleThemeChanged" />
            </div>
            <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto"><code class="text-sm">&lt;TailThemeToggle 
    Style="ThemeToggleStyle.Button" 
    ShowLabel="true"
    LightModeLabel="?? Day"
    DarkModeLabel="?? Night"
    OnThemeChanged="HandleThemeChanged" /&gt;</code></pre>
        </div>

        <!-- Custom Styling -->
        <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Custom Styling</h3>
            <div class="flex items-center space-x-4 mb-4">
                <TailThemeToggle 
                    CssClass="bg-gradient-to-r from-purple-500 to-pink-500 text-white hover:from-purple-600 hover:to-pink-600"
                    ShowLabel="true"
                    OnThemeChanged="HandleThemeChanged" />
            </div>
            <pre class="bg-gray-50 dark:bg-gray-900 p-4 rounded-lg overflow-x-auto"><code class="text-sm">&lt;TailThemeToggle 
    CssClass="bg-gradient-to-r from-purple-500 to-pink-500 text-white hover:from-purple-600 hover:to-pink-600"
    ShowLabel="true"
    OnThemeChanged="HandleThemeChanged" /&gt;</code></pre>
        </div>
    </div>

    <!-- API Reference -->
    <div class="mt-12 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">API Reference</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Parameter</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Default</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Description</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">ShowLabel</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">bool</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">false</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Show text label next to icon</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">Style</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">ThemeToggleStyle</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Icon</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Button style: Icon, Button, or Outlined</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">LightModeLabel</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">string?</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">"Light"</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Custom label for light mode</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">DarkModeLabel</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">string?</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">"Dark"</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Custom label for dark mode</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">OnThemeChanged</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">EventCallback&lt;ThemeMode&gt;</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">-</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Callback when theme changes</td>
                    </tr>
                    <tr>
                        <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-gray-100">CssClass</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">string?</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">null</td>
                        <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">Additional CSS classes</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private string currentTheme = "Light";
    private int changeCount = 0;

    private void HandleThemeChanged(ThemeMode mode)
    {
        currentTheme = mode.ToString();
        changeCount++;
        StateHasChanged();
    }
}
