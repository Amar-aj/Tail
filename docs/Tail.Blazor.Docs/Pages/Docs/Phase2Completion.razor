        <h2 class="text-3xl font-bold mb-6" style="color: var(--color-text-primary)">?? Live Component Demos</h2>
        
        <div class="space-y-8">
            <!-- Theme Control Demo -->
            <div class="p-6 rounded-lg border" style="background-color: var(--color-surface); border-color: var(--color-border); box-shadow: var(--shadow-md); border-radius: var(--radius-lg)">
                <h3 class="text-xl font-semibold mb-4" style="color: var(--color-text-primary)">TailThemeControl - Unified Component</h3>
                <div class="grid md:grid-cols-3 gap-4">
                    <div class="p-4 rounded-lg" style="background-color: var(--color-surface-2); border-radius: var(--radius-md)">
                        <div class="text-sm mb-2" style="color: var(--color-text-muted)">Inline Style</div>
                        <TailThemeControl Style="TailThemeControl.DisplayStyle.Inline" ShowModeToggle="true" ShowThemeSelector="true" />
