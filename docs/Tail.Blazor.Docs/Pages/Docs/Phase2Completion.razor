                <div class="grid md:grid-cols-2 gap-4">
                    <TailInput Value="@demoInput1" ValueChanged="@((string? val) => demoInput1 = val)" Label="Small Input" Size="InputSize.Sm" Placeholder="Focus me to see transition..." ShowClearButton="true" />
                    <TailInput Value="@demoInput2" ValueChanged="@((string? val) => demoInput2 = val)" Label="Medium Input" Size="InputSize.Md" Placeholder="With smooth transitions..." ShowClearButton="true" />
                    <TailInput Value="@demoInput3" ValueChanged="@((string? val) => demoInput3 = val)" Label="Large Input" Size="InputSize.Lg" Placeholder="Try typing something..." ShowClearButton="true" />
                    <TailInput Value="@demoInput4" ValueChanged="@((string? val) => demoInput4 = val)" Label="With Error" ErrorMessage="This field is required" Placeholder="Error state styling..." />
                </div>
            </div>
        </div>
    </section>

