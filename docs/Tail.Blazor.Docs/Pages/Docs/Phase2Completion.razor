                        <div class="text-sm mb-2" style="color: var(--color-text-muted)">With Name</div>
                        <TailThemeControl ShowModeToggle="true" ShowThemeSelector="true" ShowThemeName="true" />
                    </div>
                </div>
            </div>

            <!-- Card with Elevations -->
            <div class="p-6 rounded-lg border" style="background-color: var(--color-surface); border-color: var(--color-border); box-shadow: var(--shadow-md); border-radius: var(--radius-lg)">
                <h3 class="text-xl font-semibold mb-4" style="color: var(--color-text-primary)">TailCard - Surface Levels & Elevations</h3>
                <div class="grid md:grid-cols-3 gap-4">
                    <TailCard Header="Default Surface" Elevation="TailCard.CardElevation.Small" SurfaceLevel="TailCard.CardSurface.Default">
                        <p style="color: var(--color-text-secondary)">Small elevation, default surface</p>
                    </TailCard>
                    <TailCard Header="Elevated Surface" Elevation="TailCard.CardElevation.Medium" SurfaceLevel="TailCard.CardSurface.Elevated">
                        <p style="color: var(--color-text-secondary)">Medium elevation, elevated surface</p>
                    </TailCard>
                    <TailCard Header="Raised Surface" Elevation="TailCard.CardElevation.Large" SurfaceLevel="TailCard.CardSurface.Raised" Hoverable="true">
                        <p style="color: var(--color-text-secondary)">Large elevation, raised surface (hover me!)</p>
                    </TailCard>
                </div>
            </div>

            <!-- Input with Focus States -->
            <div class="p-6 rounded-lg border" style="background-color: var(--color-surface); border-color: var(--color-border); box-shadow: var(--shadow-md); border-radius: var(--radius-lg)">
