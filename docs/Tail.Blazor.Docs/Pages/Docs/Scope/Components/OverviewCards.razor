@using Tail.Blazor.Layout
@using Tail.Blazor.Panel

<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <TailPanel Variant="PanelVariant.Default" class="p-6">
        <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-primary);">97+</div>
            <div class="text-sm" style="color: var(--color-text-secondary);">Independent Packages</div>
            <div class="text-xs mt-1" style="color: var(--color-text-muted);">Each Component = NuGet Package</div>
        </div>
    </TailPanel>
    <TailPanel Variant="PanelVariant.Default" class="p-6">
        <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-success);">100+</div>
            <div class="text-sm" style="color: var(--color-text-secondary);">Components Implemented</div>
            <div class="text-xs mt-1" style="color: var(--color-text-muted);">Each as Independent Package</div>
        </div>
    </TailPanel>
    <TailPanel Variant="PanelVariant.Default" class="p-6">
        <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-warning);">86%</div>
            <div class="text-sm" style="color: var(--color-text-secondary);">Bundle Size Reduction</div>
            <div class="text-xs mt-1" style="color: var(--color-text-muted);">Single Component Usage</div>
        </div>
    </TailPanel>
    <TailPanel Variant="PanelVariant.Default" class="p-6">
        <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: var(--color-info);">80%</div>
            <div class="text-sm" style="color: var(--color-text-secondary);">Industry Coverage</div>
            <div class="text-xs mt-1" style="color: var(--color-text-muted);">Feature Completeness</div>
        </div>
    </TailPanel>
</div>

