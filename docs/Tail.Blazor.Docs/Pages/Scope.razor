            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                @foreach (var feature in MissingFeaturesLowPriority)
                {
                    <TailPanel Variant="PanelVariant.Default" class="p-4">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="text-xl">@feature.Icon</span>
                                    <h4 class="font-semibold" style="color: var(--color-text-primary);">
                                        @feature.Name
                                    </h4>
                                </div>
                                <p class="text-sm mb-2" style="color: var(--color-text-secondary);">
                                    @feature.Description
                                </p>
