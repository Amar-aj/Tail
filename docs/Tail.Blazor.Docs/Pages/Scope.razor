<PageTitle>Project Scope & Status - Tail.Blazor</PageTitle>

<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-4" style="color: var(--color-text-primary);">Project Scope & Status</h1>
        <p class="text-lg" style="color: var(--color-text-secondary);">
            Track the implementation progress and scope of the Tail.Blazor component library.
        </p>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <TailPanel Variant="PanelVariant.Default" class="p-6">
            <div class="text-center">
                <div class="text-3xl font-bold mb-2" style="color: var(--color-primary);">12</div>
                <div class="text-sm" style="color: var(--color-text-secondary);">NuGet Packages</div>
            </div>
        </TailPanel>
        <TailPanel Variant="PanelVariant.Default" class="p-6">
            <div class="text-center">
                <div class="text-3xl font-bold mb-2" style="color: var(--color-success);">100+</div>
                <div class="text-sm" style="color: var(--color-text-secondary);">Components Implemented</div>
            </div>
        </TailPanel>
        <TailPanel Variant="PanelVariant.Default" class="p-6">
            <div class="text-center">
                <div class="text-3xl font-bold mb-2" style="color: var(--color-warning);">30+</div>
                <div class="text-sm" style="color: var(--color-text-secondary);">Features Planned</div>
            </div>
        </TailPanel>
        <TailPanel Variant="PanelVariant.Default" class="p-6">
            <div class="text-center">
                <div class="text-3xl font-bold mb-2" style="color: var(--color-info);">80%</div>
                <div class="text-sm" style="color: var(--color-text-secondary);">Industry Coverage</div>
            </div>
        </TailPanel>
    </div>

    <!-- Missing Features - Priority Section -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4" style="color: var(--color-text-primary);">
            üéØ Missing Industry-Standard Features
        </h2>
        <div class="mb-4 p-4 rounded-lg" style="background-color: color-mix(in srgb, var(--color-warning) 10%, transparent); border-left: 4px solid var(--color-warning);">
            <p style="color: var(--color-text-primary);">
                <strong>Note:</strong> The following features are commonly found in enterprise-grade UI libraries and are recommended for a complete component ecosystem.
            </p>
        </div>

        <!-- High Priority Missing Features -->
        <div class="mb-6">
            <h3 class="text-xl font-semibold mb-3" style="color: var(--color-danger);">
                üî¥ High Priority (Essential for Enterprise Apps)
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                @foreach (var feature in MissingFeaturesHighPriority)
                {
                    <TailPanel Variant="PanelVariant.Default" class="p-4">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="text-xl">@feature.Icon</span>
                                    <h4 class="font-semibold" style="color: var(--color-text-primary);">
                                        @feature.Name
                                    </h4>
                                </div>
                                <p class="text-sm mb-2" style="color: var(--color-text-secondary);">
                                    @feature.Description
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    <span class="text-xs px-2 py-1 rounded" 
                                          style="background-color: color-mix(in srgb, var(--color-primary) 20%, transparent); color: var(--color-primary);">
                                        @feature.Category
                                    </span>
                                    <span class="text-xs px-2 py-1 rounded" 
                                          style="background-color: color-mix(in srgb, var(--color-danger) 20%, transparent); color: var(--color-danger);">
                                        Priority: @feature.Priority
                                    </span>
                                </div>
                            </div>
                        </div>
                    </TailPanel>
                }
            </div>
        </div>

        <!-- Medium Priority Missing Features -->
        <div class="mb-6">
            <h3 class="text-xl font-semibold mb-3" style="color: var(--color-warning);">
                üü° Medium Priority (Enhanced User Experience)
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                @foreach (var feature in MissingFeaturesMediumPriority)
                {
                    <TailPanel Variant="PanelVariant.Default" class="p-4">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="text-xl">@feature.Icon</span>
                                    <h4 class="font-semibold" style="color: var(--color-text-primary);">
                                        @feature.Name
                                    </h4>
                                </div>
                                <p class="text-sm mb-2" style="color: var(--color-text-secondary);">
                                    @feature.Description
                                </p>
                                <div class="flex flex-wrap gap-2">
                                    <span class="text-xs px-2 py-1 rounded" 
                                          style="background-color: color-mix(in srgb, var(--color-primary) 20%, transparent); color: var(--color-primary);">
                                        @feature.Category
                                    </span>
                                    <span class="text-xs px-2 py-1 rounded" 
                                          style="background-color: color-mix(in srgb, var(--color-warning) 20%, transparent); color: var(--color-warning);">
                                        Priority: @feature.Priority
                                    </span>
                                </div>
                            </div>
                        </div>
                    </TailPanel>
                }
            </div>
        </div>

        <!-- Low Priority Missing Features -->
        <div class="mb-6">
            <h3 class="text-xl font-semibold mb-3" style="color: var(--color-info);">
                üü¢ Low Priority (Nice to Have)
